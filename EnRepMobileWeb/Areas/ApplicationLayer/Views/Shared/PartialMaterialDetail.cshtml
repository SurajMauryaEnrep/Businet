<div class="modal-content">
    <div class="modal-header">
        <h2><span id=""> @Resource.Material @Resource.Detail</span></h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div class="row">
            <div class="col-md-3 col-sm-12">
                <label class="col-form-label label-align">@Resource.Dispatch @Resource.Number</label>
                <input autocomplete="off" class="form-control" id="txtMDispatchNo" name="DispatchNumber" placeholder="@Resource.Dispatch @Resource.Number" readonly="readonly" type="text" value="">
            </div>
            <div class="col-md-3 col-sm-12">
                <label class="col-form-label label-align">@Resource.Dispatch @Resource.Date </label>
                <input autocomplete="off" class="form-control" id="txtMDispatchDate" name="DispatchDate" placeholder="@Resource.Dispatch @Resource.Date" readonly="readonly" type="text" value="">
            </div>
            <div class="col-md-3 col-sm-12">
                <label class="col-form-label label-align">@Resource.Dispatch  @Resource.Quantity </label>
                <input autocomplete="off" class="form-control num_right" id="txtMDispatchQty" name="DispatchQuantity" placeholder="0000.00" readonly="readonly" type="text" value="">
            </div>
        </div>
        <div class="card-box table-responsive dy_table mt-3">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="TblDispatchRawMaterialDetail" data-order="" class="table table-striped table-bordered rowhighlighttbl">
                    <thead>
                        <tr class="sticky-header">
                            <th width="4%">@Resource.SrNo</th>
                            <th width="24%">@Resource.Material  @Resource.Name</th>
                            <th style="display:none;">@Resource.Material <br /> @Resource.Name</th>
                            <th width="15%">@Resource.UOM</th>
                            <th style="display:none;">@Resource.UOM</th>
                            <th width="33%">@Resource.Warehouse</th>
                            <th style="display:none;">@Resource.Warehouse</th>
                            <th width="24%">@Resource.Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*<tr>
                                <td>01</td>
                                <td>Material A</td>
                                <td>Kg</td>
                                <td class="num_right">10.00</td>
                                <td>Raw Material</td>
                            </tr>*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="">@Resource.Close</button>
        @*<button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="">@Resource.SaveAndExit</button>
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="">@Resource.DiscardAndExit</button>*@
    </div>
</div>