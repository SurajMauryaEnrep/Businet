@using EnRepMobileWeb.Resources;
@model EnRepMobileWeb.MODELS.ApplicationLayer.FixedAssetManagement.DepreciationProcess.DepreciationProcessList_Model
@using System.Data
@*@if (Session["UserId"] == null)
    {
        Response.Redirect("~/Login");
    }*@
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Css/build/js/sweetalert.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/FixedAssetManagement/DepreciationProcess/DepreciationProcess.js"></script>
<title>@Model.title</title>
<div class="row">
    <!-- Workflow Information -->
    <div id="WorkflowInformation" class="modal fade" role="dialog">
        <div class="modal-dialog" style="max-width:700px;">
            <div class="price_item_detail">
                <!-- Modal content-->
                @Html.Partial("~/Areas/Common/Views/_WorkFlow.cshtml")
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <h2 class="col-md-7 col-sm-12 heading_left_padding ">@ViewBag.MenuPageName</h2>
                <div id="wizard" class="form_wizard wizard_horizontal col-md-3 col-sm-12 work_flow">
                    @Html.Partial("~/Areas/Common/Views/_PartialWorkflowBar.cshtml")
                </div>
                @Html.HiddenFor(m => m.ListFilterData, new { @id = "ListFilterData" })
                @Html.HiddenFor(m => m.DocumentMenuId, new { @id = "DocumentMenuId" })
                @Html.HiddenFor(m => m.WF_status, new { @id = "WF_Status" })
                @*<ul>

                        <li>
                            <a class="tooltip-test"
                               title=" @Resource.AddNew" href="@Url.Action("AddDepreciationProcessDetail","DepreciationProcess")"><img src="~/Content/Images/addgreen.png" width="32" height="32" id="btn_add" alt="Add"></a>
                        </li>
                    </ul>*@
                @if (ViewBag.VBRoleList != null)
                {
                    foreach (System.Data.DataRow Row in ViewBag.VBRoleList.Rows)
                    {
                        if (Row["feature_id"].ToString() == "105106105001")
                        {
                            <div id="" class="col-md-2 col-sm-12 heading_right_padding">
                                <ul>
                                    <li>
                                        <a class="tooltip-test"
                                           title=" @Resource.AddNew" href="@Url.Action("AddDepreciationProcessDetail","DepreciationProcess")"><img src="~/Content/Images/addgreen.png" width="32" height="32" id="Btn_AddNewGRN" alt="Add"></a>
                                    </li>
                                </ul>
                            </div>
                        }
                    }
                }

                <div class="x_title pad_mar">
                    <div class="col-md-12 col-sm-12 icon_tool padding_zero">
                        <div class="col-md-12 col-sm-12 padding_zero mb-2">
                            <div class="col-md-3 col-sm-12">
                                <label class="col-form-label label-align">@Resource.Asset @Resource.Group</label>
                                @Html.DropDownListFor(model => model.AssetsGroupId,
                                                      new SelectList(Model.AssetsGroupList, "assetgrp_id", "assetgrp_name", Model.AssetsGroupId),
                                                      new { @class = "form-control", id = "ddlAssetGroup" })
                            </div>

                            <div class="col-md-55 col-sm-12 pl-0">
                                <label class="col-form-label label-align">
                                    @Resource.Status
                                </label>
                                @Html.DropDownListFor(model => model.DP_status, new SelectList(Model.statusLists, "status_id", "status_name"), new { @class = "form-control", id = "ddlStatus" })
                            </div>
                            <div class="col-md-1 col-sm-12 pl-0">
                                <button type="button" class="btn btn-primary btn-sm margintop20" id="Btn_Search" onclick="FilterDPList()"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12">
        <div id="" class="x_panel margin_top_zero">
            <div class="x_content">
                <div class="card-box table-responsive dy_table">
                    <div id="Tbl_list_FA_DP" class="sticky-table sticky-ltr-cells sb-container container-example1">
                        @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialDepreciationProcessList.cshtml")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
