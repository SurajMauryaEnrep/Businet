
@model EnRepMobileWeb.MODELS.ApplicationLayer.InventoryManagement.MaterialIssue.MaterialTransferIssue.MaterialTransferIssueListModel
@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/InventoryManagement/MaterialIssue/MaterialTransferIssue/MaterialTransferIssueList.js"></script>

<table id="datatable-buttons" class="table table-striped table-bordered width1800 rowhighlighttbl itmfrz">
    <thead>
        <tr class="sticky-header">
            <th width="3%">@Resource.SrNo</th>
            <th width="8%" class="itmStick">@Resource.Issue <br /> @Resource.Number</th>
            <th width="8%">@Resource.Issue <br />  @Resource.Date</th>
            <th style="display:none;">@Resource.IssueDate</th>
            <th width="8%">@Resource.Transfer <br />  @Resource.Type</th>
            <th style="display:none;">@Resource.TransferType</th>
            <th width="7%">@Resource.Requisition <br />  @Resource.Number</th>
            <th width="7%">@Resource.Requisition <br />  @Resource.Date</th>
            <th width="10%">@Resource.Source <br />  @Resource.Warehouse</th>
            <th width="7%">@Resource.Destination <br />  @Resource.Branch</th>
            <th width="7%">@Resource.Destination <br />  @Resource.Warehouse</th>
            <th width="7%">@Resource.Status</th>
            <th width="7%">@Resource.CreatedBy</th>
            <th width="7%">@Resource.Createdon</th>
            <th width="7%">@Resource.AmendedBy</th>
            <th width="7%">@Resource.AmendedOn</th>
            @*<th>@Resource.ApprovedOn</th>*@
            @*<th width="8%">@Resource.AmendedOn</th>*@
        </tr>
    </thead>
    <tbody id="">
        @if (Model.BindMTIList != null)
        {
            foreach (var row in Model.BindMTIList)
            {
                rowId++;
        <tr>
            <td>@rowId</td>
            <td id="MTINo" class="ItmNameBreak itmStick tditemfrz">@row.MTINo</td>
            <td>@row.MTIDate</td>
            <td style="display:none;" id="issue_date">@row.issue_date </td>
            <td>@row.TRFType</td>
            <td style="display:none;" id="trfType">@row.trfType </td>
            <td>@row.ReqNo</td>
            <td>@row.ReqDate</td>
            <td>@row.FromWH</td>
            <td>@row.ToBranch</td>
            <td>@row.ToWH</td>
            <td>@row.MTIList_Stauts</td>
            <td>@row.create_by</td>
            <td>@row.CreateDate</td>
            <td>@row.mod_by</td>
            <td>@row.mod_dt</td>
        </tr>
            }
        }
    </tbody>
</table>
@*@if (Session["MTISearch"] != null)*@
@if (Model.MTISearch != null)
{
    //if (Session["MTISearch"].ToString() == "MTI_Search")
    if (Model.MTISearch == "MTI_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        //Session["MTISearch"] = null;
        Model.MTISearch = null;
    }

}

