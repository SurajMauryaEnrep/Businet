@using EnRepMobileWeb.Resources;
<div class="modal-content">
    <div class="modal-header">
        <h2><span id="AddressInfo_LblName"> @Resource.Address</span></h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div id="AddressBody">
            @*<div class="tableFixHead height30VH margin10">
                <table class="table table-bordered " id="ItemDetailsTbl">
                    <thead>
                        <tr>*@
            <div class="card-box table-responsive dy_table">
                <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                    <table id="ItemDetailsTbl" data-order="" class="table table-striped table-bordered rowhighlighttbl">
                        <thead>
                            <tr class="sticky-header">
                                <th width="2%"></th>
                                <th width="3%">@Resource.SrNo</th>
                                <th width="3%" hidden></th>
                                <th width="20%">@Resource.Address</th>
                                <th width="10%">@Resource.Pin</th>
                                <th width="15%">@Resource.City</th>
                                <th width="15%">@Resource.District</th>
                                <th width="15%">@Resource.State</th>
                                <th hidden >@Resource.StateCode</th>
                                <th width="15%">@Resource.Country</th>
                                <th width="5%">@Resource.GSTNumber</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyAddressBodyNew" class="AddressBodyNew">
                            @if (ViewBag.VBAddresslist != null)
                            {
                                foreach (System.Data.DataRow item in ViewBag.VBAddresslist.Rows)
                                {
                                    <tr>

                                        <td><input type="radio" name="order_type" id="OrderTypeLocal" checked="checked" /> </td>
                                        <td>@item["SNo"].ToString()</td>
                                        @if (item["addr_type"].ToString() == "P")
                                        {
                                            <td hidden id="addhd"></td>
                                        }
                                        @if (item["addr_type"].ToString() == "C")
                                        {
                                            <td hidden id="addhd">@item["address_id"].ToString() </td>
                                        }
                                        <td id="cust_add">@item["cust_add"].ToString()</td>
                                        <td id="cust_pin">@item["cust_pin"].ToString()</td>
                                        <td id="city_name">@item["city_name"].ToString()</td>
                                        <td id="district_name">@item["district_name"].ToString()</td>
                                        <td id="state_name">@item["state_name"].ToString()</td>
                                        <td hidden id="state_Code">@item["state_code"].ToString()</td>
                                        <td id="country_name">@item["country_name"].ToString()</td>
                                        <td id="gst_number">@item["cust_gst_no"].ToString()</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="addrSaveAndExit" class="btn btn-primary btn-sm" data-dismiss="modal" onclick="OnClickClosebtn();">@Resource.SaveAndExit</button>
    </div>
</div>