@* Used in : Gate Pass Outward,Gate Pass Inward ,Material Issue(Sample Issue,Internal Issue,Externel Issue)  *@
<style>
    .table_border {
        border: 0.5px solid #000000;
    }

        .table_border > tbody > tr > td, .table_border > thead > tr > th {
            border: 0.5px solid #000000;
        }

    .td_border {
        border: 1px solid #000000;
    }

    .td_border_top {
        border-top: 1px solid #000000;
    }

    .td_border_left {
        border-left: 1px solid #000000;
    }

    .td_border_right {
        border-right: 1px solid #000000;
    }

    .td_border_rightpoint5 {
        border-right: 0.5px solid #000000;
    }

    .td_border_bottom {
        border-bottom: 1px solid #000000;
    }

    .td_border_bottom-top {
        border-bottom: 1px solid #000000;
        border-top: 1px solid #000000;
    }

    .suppInfo {
        font-size: 12px;
        font-weight: normal;
        padding: 0px 0px 0px 5px;
    }

        .suppInfo > tr > td {
            padding-right: 5px;
        }
</style>
@{
    string lpath = string.Empty;
    if (!string.IsNullOrEmpty(ViewBag.FLogoPath))
    {
        lpath = ViewBag.FLogoPath.ToString();
    }
}
<table style="width:850px; paddingleft:6px; paddingright:7px;">
    <tr>
        <td>
            <table cellpadding="0" cellspacing="0" width="100%">
                <tr>
                    <td style="width:83%;">
                        @*<img src="@Server.MapPath(@ViewBag.Details.Tables[0].Rows[0]["logo"].ToString())" alt="Logo" width="90" />*@
                        <img src="@lpath" alt="Logo" width="150" height="auto" />
                    </td>
                    <td style="font-size: 12px; font-weight:normal; width:17%; text-align:right;">@System.DateTime.Now.ToString("dd-MM-yyyy hh:mm tt")</td>
                </tr>
            </table>

        </td>
    </tr>
    @if (ViewBag.DocumentMenuId == "105102130101"|| ViewBag.DocumentMenuId == "105102130103" || ViewBag.DocumentMenuId == "105102101"
        || ViewBag.DocumentMenuId == "105102115130" || ViewBag.DocumentMenuId == "105102140")
    {
        <tr>
            <td style="font-size: 18px;text-align:center;font-weight: bold;padding: 0px 0px; text-decoration:underline;">@ViewBag.Details.Tables[0].Rows[0]["comp_nm"]</td>
        </tr>
    }
<tr>
    @if (ViewBag.DocumentMenuId == "105102130105")
    {
        <td style="font-size: 14px;text-align:center;font-weight: bold;padding: 0px 0px;">Delivery Challan</td>
    }
    else if (ViewBag.DocumentMenuId == "105102130101")
    {
        <td style="font-size: 12px;text-align:center;font-weight: bold;padding: 0px 0px;">Material Issue</td>
    }
    else if (ViewBag.DocumentMenuId == "105102130103")
    {
        <td style="font-size: 12px;text-align:center;font-weight: bold;padding: 0px 0px;">Material Transfer</td>
    }
    else if (ViewBag.DocumentMenuId == "105102101")
    {
        <td style="font-size: 12px;text-align:center;font-weight: bold;padding-top:5px;">Gate Pass Receipt</td>
    }
    else if (ViewBag.DocumentMenuId == "105102115130")
    {
        <td style="font-size: 12px;text-align:center;font-weight: bold;padding-top:5px;">External Receipt</td>
    }
    else if (ViewBag.DocumentMenuId == "105102140")
    {
<td style="font-size: 12px;text-align:center;font-weight: bold;padding-top:5px;">Material Transfer Requisition</td>
    }
    else
    {
        <td style="font-size: 12px;text-align:center;font-weight: bold;padding-top:5px;">Gate Pass</td>
    }
</tr>
        @if (ViewBag.DocumentMenuId == "105102105")
        {
            if (ViewBag.Details.Tables[1].Rows[0]["ReturnGpass"] != "" && ViewBag.Details.Tables[1].Rows[0]["ReturnGpass"] != null)
            {
                <tr>
                    <td style="font-size: 10px;text-align:center;font-weight: bold;"> ( @ViewBag.Details.Tables[1].Rows[0]["ReturnGpass"] ) </td>
                </tr>
            }
        }

        @*<tr>
                <td style="font-size: 14px;text-align:center;padding: 8px 0px; ">@ViewBag.Title</td>
            </tr>*@
        <tr>
            <td>
            </td>
        </tr>
    </table>
