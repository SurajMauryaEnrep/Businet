@using EnRepMobileWeb.Resources;
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.SubItem @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">

        <div class="col-md-8 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.Product @Resource.Name
            </label>
            <input id="txtItemName" class="form-control" autocomplete="off" type="text" name="ProductlName" placeholder="@Resource.Product @Resource.Name" disabled="">
        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.UOM
            </label>
            <input id="txtUom" class="form-control" autocomplete="off" type="text" name="serialUOM" placeholder="UOM" onblur="this.placeholder='UOM'" disabled="">
        </div>
        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="Sub_ItemDetailTbl" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="15%">@Resource.SrNo</th>
                            <th width="85%">@Resource.SubItem @Resource.Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.SubItmDtl != null)
                        {
                            foreach (System.Data.DataRow dr in ViewBag.SubItmDtl.Rows)
                            {
                                <tr>
                                    <td>@dr["SrNo"].ToString()</td>
                                    <td>@dr["sub_item_name"].ToString()</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
