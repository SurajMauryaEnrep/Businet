                    <tr class="headings">
                        <th width="40%">@Resource.InstrumentType</th>
                        <td>
                            <select class="form-control" id="GLAccount" name="CostCenter">
                                <option selected>Cheque</option>
                                <option>Dimand Draft</option>
                                <option>Digital Payment</option>
                                <option>Online Transfer</option>
                            </select>
                        </td>
                    </tr>
                    <tr class="headings">
                        <th width="40%">@Resource.InstrumentNumber</th>
                        <td><input id="InstrumentNumber" class="form-control optional" maxlength="20" autocomplete="off" name="InstrumentNumber" type="text" placeholder="198765677"></td>
                    </tr>
                    <tr class="headings">
                        <th width="40%">@Resource.InstrumentDate</th>
                        <td><input id="InstrumentDate" class="form-control optional right_aligh" maxlength="20" autocomplete="off" name="InstrumentDate" type="date" placeholder="20-12-2021"></td>
                    </tr>
                    <tr class="headings">
                        <th width="40%">@Resource.NameOnInstrument</th>
                        <td><input id="NameOnInstrument" class="form-control optional" maxlength="20" autocomplete="off" name="NameOnInstrument" type="text" placeholder="@Resource.NameOnInstrument"></td>
                    </tr>
