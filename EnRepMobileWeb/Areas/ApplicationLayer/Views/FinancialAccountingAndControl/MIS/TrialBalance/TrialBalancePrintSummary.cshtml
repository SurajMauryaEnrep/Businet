<style>
    .main_div {
        width: 100%;
        margin: 0px;
        padding: 0px;
        border: 1px;
        font-family: "Helvetica Neue",Roboto,Arial,"Droid Sans",sans-serif;
    }

    .left {
        width: 100%;
        margin: 0px;
        float: left;
    }

    .left_div {
        width: 100%;
        margin: 0px;
        float: left;
    }

    .table_border {
        border: 1px solid #dddddd;
    }

    .ffont {
        font-size: 12px;
        paddingtop: 5px;
        paddingbottom: 5px;
        paddingright: 10px;
    }
    .amount {
        text-align: center !important;
        font-size: 14px;
