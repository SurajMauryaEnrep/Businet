@model EnRepMobileWeb.MODELS.ApplicationLayer.SalesAndDistribution.CustomerPriceList.PriceListDetailModel
@using EnRepMobileWeb.Resources;
@using System.Data
@if (Session["UserId"] == null)
{
    Response.Redirect("~/Login");
}
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/SalesAndDistribution/CustomerPriceList/PriceList.js"></script>
<title>@Model.Title</title>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <div class=" pad_mar ">
                    <h2 class="col-md-5 col-sm-12 heading_left_padding ">@ViewBag.MenuPageName</h2>
                    <!-- Workflow Information -->
                    <div id="WorkflowInformation" class="modal fade" role="dialog">
                        <div class="modal-dialog" style="max-width:700px;">
                            <!-- Modal content-->
                            @Html.Partial("~/Areas/Common/Views/_WorkFlow.cshtml")

                        </div>
                    </div>
                    <!-- Smart Wizard -->
                    <div id="wizard" class="form_wizard wizard_horizontal col-md-3 col-sm-12 work_flow">
                        @Html.Partial("~/Areas/Common/Views/_PartialWorkflowBar.cshtml")
                    </div>
                    @Html.HiddenFor(model => model.WF_status, new { @id = "WF_status" })
                    <input type="hidden" id="DocumentMenuId" value="@ViewBag.DocumentMenuId" />
                    @if (ViewBag.VBRoleList != null)
                    {
                        foreach (System.Data.DataRow Row in ViewBag.VBRoleList.Rows)
                        {
                            if (Row["feature_id"].ToString() == "105103101001")
                            {
                                <div id="" class="col-md-4 col-sm-12 heading_right_padding">

                                    <ul>
                                        <li>
                                            <a class="tooltip-test"
                                               title="@Resource.AddNew" href="@Url.Action("AddNewCustomerPrice","CustomerPriceList")"><img src="~/Content/Images/addgreen.png" width="32" id="addNewItem" height="32" alt="Add"></a>
                                        </li>
                                    </ul>
                                </div>
                            }
                        }
                    }
                </div>
                <div class="x_title pad_mar ">
                    <div class="col-md-12 col-sm-12 icon_tool ">
                        <form class="available_stock pad_mar" action="" method="post" novalidate>
                            <div class="col-md-12 col-sm-12">
                                <div class="col-md-2 col-sm-12 mb-2 pl-0">
                                    <label class="col-form-label label-align">
                                        @Resource.Active <span class="required">*</span>
                                    </label>
                                    @Html.DropDownListFor(model => model.ActStatus, new SelectList(new List<SelectListItem> {
                                                                                                new SelectListItem {Text="ALL",Value="0" },
                                                                                                new SelectListItem {Text="Yes",Value="Y" },
                                                                                                new SelectListItem {Text="No",Value="N" },
                                                                                                }, "Value", "Text"
                                                 ), new { @class = "form-control", @id = "supp_act", @name = "supp_act" })

                                </div>
                                <div class="col-md-1 col-sm-12">
                                    <button type="button" class="btn btn-primary btn-sm margintop20" onclick="FilterListPrice()" id="BtnSearch"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <div class="clearfix"></div>
                </div>
              
            </div>
        </div>
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel mar_pad1 ">
                <div id="PriceList" class="x_content mar_pad1">
                    @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialPriceList.cshtml")
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page content end -->
