<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.OrderDetail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top:0px;">

        <div class="col-md-3 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.OrderNumber</label>
            <input id="ordNumber" value="" class="form-control" autocomplete="off" type="text" name="InvoiceNumber" placeholder="SI/01/22/1234" disabled="">
        </div>
        <div class="col-md-3 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.OrderDate</label>
            <input id="ordDate" class="form-control" value="" autocomplete="off" type="date" name="InvoiceDate" placeholder="0000.00" disabled="">
        </div>
        <div class="col-md-4 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.Customer @Resource.Name</label>
            <input id="custName" class="form-control" value="" autocomplete="off" type="text" name="Customer" placeholder="@Resource.Customer @Resource.Name" disabled="">
        </div>
        <div class="col-md-2 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.Currency</label>
            <input id="Currency12" class="form-control" value="" autocomplete="off" type="text" name="Currency" placeholder="@Resource.Currency" disabled="">
        </div>
        <div class="clearfix"></div>

        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 height30VH">
                <table id="Datatable24" data-order="" class="table table-striped  table-bordered rowhighlighttbl width1200 itmfrz" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="3%">@Resource.SrNo</th>
                            <th width="30%" class="itmStick">@Resource.ItemName</th>
                            <th width="7%">@Resource.UOM</th>
                            <th hidden="hidden"></th>
                            <th width="10%">@Resource.Order @Resource.Quantity</th>
                            <th width="10%">@Resource.Order @Resource.Price</th>
                            <th width="10%">@Resource.Order @Resource.Value</th>
                            <th width="10%">@Resource.Shipped <br /> @Resource.Quantity </th>
                            <th width="10%">@Resource.Pending <br /> @Resource.Quantity </th>
                            <th width="10%">@Resource.Pending <br /> @Resource.Value </th>
                        </tr>
                    </thead>
                    <tbody id="">

                        @if (ViewBag.PendingOrderItemWiseDetails != null)
                        {
                            var srno = 1;

                            foreach (System.Data.DataRow dr in ViewBag.PendingOrderItemWiseDetails.Rows)
                            {

                                <tr>
                                    <td>@srno</td>
                                    <td class="ItmNameBreak itmStick tditemfrz">
                                        <div class="col-sm-11 no-padding">
                                            @dr["item_name"].ToString()
                                        </div>
                                        <div class="col-sm-1 i_Icon">
                                            <button type="button" class="calculator" onclick="OnClickIconBtn(event);" data-toggle="modal" data-target="#ItemInfo" data-backdrop="static" data-keyboard="false"> <img src="/Content/Images/iIcon1.png" alt="" title="Item Information">   </button>
                                        </div>
                                    </td>
                                    <td>@dr["uom_alias"].ToString()</td>
                                    <td hidden="hidden">
                                        <input id="Hdn_item_id" type="hidden" value="@dr["item_id"].ToString()" />
                                        @dr["item_id"].ToString()
                                    </td>
                                    <td class="num_right">
                                        <div class="col-md-10 col-sm-12 no-padding num_right ">
                                            @dr["ord_qty_base"].ToString()
                                        </div>
                                        <div class="col-sm-2  i_Icon no-padding">
                                            <button type="button" id="OrderDeliverySchedule" class="calculator" onclick="OnclickDeliverySchedule(event);" data-toggle="modal" data-target="#MISOrderDeliverySchedule " data-backdrop="static" data-keyboard="false"> <img src="/Content/Images/iIcon1.png" alt="" title="@Resource.Delivery @Resource.Schedule">  </button>
                                        </div>
                                    </td>
                                    <td class="num_right">@dr["OrderPrice"].ToString()</td>
                                    <td class="num_right">@dr["OrderValue"].ToString()</td>
                                    <td class="num_right">@dr["ship_qty"].ToString()</td>
                                    <td class="num_right">@dr["PendingQty"].ToString()</td>
                                    <td class="num_right">@dr["PendingVal"].ToString()</td>
                                </tr>
                                srno = srno + 1;
                                //ordQty = ordQty + dr["ord_qty_base"]);
                                //ShipQty = ShipQty + dr["ship_qty"]);
                                //PendingQty = PendingQty + dr["PendingQty"]);
                                //OrderPrice = OrderPrice + dr["OrderPrice"]);
                                //OrderValue = OrderValue + dr["OrderValue"]);
                                //PendingValue = PendingValue + dr["PendingVal"]);
                            }
                        }
                    </tbody>
                    <tfoot>
                        @if (ViewBag.TotalPendingOrdersItemWise != null)
                        {
                            foreach (System.Data.DataRow dr in ViewBag.TotalPendingOrdersItemWise.Rows)
                            {
                                <tr style="background-color: #e7f1fa;">
                                    <td></td>
                                    <td></td>
                                    <td hidden="hidden"></td>
                                    <td align="right">Total</td>
                                    <td align="right">@dr["ord_qty_base"].ToString()</td>
                                    <td class="num_right">@dr["OrderPrice"].ToString()</td>
                                    <td class="num_right">@dr["OrderValue"].ToString()</td>
                                    <td align="right">@dr["ship_qty"].ToString()</td>
                                    <td align="right">@dr["PendingQty"].ToString()</td>
                                    <td class="num_right">@dr["PendingVal"].ToString()</td>
                                </tr>
                            }
                        }
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="">@Resource.Close</button>
    </div>
</div>