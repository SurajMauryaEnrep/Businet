@model EnRepMobileWeb.MODELS.ApplicationLayer.ProductionAndPlanning.PackagingJobOrder.PJOListModel
@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/ProductionAndPlanning/PackagingJobOrder/PackagingJobOrderList.js"></script>

<table id="datatable-buttons" class="table table-striped width1500 rowhighlighttbl itmfrz">
    <thead>
        <tr class="sticky-header">
            <th style="width:35px;"> @Resource.SrNo</th>
            <th class="itmStick">@Resource.Job @Resource.Card <br />  @Resource.Number</th>
            <th>@Resource.Job <br />  @Resource.Date</th>
            <th style="display:none;">@Resource.Job  <br /> @Resource.Date</th>
            <th width="20%">@Resource.Item  <br />  @Resource.Name</th>
            <th style="display:none;">@Resource.ItemID </th>
            <th>@Resource.UOM</th>
            <th>@Resource.Packaging <br />  @Resource.Quantity</th>
            <th>@Resource.Status</th>
            <th>@Resource.CreatedBy</th>
            <th>@Resource.Createdon</th>
            <th>@Resource.ApprovedBy</th>
            <th>@Resource.ApprovedOn</th>
            <th>@Resource.AmendedBy</th>
            <th>@Resource.AmendedOn</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.packingJobOrdrList != null)
        {
            foreach (var row in Model.packingJobOrdrList)
            {
                rowId++;
        <tr>
            <td>@rowId</td>
            <td id="RJONo" class="ItmNameBreak itmStick tditemfrz">@row.PJONumber</td>
            <td id="RJODate" >@row.PJODate</td>
            <td style="display:none;" id="RJODt">@row.PJO_Dt</td>
            <td id="itmname">@row.ItemName</td>
            <td style="display:none;" id="hdnListItem_ID">@row.ItemID</td>
            <td>@row.Uom</td>
            <td>@row.PkgQty</td>
            <td id="RJODoc_Status">@row.PJO_Status</td>
            <td>@row.CreatedBy</td>
            <td>@row.CreatedON</td>
            <td>@row.ApprovedBy</td>
            <td>@row.ApprovedOn</td>
            <td>@row.AmendedBy</td>
            <td>@row.AmendedOn</td>


        </tr>
            }
        }
    </tbody>
</table>
@if (Model.PJOSearch != null)
{
    if (Model.PJOSearch == "PJO_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        Model.PJOSearch = null;
    }
}