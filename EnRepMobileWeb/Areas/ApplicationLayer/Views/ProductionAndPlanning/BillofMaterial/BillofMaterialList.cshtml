@model EnRepMobileWeb.MODELS.ApplicationLayer.ProductionAndPlanning.BillofMaterial.BillofMaterialModel
@using EnRepMobileWeb.Resources;
@using System.Data
@if (Session["UserId"] == null)
{
    Response.Redirect("~/Login");
}
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Css/build/js/sweetalert.js"></script>
@*/*start Add by Hina on 19-02-2024 to chk Financial year exist or not*/*@
@{
    if (TempData["Message"] != null)
    {
        if (TempData["Message"] == "Financial Year not Exist")
        {
            <script type="text/javascript">
                swal("", $("#FinancialYearDoesNotExistTransactionCanNotBeDone").text(), "warning");
            </script>
        }

    }
}
@*/*End to chk Financial year exist or not*/*@
<script src="~/Content/Scripts/ApplicationLayer/ProductionAndPlanning/BillofMaterial/BillofMaterial.js"></script>
<title>@Model.Title</title>
<div class="row">
    <!-- BOMH ierarchy -->
    <div id="BOMHierarchy" class="modal fade" role="dialog">
        <div class="modal-dialog" style=" max-width:1500px;">
            >
            <!-- Modal content-->
            @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialBOMHierarchy.cshtml")
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <!-- Workflow Information -->
                <div id="WorkflowInformation" class="modal fade" role="dialog">
                    <div class="modal-dialog" style="max-width:700px;">
                        <!-- Modal content-->
                        @Html.Partial("~/Areas/Common/Views/_WorkFlow.cshtml")

                    </div>
                </div>
                <h2 class="col-md-5 col-sm-12 heading_left_padding ">@ViewBag.MenuPageName</h2>
                <div id="wizard" class="form_wizard wizard_horizontal col-md-3 col-sm-12 work_flow">
                    @Html.Partial("~/Areas/Common/Views/_PartialWorkflowBar.cshtml")
                </div>
                <input type="hidden" id="DocumentMenuId" value="@ViewBag.DocumentMenuId" />
                @Html.HiddenFor(m => m.WF_status, new { @id = "WF_status" }) 
                @Html.HiddenFor(m => m.ListFilterData, new { @id = "ListFilterData" })
               
                <div id="" class="col-md-4 col-sm-12 heading_right_padding">
                    <ul>
                        @if (ViewBag.VBRoleList != null)
                        {
                            foreach (System.Data.DataRow Row in ViewBag.VBRoleList.Rows)
                            {
                                if (Row["feature_id"].ToString() == "105105115001")
                                {
                                    <li>
                                        <a class="tooltip-test"
                                           title=" @Resource.AddNew" href="@Url.Action("AddNewBillofMaterialDetail","BillofMaterial")"><img src="~/Content/Images/addgreen.png" width="32" height="32" id="Btn_AddCust" alt="Add"></a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
                <div class="x_title pad_mar ">
                    <div class="col-md-12 col-sm-12 icon_tool padding_zero">
                        <form class="available_stock pad_mar" action="" method="post" novalidate>

                            <div class="col-md-2 col-sm-12">
                                <label class="col-form-label label-align">@Resource.Active</label>
                                @Html.DropDownListFor(model => model.Active, new SelectList(new List<Object>
                                                       { new { value = "0", text = "All"  },
                                                          new { value = "Y", text = "Yes"  },
                                                          new { value = "N", text = "No"  },
                                                       }, "value", "text"), new { @class = "form-control", @id = "ActiveID" })
                            </div>
                            <div class="col-md-2 col-sm-12 no-padding">
                                <div class="col-md-9 col-sm-12">
                                    <label class="col-form-label label-align">Status</label>
                                    @Html.DropDownListFor(model => model.Status, new SelectList(Model.statusLists, "status_id", "status_name"), new { @class = "form-control", id = "ddlStatus" })

                                </div>
                                <div class="col-md-3 col-sm-12">
                                    <button type="button" class="btn btn-primary btn-sm margintop20" id="Btn_Search"  onclick="BtnSearch()"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <div class="card-box table-responsive dy_table">
                    <div id="bom_list_tbody" class="sticky-table sticky-ltr-cells sb-container container-example1">
                        @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialBillofMaterialList.cshtml")
                    </div>
                </div>

            </div>
        </div>
    </div>


</div>

<!-- page content end -->
