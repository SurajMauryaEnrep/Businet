@using EnRepMobileWeb.Resources
@{ 
    Int32 count = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/ProductionAndPlanning/OperationSetup/OperationSetup.js"></script>

@*<table id="datatable-buttons" class="table table-striped table-bordered rowhighlighttbl width1800">
    <thead>
        <tr class="headings">*@
<table id="datatable-buttons" class="table table-striped width2500 rowhighlighttbl  table-bordered" cellspacing="0">
    <thead>
        <tr class="sticky-header">
            <th width="2%">@Resource.SrNo</th>
            <th hidden="hidden"></th>
            <th width="10%">@Resource.OperationName</th>
            <th width="10%">@Resource.OperationType</th>
            <th width="14%">@Resource.Shopfloor</th>
            <th width="10%">@Resource.Workstation</th>
            <th width="10%">@Resource.SupervisorName</th>
            <th width="12%">@Resource.remarks</th>
            <th hidden="hidden"></th>
            <th width="8%">@Resource.CreatedBy</th>
            <th width="8%">@Resource.Createdon</th>
            <th width="8%">@Resource.AmendedBy</th>
            <th width="8%">@Resource.AmendedOn</th>
        </tr>
    </thead>
    <tbody id="OperationSetupListBody">
        @if (ViewBag.BindOperationDetails != null)
        {
            foreach (System.Data.DataRow item in ViewBag.BindOperationDetails.Rows)
            {
                count++;
        <tr>
            <td id="count">@count</td>
            <td hidden="hidden" id="op_id">@item["op_id"]</td>
            <td id="op_name">@item["op_name"].ToString()</td>
            <td id="op_type">@item["op_type"].ToString()</td>
            <td>             
                    @item["shfl_name"].ToString()                 
                <span id="tdshfl_id" hidden="hidden">@item["shfl_id"].ToString()</span>
            </td>
            <td>@item["ws_name"].ToString() 
            <span id="tdws_id" hidden="hidden">@item["ws_id"].ToString()</span>
            </td>
            <td id="tdsupervisor">@item["supervisor_name"].ToString()</td>
            <td id="op_remarks">@item["op_remarks"].ToString()</td>
            <td hidden="hidden" id="op_type_id">@item["op_type_id"].ToString()</td>
            <td>@item["create_by"].ToString()</td>
            <td>@item["create_dt"].ToString()</td>
            <td>@item["mod_by"].ToString()</td>
            <td>@item["mod_dt"].ToString()</td>
        </tr>
            }
        }
    </tbody>
</table>


