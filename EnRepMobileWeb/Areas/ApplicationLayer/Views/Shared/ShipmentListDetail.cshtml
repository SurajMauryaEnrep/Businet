@model EnRepMobileWeb.MODELS.ApplicationLayer.SalesAndDistribution.Shipment.ShipmentList_MODEL
@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/SalesAndDistribution/Shipment/ShipmentList.js"></script>

<table id="datatable-buttons" class="table table-striped table-bordered width1900 rowhighlighttbl itmfrz">
    <thead>
        <tr class="sticky-header">
            <th width="3%">@Resource.SrNo</th>
            <th width="6%" class="itmStick">@Resource.Shipment <br /> @Resource.Number</th>
            <th width="5%">@Resource.Shipment <br /> @Resource.Date</th>
            @if (Model.DocumentMenuId != "105103135")
            {
                <th width="6%">@Resource.Custom <br /> @Resource.InvoiceNumber</th>
                <th width="5%">@Resource.Custom <br /> @Resource.InvoiceDate</th>
            }

            <th style="display:none;">@Resource.ShipmentDate</th>
            <th width="6%">@Resource.PackingList <br /> @Resource.Number</th>
            <th width="5%">@Resource.Packing <br /> @Resource.Date</th>
            <th width="6%">@Resource.Order <br /> @Resource.Type</th>
            <th width="6%">@Resource.CustomerName</th>
            <th width="6%">@Resource.GRNumber</th>
            <th width="5%">@Resource.GRDate</th>
            <th width="6%">@Resource.TransporterName</th>
            <th width="5%">@Resource.Status</th>
            <th width="6%">@Resource.CreatedBy</th>
            <th width="6%">@Resource.Createdon</th>
            <th width="6%">@Resource.ApprovedBy</th>
            <th width="6%">@Resource.ApprovedOn</th>
            <th width="6%">@Resource.AmendedBy</th>
            <th width="5%">@Resource.AmendedOn</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.ShipmentDetailsList != null)
        {
            foreach (var row in Model.ShipmentDetailsList)
            {
                rowId++;
        <tr role="row" class="even">
            <td>@rowId</td>
            <td id="ship_no" class="ItmNameBreak itmStick tditemfrz">@row.ship_no</td>
            <td>@row.ship_dt</td>
            @if (Model.DocumentMenuId != "105103135")
            {
                <td>@row.custom_inv_no</td>
                <td>@row.custom_inv_dt</td>
            }
                <td style="display:none" id="ship_date">@row.ship_date</td>
                <td>@row.pack_no</td>
                <td>@row.pack_dt</td>
                <td>@row.ship_type</td>
                <td>@row.cust_name</td>
                <td>@row.GRNumber</td>
                <td>@row.GRDate</td>
                <td>@row.TransporterName</td>
                <td id="Doc_Status">@row.ship_status</td>
                <td>@row.create_by</td>
                <td>@row.create_dt</td>
                <td>@row.app_by</td>
                <td>@row.app_dt</td>
                <td>@row.mod_by</td>
                <td>@row.mod_dt</td>
                @*<td>11/01/2021 12:00</td>*@
            </tr>
            }
        }
    </tbody>
</table>
@*@if (Session["SCSearch"] != null)*@
@if (Model.SCSearch != null)
{
    //if (Session["SCSearch"].ToString() == "SC_Search")
    if (Model.SCSearch == "SC_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        //Session["SCSearch"] = null;
        Model.SCSearch = null;
    }
}

