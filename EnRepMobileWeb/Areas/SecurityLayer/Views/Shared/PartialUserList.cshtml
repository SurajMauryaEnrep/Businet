@using EnRepMobileWeb.Resources;


<table id="datatable-buttons" class="table table-striped table-bordered width1400 itmfrz" style="width:100%">
    <thead>
        <tr class="sticky-header">
            <th>@Resource.SrNo</th>
            <th style="display:none;">@Resource.UserID</th>
            <th width="15%" class="itmStick">@Resource.UserName</th>
            <th width="8%">@Resource.NickName</th>
            <th width="9%">@Resource.DefaultLanguage</th>
            <th>@Resource.EmailID</th>
            <th width="9%">@Resource.ContactNumber</th>
            <th width="5%">@Resource.Active</th>
            <th width="9%">@Resource.Createdon</th>
            @*<th>@Resource.ApprovedOn</th>*@
        <th width="9%">@Resource.AmendedOn</th>
        </tr>
    </thead>
    <tbody id="">
        @if (ViewBag.VBUserList != null)
        {
            foreach (System.Data.DataRow item in ViewBag.VBUserList.Rows)
            {
                <tr>
                    <td>@item["SNo"].ToString()</td>
                    <td style="display:none;">@item["user_id"].ToString() </td>
                    <td class="ItmNameBreak itmStick tditemfrz">@item["user_nm"].ToString() </td>
                    <td>@item["nick_nm"].ToString()</td>
                    <td>@item["lang_name"].ToString()</td>
                    <td>@item["user_email"].ToString()</td>
                    <td>@item["user_cont"].ToString()</td>
                    @if (item["act"].ToString() == "N")
                    {
                        <td class="center"><i class="fa fa-times-circle text-danger" aria-hidden="true"></i></td>
                    }
                    else
                    {
                        <td class="center"><i class="fa fa-check text-success " aria-hidden="true"></i></td>
                    }

                    <td>@item["create_dt"].ToString()</td>
                    <td>@item["mod_dt"].ToString()</td>
                </tr>
            }
        }
        </tbody>
</table>