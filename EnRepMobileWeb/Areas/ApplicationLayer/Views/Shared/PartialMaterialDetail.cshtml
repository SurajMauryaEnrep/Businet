@using EnRepMobileWeb.Resources;
<style>
    #MaterialDetail #TblDispatchRawMaterialDetail_wrapper .buttons-csv {
        position: absolute;
        margin-left: 20%;
        /*  top: -10px;*/
    }
    #MaterialDetail #TblDispatchRawMaterialDetail_wrapper .buttons-pdf {
        /* position: absolute;*/
        margin-left: 25% !important;
        /*  top: -10px;*/
    }
    #MaterialDetail #TblDispatchRawMaterialDetail_filter {
        position: absolute;
        right: 0;
        top: 0;
    }
    #MaterialDetail .dataTables_length {
        position: absolute;
        z-index: 10;
    }
    #MaterialDetail #TblDispatchRawMaterialDetail_wrapper {
        height: 30px;
