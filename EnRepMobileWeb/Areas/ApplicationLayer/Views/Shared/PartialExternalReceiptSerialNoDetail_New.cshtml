@using EnRepMobileWeb.Resources;
<div class="modal-content">
    @if (@ViewBag.DocumentMenuId == "105101154" || @ViewBag.DocumentMenuId == "105102115130")
    {
        <!-- Error Detail -->
        <div id="PartialImportSerialData" class="modal fade" role="dialog">
            <div class="modal-dialog" style="min-width:1200px;">
                <!-- Modal content-->
                @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/Partial_Import_ItemSerialData.cshtml")
            </div>
        </div>

        <!--Partial Import Customer Data Start-->
        <div id="ErrorDetail" class="modal fade show" role="dialog" aria-modal="true">
            <div class="modal-dialog" id="" style="min-width:600px;">
                <!-- Modal content-->
                <div id="divErrorDetail">
                    @Html.Partial("~/Areas/Common/Views/Cmn_PartialExportErrorDetail.cshtml")

                </div>
            </div>
        </div>
    }
        <div class="modal-header">
            <h2>@Resource.SerialDetail</h2>
            @if (@ViewBag.DocumentMenuId == "105101154" || @ViewBag.DocumentMenuId == "105102115130")
            {
                var Flag = "";
               
                if(@ViewBag.DocumentMenuId == "105101154")
                {
                    Flag = "DPISerialExcel";
                  
                }
                else
                {
                    Flag = "ExtRcptSerialExcel";
                  
                }
                <div id="DivDownloadImportExcelSerial" class="work_flow heading_right_padding pl-5">
                    <ul>
                        <li>
                            <a class="tooltip-test"
                               title="@Resource.Download @Resource.Template" id="DownloadTemplate" onclick="OnclickDownExcelSerial('@Flag')"><img src="~/Content/Images/export_icon.png" width="25" id="" onclick="" height="25" alt="Download Data Template"></a>
                        </li>
                        <li>

                            <a class="tooltip-test"
                               title="@Resource.Import @Resource.Data" id="ImportData" onclick="OnClickImportSerialDataExcel('@Flag')" data-toggle="modal" data-target="#PartialImportSerialData" data-backdrop="static" data-keyboard="false"><img src="~/Content/Images/import_icon.png" width="25" id="ImportData" height="25" alt="Import Data"></a>

                        </li>
                    </ul>
                </div>
            }

            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <div class="col-md-4 col-sm-12" style="padding-left:0px;">
                <label class="col-form-label label-align">
                    @Resource.ItemName
                </label>
                <input id="SerialItemName" class="form-control" autocomplete="off" type="text" name="SerialItemName" placeholder="Item Name" onblur="this.placeholder='Item Name'" disabled="">
                <input type="hidden" id="hfSItemID" />
                <input type="hidden" id="hfSItemSNo" />
            </div>
            <div class="col-md-2 col-sm-12" style="padding-left:0px;">
                <label class="col-form-label label-align">
                    @Resource.UOM
                </label>
                <input id="serialUOM" class="form-control" autocomplete="off" type="text" name="serialUOM" placeholder="UOM" onblur="this.placeholder='UOM'" disabled="">
            </div>
            <div class="col-md-2 col-sm-12" style="padding-left:0px;">
                <label class="col-form-label label-align ">@Resource.Received @Resource.Quantity</label>
                <input id="SerialReceivedQuantity" class="form-control num_right" autocomplete="off" type="text" name="SerialReceivedQuantity" placeholder="0000.00" disabled="">
            </div>
            <div class="clearfix"></div>
            <hr style="margin-bottom:5px;">
            <div class="col-md-2 col-sm-12" style="padding-left:0px;">
                <label class="table_label col-form-label label-align">@Resource.Serial @Resource.Number <span class="required">*</span></label>
                <input id="SerialNo" class="form-control" autocomplete="off" type="text" name="SerialNo" maxlength="25" onkeypress="OnKeyPressSerialNo_ExternalReceipt()" placeholder="Serial No" onblur="this.placeholder='Serial No'">
                <span id="SpanSerialNo" class="error_message"></span>
            </div>
            <div class="col-md-4 col-sm-12 pl-0">
                <label class="table_label col-form-label label-align">@Resource.Manufacturer @Resource.Name@*<span class="required">*</span>*@</label>
                <input id="SrMfgName" class="form-control" autocomplete="off" type="text" maxlength="100" onchange="Cmn_OnChangeMfgName(event)" name="ManufacturerName" placeholder="@Resource.Manufacturer @Resource.Name">
                <span id="SpanMfgName" class="error_message"></span>
            </div>
            <div class="col-md-2 col-sm-12 pl-0">
                <label class="table_label col-form-label label-align">@Resource.MRP@*<span class="required">*</span>*@</label>
                <input id="SrMfgMrp" class="form-control num_right" autocomplete="off" type="text" name="btMfgMrp" onchange="Cmn_OnChangeMfgMrp(event)" onkeypress="return Cmn_FloatValueonly(this,event,'#RateDigit')" placeholder="0000.00">
            </div>
            <div class="col-md-2 col-sm-12 pl-0">
                <label class="table_label col-form-label label-align">@Resource.Manufactured @Resource.Date@*<span class="required">*</span>*@</label>
                <input id="SrMfgDate" class="form-control" autocomplete="off" type="date" name="ManufacturedDate" max="@DateTime.Now.ToString("yyyy-MM-dd")">
            </div>
            <div id="DivAddNewSerial" class="col-md-1 col-sm-12 margin25">
                <div class="plus_icon1 float-left" margin25> <i class="fa fa-plus" onclick="OnClickAddNewSerialDetail_ExternalReceipt()" id="Btn_AddNewSerialDetail" title="Add New"></i> </div>
            </div>
            <div class="card-box table-responsive dy_table margin15">
                <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                    <table id="SerialDetailTbl" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                        <thead>
                            <tr class="sticky-header">
                                <th width="5%"> &nbsp;</th>
                                <th width="5%">@Resource.SrNo</th>
                                <th width="18%">@Resource.Serial @Resource.Number</th>
                                <th width="36%">@Resource.Manufacturer @Resource.Name</th>
                                <th width="18%">@Resource.MRP</th>
                                <th width="18%">@Resource.Manufactured @Resource.Date</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="OnClickSerialResetBtn_ExternalReceipt()" id="SerialResetBtn"> @Resource.Reset</button>
            <button type="button" class="btn btn-primary btn-sm" id="SerialSaveAndExitBtn" onclick="OnClickSerialSaveAndClose_ExternalReceipt()">@Resource.SaveAndExit</button>
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="SerialDiscardAndExitBtn" onclick="OnClickSerialDiscardAndExit_ExternalReceipt()">@Resource.DiscardAndExit</button>
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="Closebtn">@Resource.Close</button>
        </div>
    </div>