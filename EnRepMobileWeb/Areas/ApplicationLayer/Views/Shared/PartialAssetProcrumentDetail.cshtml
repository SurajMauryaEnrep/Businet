@using EnRepMobileWeb.Resources;

<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Procurement @Resource.Detail</h2> <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">

        <div class="col-md-3 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.Asset @Resource.Description </label>
            <input id="AssetDescriptionPD" class="form-control" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="AssetDescription" placeholder="@Resource.Asset @Resource.Description" disabled="">
        </div>
        <div class="col-md-3 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.Asset @Resource.Label</label>
            <input id="AssetLabelPD" class="form-control" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="AssetDescription" placeholder="@Resource.Asset @Resource.Label" disabled="">
        </div>
        <div class="col-md-3 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.Serial @Resource.Number</label>
            <input id="SerialNumberPD" class="form-control" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="AssetDescription" placeholder="@Resource.Serial @Resource.Number" disabled="">
        </div>

        <div class="po col-md-3 col-sm-12 pt-4">
            <label class="col-form-label label-align font-weight-bold" style="padding-right:10px;">
                @Resource.Source
            </label>
            <input type="radio" name="PDSource" value="m" checked /> Manual
            <input type="radio" name="PDSource" value="e" disabled /> ERP
        </div>
        <div class="clear"></div>
        @if (ViewBag.PD_DisableFlag == "N")
        {
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.Bill @Resource.Number <span class="required">*</span></label>
                @if (ViewBag.PD_DisableFlag == "N")
                {
                    <input id="PDBillNumber" class="form-control" autocomplete="off" onchange="" maxlength="20" onkeypress="" type="text" name="AssetDescription" placeholder="@Resource.BillNumber">
                }
                else if (ViewBag.PD_DisableFlag == "Y")
                {
                    <input id="PDBillNumber" class="form-control" autocomplete="off" onchange="" maxlength="20" onkeypress="" type="text" name="PDBillNumber" placeholder="@Resource.BillNumber" disabled="">
                }
                <span id="SpanPDBillNumberErrorMsg" class="error_message"></span>
            </div>
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.Bill @Resource.Date <span class="required">*</span></label>
                @if (ViewBag.PD_DisableFlag == "N")
                {
                    <input id="PDBillDate" class="form-control" autocomplete="off" type="date" name="PDBillDate" placeholder="@Resource.BillNumber" onchange="OnChangePDBillDate(this)" />
                }
                else if (ViewBag.PD_DisableFlag == "Y")
                {
                    <input id="PDBillDate" class="form-control" autocomplete="off" maxlength="20" onkeypress="" type="date" name="PDBillDate" placeholder="@Resource.BillNumber" onchange="OnChangePDBillDate(this)" disabled="">
                }
                <span id="SpanPDBillDateErrorMsg" class="error_message"></span>
            </div>
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.Supplier @Resource.Name <span class="required">*</span></label>

                @if (ViewBag.PD_DisableFlag == "N")
                {
                    <input id="PDSupplierName" class="form-control remarksmessage" autocomplete="off" maxlength="100" type="text" name="PDSupplierName" placeholder="@Resource.SupplierName" onchange="OnChangePDSupplierName(this)" />
                }
                else if (ViewBag.PD_DisableFlag == "Y")
                {
                    <input id="PDSupplierName" class="form-control remarksmessage" autocomplete="off" maxlength="100" type="text" name="PDSupplierName" placeholder="@Resource.SupplierName" onchange="OnChangePDSupplierName(this)" disabled="" />
                }
                <span id="SpanPDSupplierNameErrorMsg" class="error_message"></span>
            </div>
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.GST @Resource.Number @*<span class="required">*</span>*@</label>
                @if (ViewBag.PD_DisableFlag == "N")
                {
                    <input id="PDGSTNumber" class="form-control remarksmessage" autocomplete="off" maxlength="20" type="text" name="PDGSTNumber" placeholder="@Resource.GSTNumber" onchange="OnChangePDGSTNumber(this)" />
                }
                else if (ViewBag.PD_DisableFlag == "Y")
                {
                    <input id="PDGSTNumber" class="form-control remarksmessage" autocomplete="off" maxlength="20" type="text" name="PDGSTNumber" placeholder="@Resource.GSTNumber" onchange="OnChangePDGSTNumber(this)" disabled="" />
                }
                <span id="SpanPDGSTNumberErrorMsg" class="error_message"></span>
            </div>
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.Currency <span class="required">*</span></label>
                <input id="curr" class="form-control" value="@ViewBag.BrCurrName" maxlength="10" type="text" name="curr" placeholder="@Resource.Currency" disabled="" />
                <input type="hidden" id="currId" name="currId" value="@ViewBag.BrCurrId" />
            </div>
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.Purchase @Resource.Amount @Resource.InBase <span class="required">*</span></label>
                @if (ViewBag.PD_DisableFlag == "N")
                {
                    <input id="PDPurchasePrice" class="form-control num_right" autocomplete="off" maxlength="10" type="text" name="PDPurchasePrice" placeholder="0000.00" onchange="OnChangePDPurchasePrice(this)" onkeypress="return RateFloatValueonly(this,event);" />
                }
                else if (ViewBag.PD_DisableFlag == "Y")
                {
                    <input id="PDPurchasePrice" class="form-control num_right" autocomplete="off" maxlength="10" type="text" name="PDPurchasePrice" placeholder="0000.00" onchange="OnChangePDPurchasePrice(this)" onkeypress="return RateFloatValueonly(this,event);" disabled="" />
                }
                <span id="SpanPDPurchasePriceErrorMsg" class="error_message"></span>
            </div>
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.Tax @Resource.Amount @Resource.InBase <span class="required">*</span></label>
                @if (ViewBag.PD_DisableFlag == "N")
                {
                    <input id="PDTaxAmount" class="form-control num_right" autocomplete="off" maxlength="10" type="text" name="PDTaxAmount" placeholder="0000.00" onchange="OnChangePDTaxAmount(this)" onkeypress="return RateFloatValueonly(this,event);" />
                }
                else if (ViewBag.PD_DisableFlag == "Y")
                {
                    <input id="PDTaxAmount" class="form-control num_right" autocomplete="off" maxlength="10" type="text" name="PDTaxAmount" placeholder="0000.00" onchange="OnChangePDTaxAmount(this)" onkeypress="return RateFloatValueonly(this,event);" disabled="" />
                }
                <span id="SpanPDTaxAmountErrorMsg" class="error_message"></span>
            </div>
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.Other @Resource.Charges @Resource.InBase <span class="required">*</span></label>
                @if (ViewBag.PD_DisableFlag == "N")
                {
                    <input id="PDOtherCharges" class="form-control num_right" autocomplete="off" maxlength="10" type="text" name="PDOtherCharges" placeholder="0000.00" onchange="OnChangePDOtherCharges(this)" onkeypress="return RateFloatValueonly(this,event);" />
                }
                else if (ViewBag.PD_DisableFlag == "Y")
                {
                    <input id="PDOtherCharges" class="form-control num_right" autocomplete="off" maxlength="10" type="text" name="PDOtherCharges" placeholder="0000.00" onchange="OnChangePDOtherCharges(this)" onkeypress="return RateFloatValueonly(this,event);" disabled="" />
                }
                <span id="SpanPDOtherChargesErrorMsg" class="error_message"></span>
            </div>
            <div class="col-md-55 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.Total @Resource.Amount @Resource.InBase <span class="required">*</span></label>
                <input id="PDTotalCost" class="form-control num_right" autocomplete="off" maxlength="10" type="text" name="PDTotalCost" placeholder="0000.00" onchange="OnChangePDTotalCost(this)" onkeypress="return RateFloatValueonly(this,event);" disabled="" />
                <span id="SpanPDTotalCostErrorMsg" class="error_message"></span>
            </div>
            <div class="col-md-55 col-sm-12 pl-0">

                <div class="col-md-10 col-sm-12 pl-0 pr-0" style="display: none">
                    <label class="col-form-label label-align">@Resource.Capitalized @Resource.Value @Resource.InBase <span class="required">*</span></label>
                    <input id="PDCapitalizedValue" class="form-control num_right" autocomplete="off" maxlength="10" type="text" name="PDCapitalizedValue" placeholder="0000.00" onkeypress="return RateFloatValueonly(this,event);" disabled="" />
                    <span id="SpanPDCapitalizedValueErrorMsg" class="error_message"></span>
                </div>

                <div class="col-md-2 col-sm-12 pr-0">
                    <div class="col-md-1 col-sm-12 margin28" id="divAdd">
                        @if (ViewBag.PD_DisableFlag == "N")
                        {
                            <a href="#">
                                <div class="plus_icon1"> <i class="fa fa-plus" id="BtnAttribute" onclick="AddProcurementDetail()" title=""></i> </div>
                            </a>
                            <span id="SpanAddErrorMsg" class="error_message"></span>
                        }
                    </div>
                    <div class="col-md-1 col-sm-12 margin28" id="divUpdate" style="display: none;">
                        <a href="#" style="color:#ffffff;">
                            <div class="plus_icon1"> <i class="fa fa-refresh ref" id="ParaItemUpdateBtn" onclick="UpdateProcurementDetail(event)" data-toggle="tooltip" title="" data-original-title="Update"></i> </div>
                        </a>
                    </div>
                </div>
            </div>
        }
        <div class="clear"></div>
        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">


                <table id="tblAssetProcurementDetail" data-order="" class="table table-striped table-bordered rowhighlighttbl width1200">
                    <thead>
                        <tr class="sticky-header">
                            @if (ViewBag.PD_DisableFlag == "N")
                            {
                                <th width="3%">&nbsp;</th>
                                <th width="3%">&nbsp;</th>
                            }
                            <th width="5%">@Resource.SrNo</th>
                            <th width="9%">@Resource.Bill  @Resource.Number</th>
                            <th width="8%">@Resource.Bill  @Resource.Date</th>
                            <th width="9%">@Resource.Supplier  @Resource.Name</th>
                            <th width="9%">@Resource.GSTNumber</th>
                            <th width="9%">@Resource.Currency</th>
                            <th width="9%">@Resource.Purchase  @Resource.Price @Resource.InBase</th>
                            <th width="9%">@Resource.Tax  @Resource.Amount  @Resource.InBase</th>
                            <th width="9%">@Resource.OtherCharges  @Resource.InBase </th>
                            <th width="9%">@Resource.Total  @Resource.Cost  @Resource.InBase</th>
                            <th width="9%" style="display: none">Captialized @Resource.Value @Resource.InBase</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.ProcrumentDetailData != null)
                        {
                            int i = 1;
                            foreach (System.Data.DataRow Row in ViewBag.ProcrumentDetailData.Rows)
                            {
                                <tr>
                                    @if (ViewBag.PD_DisableFlag == "N")
                                    {
                                        <td width="20" class="red center bom_width_td"> <i class="fa fa-trash" aria-hidden="true" title="${Span_Delete_Title}" onclick="PD_DeleteChild(this)"></i></td>
                                        <td class="bom_width_td"><i class="fa fa-edit" aria-hidden="true" id='hdn_editRowId' title="" onclick="PD_editRow(event)"></i></td>
                                    }
                                    @*else
                                        {
                                            <td></td>
                                            <td></td>
                                        }*@
                                    <td id="Srno" class="center">@i</td>
                                    <td id="BillNumber">@Row["BillNumber"].ToString()</td>
                                    <td id="BillDate">@Row["BillDate"].ToString()</td>
                                    <td id="BillDt" style="display:none">@Row["BillDt"].ToString()</td>
                                    <td id="SupplierName">@Row["SupplierName"].ToString()</td>
                                    <td id="GSTNumber">@Row["GSTNumber"].ToString()</td>
                                    <td id="Currency" class="center">@Row["Currency"].ToString()</td>
                                    <td id="CurrencyId" class="center" style="display:none">@Row["CurrencyId"].ToString()</td>
                                    <td id="PurchasePrice" class="num_right">@Row["PurchasePrice"].ToString()</td>
                                    <td id="TaxAmount" class="num_right">@Row["TaxAmount"].ToString()</td>
                                    <td id="OtherCharges" class="num_right">@Row["OtherCharges"].ToString()</td>
                                    <td id="TotalCost" class="num_right"> @Row["TotalCost"].ToString()</td>
                                    <td id="CapitalizedValue" class="num_right" style="display: none">@Row["CapitalizedValue"].ToString()</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="clear"></div>


    <div class="modal-footer">
        @*@if (ViewBag.PD_DisableFlag == "N")
            {
            <button type="button" class="btn btn-primary btn-sm" onclick="PDOnClickResetButton()" id="SerialResetBtn"> @Resource.Reset</button>
            <button type="button" class="btn btn-primary btn-sm" id="PDSaveAndExitBtn" onclick="PD_onclickSaveandExitBtn()">@Resource.Close</button>
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="SerialDiscardAndExitBtn" onclick="OnClickSerialDiscardAndExit()">@Resource.DiscardAndExit</button>
            }*@
        @*<button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="PDSaveAndExitBtn">@Resource.Close</button>*@
        <button type="button" class="btn btn-primary btn-sm" id="PDSaveAndExitBtn" data-dismiss="modal" >@Resource.Close</button>
    </div>
</div>
