@model EnRepMobileWeb.MODELS.ApplicationLayer.Procurement.ServicePurchaseOrder.SPOListModel

@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/Procurement/ServicePurchaseOrder/SPOList.js"></script>
<table id="datatable-buttons" class="table table-striped table-bordered width2300 rowhighlighttbl itmfrz" style="width:100%;">
    <thead>
        <tr class="sticky-header">
            <th width="3%">&nbsp;</th>
            <th width="3%">@Resource.SrNo</th>
            <th width="9%" class="itmStick">@Resource.Order <br /> @Resource.Number</th>
            <th width="6%">@Resource.Order <br /> @Resource.Date</th>
            <th hidden width="6%">@Resource.Order <br /> @Resource.Date</th>
            <th width="5%">@Resource.Source <br /> @Resource.Type</th>
            <th width="8%">@Resource.Source <br /> @Resource.DocumentNumber</th>
            <th width="15%">@Resource.SupplierName</th>
            <th width="5%">@Resource.Currency</th>
            <th width="5%">@Resource.Order  <br /> @Resource.Value</th>
            <th width="5%">@Resource.Status</th>
            <th width="6%">@Resource.CreatedBy</th>
            <th width="6%">@Resource.Createdon</th>
            <th width="6%">@Resource.ApprovedBy</th>
            <th width="6%">@Resource.ApprovedOn</th>
            <th width="6%">@Resource.AmendedBy</th>
            <th width="6%">@Resource.AmendedOn</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.SPOList != null)
        {
            foreach (var row in Model.SPOList)
            {
                rowId++;
        <tr>
            <td class="center">
                <a class="tooltip-test" id="" href="" onclick="OnClickOrderTrackingBtn(event);" data-toggle="modal" data-target="#ServicePurchaseOrderTracking" data-backdrop="static" data-keyboard="false" title="@Resource.Service @Resource.PurchaseOrderTracking">
                    <img src="~/Content/Images/PurchaseOrderTracking2.png" title="@Resource.Order @Resource.Tracking" width="20" height="20" />
                </a>
            </td>
            <td>@rowId</td>
            <td id="OrderNo" class="ItmNameBreak itmStick tditemfrz">@row.OrderNo</td>
            <td>@row.OrderDate</td>
            <td style="display:none;" id="OrderDt">@row.OrderDt</td>
            <td>@row.SourceType</td>
            <td>@row.SourceDocNo</td>
            <td id="SuppName">@row.SuppName</td>
            <td class="center">@row.Currency</td>
            <td align="right">@row.OrderValue</td>
            <td id="Doc_Status">@row.OrderStauts</td>
            <td>@row.create_by</td>
            <td>@row.CreateDate</td>
            <td>@row.app_by</td>
            <td>@row.ApproveDate</td>
            <td>@row.mod_by</td>
            <td>@row.ModifyDate</td>


        </tr>
            }
        }
    </tbody>
</table>
@if (Model.SPOSearch != null)
{
    if (Model.SPOSearch == "SPO_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        //Session["SPOSearch"] = null;
    }
}
