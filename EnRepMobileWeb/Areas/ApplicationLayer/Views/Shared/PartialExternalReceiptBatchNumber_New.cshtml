@using EnRepMobileWeb.Resources;

<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.BatchDetail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.ItemName</label>
            <input id="BatchItemName" class="form-control" autocomplete="off" type="text" name="BatchItemName" placeholder="Item Name" onblur="this.placeholder='Item Name'" disabled="">
            <input type="hidden" id="BatchItemID" />
            <input type="hidden" id="hfItemSNo" />
            <input type="hidden" id="hfexpiryflag" />

        </div>
        <div class="col-md-1 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.UOM</label>
            <input id="batchUOM" class="form-control" autocomplete="off" type="text" name="batchUOM" placeholder="UOM" onblur="this.placeholder='UOM'" disabled="">
        </div>
        <div class="col-md-2 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align ">@Resource.Received @Resource.Quantity</label>
            <input id="BatchReceivedQuantity" class="form-control num_right" autocomplete="off" type="text" name="BatchReceivedQuantity" placeholder="0000.00" disabled="">
        </div>

        <div class="clearfix"></div>
        <hr style="margin-bottom:5px;">
        <div class="col-md-2 col-sm-12" style="padding-left:0px;">
            <label class="table_label col-form-label label-align">@Resource.BatchNumber <span class="required">*</span></label>
            <input id="txtBatchNumber" class="form-control" autocomplete="off" type="text" maxlength="25" onkeypress="OnKeyPressBatchNoExter_rec(event)" onkeydown="return OnKeyDownBatchNoExter_rec(event)" onchange="OnChangeBatchNumber(event)" name="BatchNumber" placeholder="Batch Number" onblur="this.placeholder='Batch Number'">
            <span id="SpanBatchNo" class="error_message"></span>
        </div>

        <div class="col-md-2 col-sm-12 pl-0">
            <label class="table_label col-form-label label-align">@Resource.Manufacturer @Resource.Name@*<span class="required">*</span>*@</label>
            <input id="BtMfgName" class="form-control" autocomplete="off" type="text" maxlength="100" onchange="Cmn_OnChangeMfgName(event)" name="ManufacturerName" placeholder="@Resource.Manufacturer @Resource.Name" >
            <span id="SpanMfgName" class="error_message"></span>            
        </div>
        <div class="col-md-2 col-sm-12 pl-0">
            <label class="table_label col-form-label label-align">@Resource.MRP@*<span class="required">*</span>*@</label>            
            <input id="BtMfgMrp" class="form-control num_right" autocomplete="off" type="text" name="btMfgMrp" onchange="Cmn_OnChangeMfgMrp(event)" onkeypress="return Cmn_FloatValueonly(this,event,'#RateDigit')" placeholder="0000.00" >            
        </div>
        <div class="col-md-2 col-sm-12 pl-0">
            <label class="table_label col-form-label label-align">@Resource.Manufactured @Resource.Date@*<span class="required">*</span>*@</label>           
            <input id="BtMfgDate" class="form-control" autocomplete="off" type="date" name="ManufacturedDate" max="@DateTime.Now.ToString("yyyy-MM-dd")" >           
        </div>
        <div class="col-md-2 col-sm-12" style="padding-left:0px;">
            <label class="table_label col-form-label label-align">@Resource.ExpiryDate <span class="required" id="spanexpiryrequire">*</span></label>
            <input id="BatchExpiryDate" class="form-control" autocomplete="off" onchange="OnChangeBatchExpiryDate_External()" type="date" name="BatchExpiryDate" min="@System.DateTime.Now.ToString("yyyy-MM-dd")" placeholder="">
            <span id="SpanBatchExDate" class="error_message"></span>
        </div>
        <div class="col-md-2 col-sm-12 pl-0">
            <div class="col-md-10 col-sm-12 pl-0">
                <label class="table_label col-form-label label-align ">@Resource.Received @Resource.Quantity <span class="required">*</span></label>
                <input id="BatchQuantity" class="form-control num_right" autocomplete="off" type="text" name="BatchQuantity" onkeypress="return QtyFloatValueonly(this,event);" onchange="OnChangeBatchQtyExternal()"
                       placeholder="0000.00" onblur="this.placeholder='Quantity'">
                <span id="SpanBatchQty" class="error_message"></span>
            </div>
            <div id="DivAddNewBatch" class="col-md-2 col-sm-12" style="padding-left:0px;">
                <div class="plus_icon1" style="margin-top:25px"><i class="fa fa-plus" id="Btn_AddNewBatchDetail" onclick="OnClickAddNewBatchDetailExternalReceipt()" title="Add New"></i> </div>

            </div>
        </div>
            

            <div class="card-box table-responsive dy_table margin15">
                <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                    <table id="BatchDetailTbl" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                        <thead>
                            <tr class="sticky-header">
                                <th width="4%"> &nbsp;</th>
                                <th width="14%"> @Resource.BatchNumber</th>
                                <th width="26%">@Resource.Manufacturer @Resource.Name</th>
                                <th width="14%">@Resource.MRP</th>
                                <th width="14%">@Resource.Manufactured @Resource.Date</th>
                                <th hidden="hidden"> @Resource.ExpiryDate</th>
                                <th width="14%"> @Resource.ExpiryDate</th>
                                <th width="14%">@Resource.Received @Resource.Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                        <tfoot>
                            <tr class="total">
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td class="num_right"><strong id="BatchQtyTotal"> 0000.00</strong></td>

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" id="BatchResetBtn" onclick="OnClickBatchResetBtnGRN()">@Resource.Reset</button>
        <button type="button" class="btn btn-primary btn-sm" id="BatchSaveAndExitBtn" onclick="OnClickSaveAndCloseGRN()">@Resource.SaveAndExit</button>
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="BatchDiscardAndExitBtn" onclick="OnClickDiscardAndExitGRN()">@Resource.DiscardAndExit</button>
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="BatchClosebtn">@Resource.Close</button>
    </div>
        </div>
