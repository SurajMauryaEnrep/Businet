            <td>@rowId</td>
            <td id="VerNo" class="ItmNameBreak itmStick tditemfrz">@row.VerNo</td>
            <td>@row.VerDate</td>
            <td style="display:none;" id="VerDt">@row.VerDt</td>            
            <td>@row.SourceDocNo</td>
            <td>@row.SourceDocDt</td>
            <td id="SuppName">@row.SuppName</td>
            <td id="Doc_Status">@row.VerStauts</td>
            <td>@row.create_by</td>
            <td>@row.CreateDate</td>
            <td>@row.app_by</td>
            <td>@row.ApproveDate</td>
            <td>@row.mod_by</td>
            <td>@row.ModifyDate</td>         

        </tr>
            }
        }

    </tbody>
</table>
