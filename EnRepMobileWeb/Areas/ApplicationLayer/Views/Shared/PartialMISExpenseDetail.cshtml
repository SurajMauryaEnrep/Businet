@using EnRepMobileWeb.Resources;
@{
    string ValDigit = "0.";
    var VD = Convert.ToInt32(Session["ValDigit"].ToString());
    for (var i = 0; i < VD; i++)
    {
        ValDigit += "0";
    }
    var count = 0;
}
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Expense @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body pop_top">
        <div class="col-md-4 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.GLAccount</label>
            <input id="AccName1" class="form-control " autocomplete="off" type="text" name="GLAccount" placeholder="@Resource.GLAccount" disabled>
        </div>
        @if (ViewBag.Flag == "CostCenter")/*Add by Hina sharma on 10-10-2024*/
        {
            <div class="col-md-3 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.CostCenter @Resource.Type</label>
                <input id="txt_CCType" class="form-control " autocomplete="off" type="text" name="CCType" placeholder="@Resource.CostCenter @Resource.Type" disabled>
            </div>
            <div class="col-md-3 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.CostCenter</label>
                <input id="txt_CCName" class="form-control " autocomplete="off" type="text" name="CCName" placeholder="@Resource.CostCenter" disabled>
            </div>
        }
            @if (ViewBag.LedgerDetails != null)
            {
                if (ViewBag.LedgerDetails.Rows.Count > 0)
                {
                    <div class="col-md-3 col-sm-12 pl-0">
                        <label class="col-form-label label-align ">@Resource.FromDate</label>
                        <input id="FromDate1" class="form-control" value="@ViewBag.LedgerDetails.Rows[0]["FromDate"]" autocomplete="off" type="text" name="From" placeholder="@Resource.FromDate" disabled>
                    </div>
                    <div class="col-md-3 col-sm-12 pl-0">
                        <label class="col-form-label label-align ">@Resource.ToDate</label>
                        <input id="ToDate1" class="form-control " value="@ViewBag.LedgerDetails.Rows[0]["ToDate"]" autocomplete="off" type="text" name="To" placeholder="@Resource.ToDate" disabled>
                    </div>
                }
                else
                {
                    // set count 1 to show default textbox
                    count = 1;
                }
            }
            @if (ViewBag.LedgerDetails == null || count == 1)
            {
                <div class="col-md-3 col-sm-12 pl-0">
                    <label class="col-form-label label-align ">@Resource.FromDate</label>
                    <input id="FromDate1" class="form-control" autocomplete="off" type="text" name="From" placeholder="@Resource.FromDate" disabled>
                </div>
                <div class="col-md-3 col-sm-12 pl-0">
                    <label class="col-form-label label-align ">@Resource.ToDate</label>
                    <input id="ToDate1" class="form-control " autocomplete="off" type="text" name="To" placeholder="@Resource.ToDate" disabled>
                </div>
            }
            <div class="col-md-3 col-sm-12 pl-0">
                <label class="col-form-label label-align ">@Resource.Amount</label>
                <input id="Amt1" class="form-control num_right" autocomplete="off" type="text" name="Amount" placeholder="0000.00" disabled>
            </div>
            <div class="card-box table-responsive dy_table margin15 ">
                <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                    <table id="datatable-buttons4" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                        <thead>
                            <tr class="sticky-header">
                                <th width="8%"> @Resource.SrNo</th>
                                <th width="20%">@Resource.Voucher @Resource.Number</th>
                                <th width="17%">@Resource.Voucher  @Resource.Date</th>
                                @if (ViewBag.Flag == "List")/*Add by Hina sharma on 10-10-2024*/
                                {
                                    <th width="40%">@Resource.Narration</th>
                                }
                                <th width="15%">@Resource.Amount</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.LedgerDetails != null)
                            {
                                var srno = 1;
                                foreach (System.Data.DataRow dtr in ViewBag.LedgerDetails.Rows)
                                {
                                    <tr>
                                        <td>@srno</td>
                                        <td>@dtr["Vou_no"].ToString()</td>
                                        <td>@dtr["Vou_dt"].ToString()</td>
                                        @if (ViewBag.Flag == "List")/*Add by Hina sharma on 10-10-2024*/
                                        {
                                            <td>@dtr["narr"].ToString()</td>
                                        }
                                        <td class="num_right">@dtr["vou_Amt"]</td>
                                    </tr>
                                    srno = srno + 1;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="">@Resource.Close</button>

    </div>
</div>


