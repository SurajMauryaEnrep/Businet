@using EnRepMobileWeb.Resources;
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.LotDetail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div class="col-md-6 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.MaterialName
            </label>
            <input id="" class="form-control" autocomplete="off" type="text" name="MaterialName" placeholder="@Resource.MaterialName" disabled="">
          

        </div>
        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.UOM
            </label>
            <input id="ConsumeUOMBatchWise" class="form-control" type="text" name="UOM" placeholder="@Resource.UOM" disabled>
            <input type="hidden" id="HDConsumeUOMBatchWise" />

        </div>
        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align ">@Resource.Consumed @Resource.Quantity</label>
            <input id="ConsumeQuantityBatchWise" class="form-control num_right" type="text" name="Quantity" placeholder="0000.00" disabled>
        </div>
        <div class="ConsumeBatchDetail">
            <div class="card-box table-responsive dy_table margin15">
                <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                    <table id="ConsumeBatchWiseItemStockTbl1" data-order="" class="table table-striped table-bordered  rowhighlighttbl" style="width:100%">
                        <thead>
                            <tr class="sticky-header">
                                <th width="4%">@Resource.SrNo</th>
                                <th width="24%">@Resource.Lot</th>
                                <th width="24%">@Resource.Consumed @Resource.Quantity</th>
                                <th width="24%">@Resource.LotCost</th>
                                <th width="24%">@Resource.Total @Resource.LotCost</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>01</td>
                                <td>LOT#001</td>
                                <td class="num_right">100.00</td>
                                <td class="num_right">
                                    1.2
                                </td>
                                <td class="num_right">120</td>
                            </tr>
                            <tr>
                                <td>02</td>
                                <td>LOT#002</td>
                                <td class="num_right">50.00</td>
                                <td class="num_right">
                                    1.3
                                </td>
                                <td class="num_right">65.00</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr class="total">

                                <td>&nbsp;</td>
                                <td class="num_right">@Resource.Total @Resource.Cost</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td class="num_right">185</td>
                            </tr>
                            </tfoot>
                    </table>
                </div>
            </div>
            @*<table class="table table-bordered" id="ConsumeItembatchwiseDetailsTbl" style="margin-bottom:0rem !important;">
                <tr class="total">
                    <th width="80%" class="num_right">@Resource.Total</th>
                    <th class="num_right">
                    </th>
                </tr>
            </table>*@
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" disabled class="btn btn-primary btn-sm" id="">@Resource.Close</button>
        </div>
</div>
