@using EnRepMobileWeb.Resources;
@using System.Data;
@{
    var i = 0;
    var TotalOk = 0;
    var TotalNotOk = 0;
}
<style>
    #DttblGL_wrapper .dataTables_length {
        position: absolute;
    }
    #DttblGL_wrapper .dt-buttons {
        width: 10%;
        margin-left: 16%;
    }
    #DttblGL_filter {
        position: relative;
        float: right;
    }
    .loader1 {
        -webkit-animation: spin 2s linear infinite; /* Safari */
        animation: spin 2s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -40px; /* Half of width */
        margin-left: -40px; /* Half of height */
        z-index: 9999; /* Make sure it's on top of other elements */
        display: none; /* Initially hide the loader */
        /*    position: fixed;*/
    }
    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }
    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
    .loader1 div {
        width: 100%;
        height: 100%;
    }

    #DttblGL thead tr > :nth-child(4) {
        z-index: 100 !important;
        position: sticky;
        left: 0;
        top: 0;
    }
    #DttblGL tbody tr > :nth-child(4) {
        background: #ffffff;
        position: sticky;
        z-index: 1;
        left: 0;
    }
</style>
<div id="loader1" class="loader1">
    <img src="~/Content/Images/loader.gif" width="100" height="100" />
</div>
<div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height50VH">
    <table id="DttblGL" class="table table-striped table-bordered width1600 itmfrz">
        <thead>
            <tr class="sticky-header">
                <th width="2%">@Resource.SrNo</th>
                <th width="10%">@Resource.AccountType</th>
                <th width="18%">@Resource.AccountGroup</th>
                <th width="10%">@Resource.AccountName</th>
                <th width="8%">@Resource.CashFlowType</th>
                <th width="6%">@Resource.Currency</th>
                <th width="12%">@Resource.Bank @Resource.Address</th>
                <th width="10%">@Resource.AccountNumber</th>
                <th width="6%">@Resource.SWIFT_Code</th>
                <th width="6%">@Resource.IFSC_Code</th>
                <th width="6%">@Resource.BranchMapping</th>
                <th width="6%">@Resource.Upload @Resource.Status</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.ImportGLPreview != null)
            {
                var rowNo = 0;
                foreach (DataRow dtr in ViewBag.ImportGLPreview.Tables[0].Rows)
                {
                    rowNo = rowNo + 1;
            <tr>
                <td>@rowNo</td>
                <td>@dtr["acc_type"].ToString()</td>
                <td>@dtr["acc_grp_name"].ToString()</td>
                <td id="accountname">@dtr["acc_name"].ToString()</td>
                @switch (dtr["cf_type"].ToString())
                {
                    case "F":
                        dtr["cf_type"] = "Financial";
                        break;
                    case "I":
                        dtr["cf_type"] = "Investment";
                        break;
                    case "O":
                        dtr["cf_type"] = "Operational";
                        break;
                }
            <td class="center">@dtr["cf_type"].ToString()  </td>
                <td>@dtr["curr"].ToString()</td>
                <td>@dtr["bank_addr"].ToString()</td>
                <td>@dtr["acc_no"].ToString()</td>
                <td>@dtr["ifsc_code"].ToString()</td>
                <td>@dtr["swift_code"].ToString()</td>
                <td class="center"><button type="button" class="calculator subItmImg" onclick="BindGLBranchDetails(event)" id="" data-toggle="modal" data-target="#BranchMapping" data-backdrop="static" data-keyboard="false"><i class="fa fa-eye" aria-hidden="true" data-toggle="" title="@Resource.BranchMapping"></i></button></td>
                <td>
                    <div class="col-sm-10 no-padding">
                        @if (@dtr["UploadStatus"].ToString().ToLower() == "ok")
                        {
                            <i class="fa fa-check text-success " aria-hidden="true"></i>
                        }
                        else
                        {
                            <i class="fa fa-times-circle text-danger" aria-hidden="true"></i>

                        }
                    </div>
                    @if (@dtr["UploadStatus"].ToString().ToLower() != "ok")
                    {
                        <div class="col-sm-2 i_Icon">
                            <button type="button" id="ItmInfoBtnIcon" class="calculator" onclick="OnClickErrorDetails(event);" data-toggle="modal" data-target="#ErrorDetail" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/iIcon1.png" alt="" title="@Resource.Error @Resource.Detail">  </button>
                        </div>
                    }
                </td>
            </tr>
                }
            }
        </tbody>
    </table>

</div>
<div>
    <table id="tblstatus_id" class="table table-striped table-bordered">
        <tbody>
            @if (ViewBag.ImportGLPreview != null)
            {
                TotalOk = Convert.ToInt32(@ViewBag.ImportGLPreview.Tables[2].Rows[0]["TotalOk"].ToString());
                TotalNotOk = Convert.ToInt32(@ViewBag.ImportGLPreview.Tables[2].Rows[0]["TotalNotOk"].ToString());
                <tr class="total">
                    <td colspan="3" align="right" width="75%"><strong>@Resource.Total valid records</strong></td>
                    <td class="num_right"><span id="TotCons"></span>@ViewBag.ImportGLPreview.Tables[2].Rows[0]["TotalOk"].ToString()</td>
                    <td colspan="1" align="right" width="75%"><strong>@Resource.Total invalid records</strong></td>
                    <td class="num_right"><span id="TotCons">@ViewBag.ImportGLPreview.Tables[2].Rows[0]["TotalNotOk"].ToString()</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<input id="hdnOk" type="hidden" value="@TotalOk" />
<input id="hdnNotOk" type="hidden" value="@TotalNotOk" />

