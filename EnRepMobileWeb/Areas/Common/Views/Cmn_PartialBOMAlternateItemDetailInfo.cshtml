@using EnRepMobileWeb.Resources;
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Alternate @Resource.ItemDetail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>   
    <div class="modal-body pop_top">
        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.OperationName</label>
            <input id="Inf_Alt_OpName" class="form-control " autocomplete="off" type="text" name="OperationName" placeholder="@Resource.OperationName" disabled>
            <input hidden id="hdn_Inf_Alt_OpId"/>
        </div>
        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align ">@Resource.Item @Resource.Type</label>
            <input id="Inf_Alt_ItemType" class="form-control " autocomplete="off" type="text" name="ItemType" placeholder="@Resource.Item @Resource.Type" disabled>
            <input hidden id="hdn_Inf_Alt_ItemTypeId" />
        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align ">@Resource.Item @Resource.Name</label>
            <input id="Inf_Alt_ItemName" class="form-control " autocomplete="off" type="text" name="ItemName" placeholder="@Resource.Item @Resource.Name" disabled>
            <input hidden id="hdn_Inf_Alt_ItemId" />
        </div>
        <div class="col-md-2 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align ">@Resource.UOM</label>
            <input id="Inf_Alt_ItemUom" class="form-control " autocomplete="off" type="text" name="UOM" placeholder="@Resource.UOM" disabled>
            <input hidden id="hdn_Inf_Alt_ItemUomId" />
        </div>
        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="" data-order="" class="table table-striped table-bordered " style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="5%"> @Resource.SrNo</th>
                            <th width="45%">@Resource.Alternate @Resource.ItemName</th>
                            <th width="15%">@Resource.UOM</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.AltenateItemDetailItemWiseInfo != null)
                        {
                            var SrNo = 1;
                            
                            foreach (System.Data.DataRow dr in ViewBag.AltenateItemDetailItemWiseInfo.Rows)
                            {
                                <tr>
                                    <td class="pl-2" id="AltSrNo">@SrNo</td>
                                    <td>
                                        <div class="lpo_form col-sm-11 no-padding">
                                            @dr["item_name"]
                                                                                @*<input class=" form-control" disabled value='@dr["item_name"]' />*@
                                                                                <input hidden class=" form-control" id="infAltItemId" value='@dr["alt_item_id"]' />
                                                                            </div>
                                        <div class="col-sm-1 i_Icon">
                                            <button type="button" id="" class="calculator" onclick="ItemInfoBtnClick('@dr["alt_item_id"]');" data-toggle="modal" data-target="#ItemInfo" data-backdrop="static" data-keyboard="false"> <img src="/Content/Images/iIcon1.png" alt="" title="@Resource.ItemInformation"> </button>
                                        </div>
                                    </td>
                                    <td id="td_AltUom">
                                        @dr["uom_alias"]
                                        @*<input id="td_AltUom" class="form-control date" autocomplete="off" type="text" name="UOM_itemName" value='@dr["uom_alias"]' required="required" placeholder="@Resource.UOM" disabled="">*@
                                        <input hidden id="tdAltUomId" value='@dr["uom_id"]' />
                                    </td>
                                </tr>
                                SrNo = SrNo+1;
                            }
                        }



                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="">@Resource.Close</button>
        </div>
    </div>
