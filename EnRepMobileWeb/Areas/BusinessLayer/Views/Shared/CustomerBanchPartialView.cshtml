@using EnRepMobileWeb.Resources;
@{
    var Disable = true;
    if (Session["TransType"].ToString() == "Update")
    {
        if (Session["Command"].ToString() == "Edit")
        {
            Disable = false;
        }
        else
        {
            Disable = true;
        }
    }
    else
    {
        Disable = false;
    }

    if (Session["TransType"].ToString() == "Refresh")
    {
        Disable = true;
    }
    if (Session["TransType"].ToString() == "Save")
    {
        if (Session["Command"].ToString() == "Add")
        {
            Disable = false;
        }
        else
        {
            Disable = true;
        }
    }
    if (ViewBag.Message == "Duplicate")
    {
        Disable = false;
    }

}
<section class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingFour">
        <h4 class="panel-title"> <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="true" aria-controls="collapseFour">@Resource.BranchMapping <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span> </a> </h4>
    </div>
    <div id="collapseFour" class="panel-collapse collapse show" role="tabpanel" aria-labelledby="headingFour">
        <form action="" method="post" novalidate>
            <div class="panel-body">
                <div class="table-responsive width99">
                    <div class="col-md-12 col-sm-12">
                        <table class="table table-striped jambo_table bulk_action margin5" id="CustBrDetail">
                            <thead>
                                <tr class="headings">
                                    <th class="" align="left" style="text-align:left;">@Resource.BranchName </th>
                                    <th class="no-link last" align="left" style="text-align:left;"><span class="nobr">@Resource.Action</span> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Disable)
                                {
                                    if (ViewBag.CustomerBranchList != null)
                                    {

                                        foreach (System.Data.DataRow dr in ViewBag.CustomerBranchList.Rows)
                                        {
                                            <tr>

                                                <td>@dr["comp_nm"] <input id="hdCustomerBranchId" type="hidden" value=@dr["comp_id"] runat="server" /></td>
                                                @if (dr["BrActStatus"].ToString() == "Y" || dr["BrActStatus"].ToString() == "NEW")
                                                {
                                                    <td class=" ">
                                                        <div class="custom-control custom-switch col-md-2 col-sm-12" style="margin-bottom:0px; margin-left:20px;">
                                                            <input type="checkbox" class="custom-control-input col-md-3 col-sm-12 margin-switch" id="cust_act_stat_@dr["comp_id"]" onclick="ReadBranchList();" checked disabled>
                                                            <label class="custom-control-label col-md-9 col-sm-12" for="cust_act_stat_@dr["comp_id"]" style="padding: 3px 0px;" disabled="disabled"></label>
                                                        </div>

                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class=" ">
                                                        <div class="custom-control custom-switch col-md-2 col-sm-12" style="margin-bottom: 0px; margin-left: 20px;">
                                                            <input type="checkbox" class="custom-control-input col-md-3 col-sm-12 margin-switch" id="cust_act_stat_@dr["comp_id"]" onclick="ReadBranchList();" disabled>
                                                            <label class="custom-control-label col-md-9 col-sm-12" for="cust_act_stat_@dr["comp_id"]" style="padding: 3px 0px;" disabled="disabled"></label>
                                                        </div>

                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    if (ViewBag.CustomerBranchList != null)
                                    {
                                        foreach (System.Data.DataRow dr in ViewBag.CustomerBranchList.Rows)
                                        {
                                            var disableBranch = "";
                                            
                                            <tr>
                                                @if (ViewBag.BranchList != null)
                                                {
                                                    foreach (System.Data.DataRow Row in ViewBag.BranchList.Rows)
                                                    {


                                                        if (@dr["comp_id"].ToString() == @Row["br_id"].ToString())
                                                        {
                                                            disableBranch = "disabled";
                                                        }

                                                    }
                                                }
                                                <td>@dr["comp_nm"] <input id="hdCustomerBranchId" type="hidden" value=@dr["comp_id"] runat="server" /></td>
                                                @if (dr["BrActStatus"].ToString() == "Y" || dr["BrActStatus"].ToString() == "NEW")
                                                {
                                                    <td class=" ">
                                                        <div class="custom-control custom-switch col-md-2 col-sm-12" style="margin-bottom:0px; margin-left:20px;">
                                                            <input type="checkbox" @disableBranch class="custom-control-input col-md-3 col-sm-12 margin-switch" id="cust_act_stat_@dr["comp_id"]" onclick="ReadBranchList();" checked>
                                                            <label class="custom-control-label col-md-9 col-sm-12" for="cust_act_stat_@dr["comp_id"]" style="padding: 3px 0px;" disabled="disabled"></label>
                                                        </div>

                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class=" ">
                                                        <div class="custom-control custom-switch col-md-2 col-sm-12" style="margin-bottom: 0px; margin-left: 20px;">
                                                            <input type="checkbox" @disableBranch class="custom-control-input col-md-3 col-sm-12 margin-switch" id="cust_act_stat_@dr["comp_id"]" onclick="ReadBranchList();">
                                                            <label class="custom-control-label col-md-9 col-sm-12" for="cust_act_stat_@dr["comp_id"]" style="padding: 3px 0px;" disabled="disabled"></label>
                                                        </div>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>