@model EnRepMobileWeb.MODELS.ApplicationLayer.Procurement.ServicePurchaseInvoice.ServicePIListModel
@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/Procurement/ServicePurchaseInvoice/ServicePIList.js"></script>

<table id="datatable-buttons" class="table table-striped width1800 rowhighlighttbl itmfrz" cellspacing="0" width="100%">
    <thead>
        <tr class="sticky-header">
            <th width="4%"> @Resource.SrNo</th>
            <th width="6%" class="itmStick">@Resource.Invoice <br /> @Resource.Number</th>
            <th width="6%">@Resource.Invoice <br /> @Resource.Date</th>
            <th style="display:none;">@Resource.Invoice <br /> @Resource.Date</th>
            <th width="6%">@Resource.Source <br /> @Resource.Type</th>
            <th width="6%">@Resource.Supplier <br /> @Resource.Name</th>
            <th width="6%">@Resource.BillNumber</th>
            <th width="6%">@Resource.BillDate</th>
            <th width="6%">@Resource.EInvoice <br /> @Resource.Number </th>
            <th width="6%">@Resource.Currency</th>
            <th width="6%">@Resource.Invoice <br /> @Resource.Value</th>
            <th width="6%">@Resource.Status</th>
            <th width="6%">@Resource.CreatedBy</th>
            <th width="6%">@Resource.Createdon</th>
            <th width="6%">@Resource.ApprovedBy</th>
            <th width="6%">@Resource.ApprovedOn</th>
            <th width="6%">@Resource.AmendedBy</th>
            <th width="6%">@Resource.AmendedOn</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SPIList != null)
        {
            foreach (var row in Model.SPIList)
            {
                rowId++;
        <tr>
            <td>@rowId</td>
            <td id="SPINo" class="ItmNameBreak itmStick tditemfrz">@row.InvNo</td>
            <td id="">@row.InvDate</td>
            <td style="display:none;" id="SPIDt">@row.InvDt</td>
            <td>@row.InvType</td>
            @*<td>@row.SourceDocNo</td>*@
            <td id="SuppName">@row.SuppName</td>
            <td id="Bill">@row.bill_no</td>
            <td id="billdt">@row.bill_dt</td>
            <td id="einvoice">@row.einvoice</td>
            <td>@row.Currency</td>
            <td class="num_right">@row.InvValue</td>
            <td id="Doc_Status">@row.InvStauts</td>
            <td>@row.create_by</td>
            <td>@row.CreateDate</td>
            <td>@row.app_by</td>
            <td>@row.ApproveDate</td>
            <td>@row.mod_by</td>
            <td>@row.ModifyDate</td>

        </tr>
            }
        }
    </tbody>
</table>
@if (Model.SPISearch != null)
{
    if (Model.SPISearch == "SPI_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        //Session["SPISearch"] = null;
    }
}



