@using EnRepMobileWeb.Resources;
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/FixedAssetManagement/DepreciationProcess/DepreciationProcess.js"></script>
<table id="datatable-buttons" class="table table-striped rowhighlighttbl width2000 itmfrz" cellspacing="0" width="100%">
    <thead>
        <tr class="sticky-header">
            <th width="4%"> @Resource.SrNo</th>
            <th width="7%" class="ItmNameBreak itmStick tditemfrz">@Resource.Document @Resource.Number</th>
            <th width="7%">@Resource.Document @Resource.Date</th>
            <th style="display:none;">@Resource.Invoice <br /> @Resource.Date</th>
            <th width="10%">@Resource.Asset @Resource.Group</th>
            <th width="7%">@Resource.FinancialYear</th>
            <th width="7%">@Resource.Period</th>
            <th width="7%">@Resource.Depreciation  @Resource.Value</th>
            <th width="9%">@Resource.Additional @Resource.Description @Resource.Value</th>
            <th width="7%">@Resource.Status</th>
            <th width="7%">@Resource.CreatedBy</th>
            <th width="7%">@Resource.Createdon</th>
            <th width="7%">@Resource.ApprovedBy</th>
            <th width="7%">@Resource.ApprovedOn</th>
            <th width="7%">@Resource.AmendedBy</th>
            <th width="7%">@Resource.AmendedOn</th>
        </tr>
    </thead>
    <tbody>

        @if (ViewBag.ListDetail != null)
        {
            int Srno = 1;
            foreach (System.Data.DataRow dr in ViewBag.ListDetail.Rows)
            {
        <tr role="row" class="odd">
            <td class="sorting_1">@Srno</td>
            <td id="DPDocNo" class="ItmNameBreak itmStick tditemfrz">@dr["DPDocNo"].ToString()</td>
            <td id="DPDocDt">@dr["DPDocDt"].ToString()</td>
            <td style="display:none;" id="SSIDt">@dr["DPDocDate"].ToString()</td>
            <td id="AssetGroup">@dr["AssetGroup"].ToString()</td>
            <td>@dr["f_fy"].ToString()</td>
            <td>@dr["f_period_name"].ToString()</td>
            <td class="num_right">@dr["dep_val"].ToString()</td>
            <td class="num_right">@dr["add_dep_val"].ToString()</td>
            <td id="FADP_Status">@dr["DPStatus"].ToString()</td>
            <td>@dr["create_by"].ToString()</td>
            <td>@dr["CreateDate"].ToString()</td>
            <td>@dr["app_by"].ToString()</td>
            <td>@dr["ApproveDate"].ToString()</td>
            <td>@dr["mod_by"].ToString()</td>
            <td>@dr["ModifyDate"].ToString()</td>
        </tr>
                Srno = Srno + 1;
            }
        }
    </tbody>
</table>
@if (ViewBag.ListSearch != null)
{
    if (ViewBag.ListSearch == "ListSearch")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        ViewBag.ListSearch = null;
    }
}








