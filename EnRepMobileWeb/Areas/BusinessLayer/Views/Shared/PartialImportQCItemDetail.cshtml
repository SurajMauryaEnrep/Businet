
@using EnRepMobileWeb.Resources;
@using System.Data;
@{
    var i = 0;
    var TotalOk = 0;
    var TotalNotOk = 0;
}
<style>

    #DttblBtnsQCItem_wrapper .dataTables_length {
        position: absolute;
    }

    #DttblBtnsQCItem_wrapper .dt-buttons {
        width: 10%;
        margin-left: 16%;
    }

    #DttblBtnsQCItem_filter {
        position: relative;
        float: right;
    }

    .loader1 {
        -webkit-animation: spin 2s linear infinite; /* Safari */
        animation: spin 2s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -40px; /* Half of width */
        margin-left: -40px; /* Half of height */
        z-index: 9999; /* Make sure it's on top of other elements */
        display: none; /* Initially hide the loader */
        /*    position: fixed;*/
    }

    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loader1 div {
        width: 100%;
        height: 100%;
    }

    /*#DttblBtnscustomer thead tr > :nth-child(4) {
        z-index: 100 !important;
        position: sticky;
        left: 0;
        top: 0;
    }

    #DttblBtnscustomer tbody tr > :nth-child(4) {
        background: #ffffff;
        position: sticky;
        z-index: 1;
        left: 0;
    }*/
</style>
<div id="loader1" class="loader1">
    <img src="~/Content/Images/loader.gif" width="100" height="100" />
</div>

<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height50VH">

    <table id="DttblBtnsQCItem" class="table table-striped table-bordered width1100 itmfrz">
        <thead>
            <tr class="sticky-header">
                <th width="2%">@Resource.SrNo</th>
                <th width="24%">@Resource.Item @Resource.Name </th>
                <th width="12%">@Resource.ParameterName</th>
                <th width="8%">@Resource.ParameterType</th>
                <th width="8%">@Resource.LowerRange</th>
                <th width="8%">@Resource.UpperRange </th>
                <th width="8%">@Resource.UOM</th>
                <th width="20%">@Resource.remarks</th>
                <th width="8%">@Resource.Upload @Resource.Status</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.ImportQCdata != null)
            {
                var rowNo = 0;
                foreach (DataRow dtr in ViewBag.ImportQCdata.Tables[0].Rows)
                {
                    rowNo = rowNo + 1;
            <tr>
                <td> @rowNo </td>
                <td id="ItemName"> @dtr["item_name"].ToString() </td>
                <td id="paramname"> @dtr["param_name"].ToString() </td>
                <td> @dtr["param_type"].ToString() </td>
                <td class="num_right"> @dtr["lower_val"].ToString() </td>
                <td class="num_right"> @dtr["upper_val"].ToString() </td>
                @if (dtr["uom"].ToString() == "0")
                {
                    dtr["uom"] = "";
                }
                <td> @dtr["uom"].ToString()</td>
                <td> @dtr["remarks"].ToString() </td>
                <td>
                    <div class="col-sm-10 no-padding">
                        @if (@dtr["UploadStatus"].ToString().ToLower() == "ok")
                        {
                            <i class="fa fa-check text-success " aria-hidden="true"></i>
                        }
                        else
                        {
                            <i class="fa fa-times-circle text-danger" aria-hidden="true"></i>

                        }
                    </div>
                    @if (@dtr["UploadStatus"].ToString().ToLower() != "ok")
                    {
                        <div class="col-sm-2 i_Icon">
                            <button type="button" id="ItmInfoBtnIcon" class="calculator" onclick="OnClickErrorDetails(event);" data-toggle="modal" data-target="#ErrorDetail" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/iIcon1.png" alt="" title="@Resource.Error @Resource.Detail">  </button>
                        </div>
                    }
                </td>
            </tr>

                }
            }
        </tbody>
    </table>
</div>
<div>
    <table id="tblstatus_id" class="table table-striped table-bordered">
        <tbody>
            @if (ViewBag.ImportQCdata != null)
            {
                TotalOk = Convert.ToInt32(@ViewBag.ImportQCdata.Tables[1].Rows[0]["TotalOk"].ToString());
                TotalNotOk = Convert.ToInt32(@ViewBag.ImportQCdata.Tables[1].Rows[0]["TotalNotOk"].ToString());
                <tr class="total">
                    <td colspan="3" align="right" width="75%"><strong>@Resource.Total valid records</strong></td>
                    <td class="num_right"><span id="TotCons"></span>@ViewBag.ImportQCdata.Tables[1].Rows[0]["TotalOk"].ToString()</td>
                    <td colspan="1" align="right" width="75%"><strong>@Resource.Total invalid records</strong></td>
                    <td class="num_right"><span id="TotCons">@ViewBag.ImportQCdata.Tables[1].Rows[0]["TotalNotOk"].ToString()</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<input id="hdnOk" type="hidden" value="@TotalOk" />
<input id="hdnNotOk" type="hidden" value="@TotalNotOk" />

