@using EnRepMobileWeb.Resources;
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<style>
    #DepreciationHistory .dataTables_length, .DataTable1_filter, .dt-buttons, .buttons-csv, .buttons-pdf {
        float: left;
    }

    #DepreciationHistory .dt-buttons {
        width: 10%;
        margin-left: 2%;
    }

    #DepreciationHistory a.buttons-pdf {
        display: none;
    }
</style>
<div class="DepreciationHistoryDetails" style="min-width:900px;">
    <div class="modal-content" id="tbody_ItemHistory">
        <div class="modal-header">
            <h2> @Resource.Depreciation @Resource.History</h2>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body pop_top">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                    <label class="col-form-label label-align">@Resource.Asset  @Resource.Description</label>
                    <input id="AssetDescriptionHis" class="form-control" autocomplete="off" type="text" name="AssetDescription" placeholder="@Resource.Asset @Resource.Description" disabled="">
                </div>
                <div class="col-md-55 pl-0">
                    <label class="col-form-label label-align">@Resource.Asset @Resource.Label</label>
                    <input id="AssetLabelHis" class="form-control" autocomplete="off" type="text" name="AssetLabel" placeholder="@Resource.Asset @Resource.Label" disabled="">
                </div>
                <div class="col-md-55 pl-0">
                    <label class="col-form-label label-align">@Resource.Serial @Resource.Number</label>
                    <input id="SerialNumberHis" class="form-control" autocomplete="off" type="text" name="SerialNumber" placeholder="@Resource.Serial @Resource.Number" disabled="">
                </div>

                <div class="col-md-55 pl-0">
                    <label class="col-form-label label-align">@Resource.Procured  @Resource.Value</label>
                    <input id="ProcuredValueHis" class="form-control" autocomplete="off" type="text" name="ProcuredValue" placeholder="@Resource.Procured @Resource.Number" Value="" disabled="">
                </div>
            </div>
            <div class="card-box table-responsive dy_table mt-2">
                <div id="DPHListTbody" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                    <table id="tbl_AsssetHistory" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                        <thead>
                            <tr class="sticky-header">
                                <th width="3%">@Resource.SrNo</th>
                                <th width="20%">@Resource.SourceDocumentNumber</th>
                                <th width="16%">@Resource.SourceDocumentDate</th>
                                <th width="14%">@Resource.Depreciation  <br /> @Resource.Value</th>
                                <th width="19%">@Resource.Addition @Resource.Depreciation  <br /> @Resource.Value</th>
                                <th width="13%">@Resource.Revised <br /> @Resource.Value</th>
                                <th width="15%">@Resource.AsOn @Resource.Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.DepreciationHistory != null)
                            {
                                int i = 0;
                                foreach (System.Data.DataRow Row in ViewBag.DepreciationHistory.Rows)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@Row["Src_Doc_no"].ToString()</td>
                                        <td>@Row["Src_Doc_date"].ToString()</td>
                                        <td>@Row["dep_val"].ToString()</td>
                                        <td>@Row["Add_dep_val"].ToString()</td>
                                        <td>@Row["revised_val"].ToString()</td>
                                        <td>@Row["ason_date"].ToString()</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
