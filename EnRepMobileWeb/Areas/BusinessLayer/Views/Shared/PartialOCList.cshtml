 @using EnRepMobileWeb.Resources;
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/BusinessLayer/OCSetup/OCList.js"></script>
@*//Modifyed by Shubham Maurya on 14-12-2022 Removed All Session//*@
<table id="datatable-buttons" class="table table-striped table-bordered width1300 rowhighlighttbl" style="width:100%">
    <thead>
        <tr class="sticky-header">
            <th width="3%">@Resource.SrNo</th>
            <th> @Resource.OCID</th>
            <th>@Resource.OtherChargeName</th>
            <th>@Resource.GLAccount</th>
            @*<th>@Resource.OtherChargeType</th>*@
            @*<th>@Resource.ThirdPartyName</th>*@
            <th width="10%">@Resource.ApplicableDate</th>
            <th width="5%">@Resource.Active</th>
            <th width="5%">@Resource.HSNCode</th>
            <th hidden="hidden"></th>
            <th hidden="hidden"></th>
            <th width="9%">@Resource.CreatedBy</th>
            <th width="9%">@Resource.Createdon</th>
            <th width="9%">@Resource.AmendedBy</th>
            <th width="9%">@Resource.AmendedOn</th>
        </tr>
    </thead>
    <tbody id="OCList">
        @if (ViewBag.VBOCList != null)
        {
            foreach (System.Data.DataRow item in ViewBag.VBOCList.Rows)
            {
        <tr>
            <td>@item["SNo"].ToString()</td>
            <td id="ocid">@item["oc_id"].ToString() </td>
            <td>@item["oc_name"].ToString() </td>
            <td>@item["acc_name"].ToString()</td>
            @*<td id="oc_type">@item["oc_type"].ToString()</td>*@
            @*<td>@item["supp_name"].ToString() </td>*@
            <td>@item["app_date"].ToString() </td>

            @if (@item["act_status"].ToString() == "N")
            {
                <td class="center"><i class="fa fa-times-circle text-danger" aria-hidden="true"></i></td>
            }
            else
            {
                <td class="center"><i class="fa fa-check text-success " aria-hidden="true"></i></td>
            }
            <td>@item["HSN_code"].ToString()</td>
            <td hidden="hidden" id="act_status">@item["act_status"].ToString()</td>
            <td id="TaxApplicable" hidden="hidden">@item["tax_applicable"].ToString()</td>
            <td>@item["create_by"].ToString()</td>
            <td>@item["create_dt"].ToString()</td>
            <td>@item["mod_by"].ToString()</td>
            <td>@item["mod_dt"].ToString()</td>
        </tr>
            }
        }
    </tbody>
</table>
@if (Model.OCSearch != null)
{
    //if (Session["OCSearch"].ToString() == "OC_Search")
    if (Model.OCSearch == "OC_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
    }
}
