@model EnRepMobileWeb.MODELS.ApplicationLayer.SalesAndDistribution.DomesticSalesQuotation.DomesticSalesQuotationListModel

@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/SalesAndDistribution/DomesticSalesQuotation/DomesticSalesQuotationList.js"></script>


<table id="datatable-buttons" class="table table-striped table-bordered width1900 rowhighlighttbl itmfrz" style="width:100%">
    <thead>
        <tr class="sticky-header">
            <th>&nbsp;</th>
            <th width="3%">@Resource.SrNo</th>
            <th width="9%" class="itmStick">@Resource.Quotation <br /> @Resource.Number</th>
            <th width="5%">@Resource.Quotation <br /> @Resource.Date</th>
            <th width="8%">@Resource.SalesPerson </th>
            <th width="8%">@Resource.Customer <br /> @Resource.Type</th>
            <th width="17%">@Resource.CustomerName</th>
            <th width="5%">@Resource.Currency</th>
            <th>@Resource.Quotation <br /> @Resource.Value</th>
            <th>@Resource.Status</th>
            <th width="8%">@Resource.CreatedBy</th>
            <th width="8%">@Resource.Createdon</th>
            <th width="8%">@Resource.ApprovedBy</th>
            <th width="8%">@Resource.ApprovedOn</th>
            <th width="8%">@Resource.AmendedBy</th>
            <th width="8%">@Resource.AmendedOn</th>
            <th hidden="hidden">@Resource.Amendment</th>
            <th hidden="hidden">@Resource.Quotation <br /> @Resource.Number</th>
            <th hidden="hidden"></th>

        </tr>
    </thead>
    <tbody>
        @if (Model.DomesticQuotList != null)
        {
            foreach (var row in Model.DomesticQuotList)
            {
                rowId++;
        <tr>
            <td class="center">
                <a class="tooltip-test" id="QuotationTracking" data-toggle="modal" data-target="#QuotationTracking" data-backdrop="static" data-keyboard="false" title="@Resource.QuotationTracking">
                    <img src="~/Content/Images/PurchaseOrderTracking2.png" id="QuotationTrackingIcon" onclick="OnClickQTTrackingBtn(event)" title=" @Resource.QuotationTracking" width="20" height="20" />
                </a>
            </td>
            <td>@rowId</td>
            <td id="QuotationNo" class="ItmNameBreak itmStick tditemfrz">@row.QuotationNo</td>
            <td id="QuotationDate">@row.QuotationDate</td>
            <td id="">@row.SalesPerson</td>
            <td>@row.Cust_type</td>
            <td id="cust_name">@row.cust_name</td>
            <td class="center">@row.curr_logo</td>
            <td align="right">@row.net_val_bs</td>
            <td id="Doc_Status">@row.QTStauts</td>
            <td>@row.create_by</td>
            <td>@row.CreateDate</td>
            <td>@row.app_by</td>
            <td>@row.ApproveDate</td>
            <td>@row.mod_by</td>
            <td>@row.ModifyDate</td>
            <td hidden="hidden" id="dllAmendment">@row.Amendment</td>
            <td hidden="hidden" id="hdnQuotationNo">@row.hdnQuotationNo</td>
            <td hidden="hidden" id="rev_no">@row.rev_no</td>

        </tr>
            }
        }
    </tbody>
</table>
@if (Model.DSQSearch != null)
{
    if (Model.DSQSearch == "DSQ_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
    }
}