@using EnRepMobileWeb.Resources;

@{
    var Disable = true;
    if (ViewBag.TransType != null)
    {
        if (ViewBag.TransType == "Update")
        {
            if (ViewBag.Command == "Edit")
            {
                Disable = false;
            }
            else
            {
                Disable = true;
            }
        }
        else
        {
            if (ViewBag.Command == "Refresh")
            {
                Disable = true;
            }
            else
            {
                Disable = false;
            }
        }
    }
}

<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.PackagingDetail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top:0px;">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <label class="col-form-label label-align">@Resource.ItemName</label>
                <input id="PackagingDtlItemName" disabled class="form-control" autocomplete="off" maxlength="25" tabindex="5" type="text" name="ItemName" placeholder="ItemName"  onblur="this.placeholder='ItemName'">
                <input type="hidden" id="hd_PackagingItemId" value="" />
            </div>
            <div class="col-md-3 col-sm-12" style="padding-left: 0px;">
                <label class="col-form-label label-align"> @Resource.UOM</label>
                <input id="PackagingDtlUOM" disabled class="form-control" autocomplete="off" maxlength="25" tabindex="5" type="text" name="UOM" placeholder="@Resource.UOM">
            </div>
            <div class="col-md-3 col-sm-12" style="padding-left: 0px;">
                <label class="col-form-label label-align num_right_label"> @Resource.PackedQuantity</label>
                <input id="PackagingDtlPackedQty" disabled class="form-control num_right" autocomplete="off" maxlength="25" tabindex="5" type="text" name="UOM" placeholder="@Resource.UOM">
            </div>
        </div>

        <div id="PackagingDetail" class="price_item_detail tableFixHead height30VH margin10">
            <table class="table table-bordered" id="PackagingItemDetailTbl">
                <thead>
                    <tr class="headings">
                        <th align="right" width="35%">@Resource.Packaging <br/> @Resource.Item</th>
                        <th align="right">@Resource.Dimensions</th>
                        <th align="right">@Resource.Packed <br /> @Resource.Quantity</th>
                        <th align="right">@Resource.Physical <br /> @Resource.Packs</th>
                        <th align="right">@Resource.CBM</th>
                    </tr>
                </thead>
                <tr>
                    <td>
                        <div class="lpo_form">
                            @if (Disable)
                            {
                                <select class="form-control" disabled id="PackagingItemddl" onchange="OnChangePackagingItemList()"></select>
                            }
                            else
                            {
                                //if (Session["Command"].ToString() == "Edit" && ViewBag.DocumentCode == "A")
                                if (ViewBag.Command == "Edit" && ViewBag.DocumentCode == "A" && ViewBag.Amend=="")
                                {
                                    <select class="form-control" disabled id="PackagingItemddl" onchange="OnChangePackagingItemList()"></select>
                                }
                                else
                                {
                                    <select class="form-control" id="PackagingItemddl" onchange="OnChangePackagingItemList()"></select>
                                }
                            }
                            <span id="packagingItem_Error" class="error-message is-visible"></span>
                        </div>
                    </td>
                    <td><input id="PackagingDimensions" disabled class="form-control" type="text" name="Dimensions" placeholder="@Resource.Dimensions"  onblur="this.placeholder = '@Resource.Dimensions'"></td>
                    <td><input id="PackagingPackedQuantity" disabled class="form-control num_right" type="text" name="PackedQuantity" placeholder="@Resource.PackedQuantity"  onblur="this.placeholder = '@Resource.PackedQuantity'"></td>
                    <td><input id="PackagingNumberOfPacks" disabled class="form-control num_right" type="text" name="NumberOfPacks" placeholder="@Resource.NumberOfPacks"  onblur="this.placeholder = '@Resource.NumberOfPacks'"></td>
                    <td><input id="PackagingCBM" disabled class="form-control num_right" type="text" name="CBM" placeholder="@Resource.CBM"  onblur="this.placeholder = '@Resource.CBM'"></td>
                </tr>
                <tbody>
                </tbody>
            </table>
        </div>

    </div>
    <div class="modal-footer">
        @if (Disable)
        {
            @*<button type="button" id="btnPackagindSaveAndExit" disabled class="btn btn-primary btn-sm">@Resource.SaveAndExit</button>
            <button type="button" id="btnPackagindDiscardAndExit" disabled class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.DiscardAndExit</button>*@
        }
        else
        {
            //if (Session["Command"].ToString() == "Edit" && ViewBag.DocumentCode == "A")
            if (ViewBag.Command == "Edit" && ViewBag.DocumentCode == "A" && ViewBag.Amend == "")
            {
                @*<button type="button" id="btnPackagindSaveAndExit" disabled class="btn btn-primary btn-sm">@Resource.SaveAndExit</button>
                <button type="button" id="btnPackagindDiscardAndExit" disabled class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.DiscardAndExit</button>*@
            }
            else
            {
                <button type="button" id="btnPackagindSaveAndExit" onclick="OnclickPackagindSaveAndExitBtn()" class="btn btn-primary btn-sm">@Resource.SaveAndExit</button>
                <button type="button" id="btnPackagindDiscardAndExit" class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.DiscardAndExit</button>
            }
        }

    </div>
</div>

