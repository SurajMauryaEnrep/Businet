@using EnRepMobileWeb.Resources;
@{
    decimal TtlproduceQty = 0;
}
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.WIP @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body pop_top">
        <div class="col-md-6 col-sm-12">
            <label class="col-form-label label-align">@Resource.Item @Resource.Name</label>
            <input autocomplete="off" class="form-control" id="txtItemName11" maxlength="25" name="ItemName" placeholder="@Resource.Item @Resource.Name" readonly="readonly" type="text" value="">
        </div>
        <div class="col-md-2 col-sm-12">
            <label class="col-form-label label-align">@Resource.UOM</label>
            <input autocomplete="off" class="form-control" id="txtUom11" maxlength="25" name="UOM" placeholder="@Resource.UOM" readonly="readonly" type="text" value="">

        </div>
        <div class="card-box table-responsive">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1">
                <div class="col-md-12 col-sm-12">
                    <table class="table table-striped jambo_table bulk_action margin5 rowhighlighttbl itmfrz">
                        <thead>
                            <tr class="headings">
                                <th width="3%">@Resource.SrNo</th>
                                <th width="25%" class="itmStick">@Resource.Document <br /> @Resource.Number</th>
                                <th width="25%">@Resource.Document <br /> @Resource.Date</th>
                                <th width="30%">@Resource.Shopfloor <br /> @Resource.Name</th>
                                <th width="17%">@Resource.Produced <br /> @Resource.Quality  </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.WIPDetail != null)
                            {
                                var rowId = 1;
                                foreach (System.Data.DataRow dr in ViewBag.WIPDetail.Rows)
                                {
                                    <tr>
                                        <td>@rowId</td>
                                        <td class="ItmNameBreak itmStick tditemfrz">@dr["cnf_no"].ToString()</td>
                                        <td>@dr["cnf_dt"].ToString()</td>
                                        <td>@dr["shfl_name"].ToString()</td>
                                        <td class="num_right">@dr["prod_qty"]</td>
                                    </tr>
                                    rowId = rowId + 1;
                                    TtlproduceQty = TtlproduceQty + Convert.ToDecimal(@dr["prod_qty"].ToString());
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="total font-weight-bold">
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td class="num_right">@Resource.Total</td>
                                <td class="num_right">@TtlproduceQty</td>
                            </tr>

                        </tfoot>
                        @*<tfoot>
                                <tr class="total">
                                    <td>&nbsp;</td>
                                </tr>
                            </tfoot>*@
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.Close</button>
    </div>
</div>
