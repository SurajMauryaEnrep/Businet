@using EnRepMobileWeb.Resources;
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Quantity @Resource.Detail</h2> <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body no-padding">
        <div class="col-md-4 col-sm-12">
            <label class="col-form-label label-align">@Resource.ItemName</label>
            <input id="IconItemName" class="form-control" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="ItemName" placeholder="@Resource.ItemName" onblur="this.placeholder = '@Resource.ItemName'" disabled>
            <input type="hidden" id="RQhdItemId" style="display: none;" />
        </div>
        <div class="col-md-1 col-sm-12 pl-0">
            <label class="col-form-label label-align">@Resource.UOM</label>
            <input id="IconUOM" class="form-control" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="UOM" placeholder="@Resource.UOM" onblur="this.placeholder = '@Resource.UOM'" disabled>
            <input type="hidden" id="RQhdUomId" style="display: none;" />
        </div>
        <div class="col-md-2 col-sm-12" id="DivSrtQty">
            <label class="col-form-label label-align">@Resource.Short @Resource.Quantity</label>
            <input id="IconShortQuantity" class="form-control num_right" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="ShortQuantity" placeholder="@Resource.Short @Resource.Quantity" onblur="this.placeholder = '@Resource.Short @Resource.Quantity'" disabled>
        </div>
        <div class="col-md-2 col-sm-12 no-padding" id="DivPlusQty">
            <label class="col-form-label label-align">@Resource.Surplus  @Resource.Quantity</label>
            <input id="IconSurplusQuantity" class="form-control num_right" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="GRNDate" placeholder="@Resource.Surplus @Resource.Quantity" onblur="this.placeholder = '@Resource.Surplus @Resource.Quantity'" disabled>
        </div>
    </div>
    <div class="price_item_detail">
        <div class="col-md-12 col-sm-12">
            <div class="tableFixHead height30VH margin5" style="width:100%;">
                <table class="table table-bordered margin5" id="QtyDetailsTbl" style="width:100%;">
                    <thead>
                        <tr class="sticky-header">
                            <th hidden>@Resource.Warehouse</th>
                            <th width="8%">@Resource.Lot</th>
                            <th width="11%">@Resource.Batch1</th>
                            <th width="9%">@Resource.Serial1</th>
                            <th width="19%">@Resource.Manufacturer @Resource.Name</th>
                            <th width="8%">@Resource.MRP</th>
                            <th width="5%">@Resource.Manufactured <br /> @Resource.Date</th>
                            <th width="5%">@Resource.ExpiryDate</th>
                            <th width="8%">@Resource.CostPrice</th>
                            <th width="8%">@Resource.Available <br /> @Resource.Quantity</th>
                            <th width="8%" id="hdsrtqty">@Resource.Short  <br /> @Resource.Quantity</th>
                            <th width="8%" id="hdplusqty">@Resource.Surplus  <br /> @Resource.Quantity</th>
                            <th width="8%">@Resource.AdjustmentValue</th>
                        </tr>
                    </thead>
                    <tbody id="">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12">
        <table class="table table-bordered" id="">
            <tr class="total">
                <td class="num_right"><strong> @Resource.Total</strong></td>
                <td class="num_right" width="11%"><strong><span id="TotalQty"></span></strong></td>
                <td class="num_right" width="11%"><strong><span id="TotalValue"></span></strong></td>
            </tr>
        </table>
    </div>
    <div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" id="SaveAndExitBtn" onclick="OnClickSaveAndExitQty_Btn();">@Resource.SaveAndExit</button>
        <button type="button" class="btn btn-primary btn-sm" id="DiscardAndExit" data-dismiss="modal" onclick="OnClickDiscardAndExit_OC_Btn();">@Resource.DiscardAndExit</button>
        <button type="button" class="btn btn-primary btn-sm" id="BtnClose" style="display:none;" data-dismiss="modal">@Resource.Close</button>
    </div>
</div>
