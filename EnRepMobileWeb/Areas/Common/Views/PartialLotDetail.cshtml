@using EnRepMobileWeb.Resources;
@using System.Data;
@{
    
    string QtyDigit = "0.";
    var QD = Convert.ToInt32(Session["QtyDigit"].ToString());
    for (var i = 0; i < QD; i++)
    {
        QtyDigit += "0";
    }
   
    decimal total = 0;
}

<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.LotDetail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top:0px;">
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.MaterialName</label>
            <input id="Lot_MaterialName" class="form-control" autocomplete="off" type="text" name="MaterialName" placeholder="@Resource.MaterialName" onblur="this.placeholder = '@Resource.MaterialName'" disabled="">
        </div>

        <div class="col-md-2 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.UOM</label>
            <input id="Lot_UOM" class="form-control" autocomplete="off" type="text" name="UOM" placeholder="@Resource.UOM" onblur="this.placeholder = '@Resource.UOM'" disabled="">
        </div>

        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.Quantity</label>
            <input id="Lot_Quantity" class="form-control num_right" autocomplete="off" type="text" name="Quantity" placeholder="0000.00" disabled="">
        </div>

        <div class="clearfix"></div>
       
        <div class="card-box table-responsive dy_table margin10">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH pop_csv">
                <table id="tbl_LotDetail" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="2%"> @Resource.SrNo</th>
                            <th width="24%">@Resource.Lot</th>
                            <th>@Resource.Batch1</th>
                            <th>@Resource.Serial1</th>
                            <th>@Resource.Quantity</th>

                        </tr>
                    </thead>
                    <tbody id="">
                        @if (ViewBag.ConsumptionLotDetail != null)
                        {
                            var srno = 1;
                            foreach (DataRow dr in ViewBag.ConsumptionLotDetail.Rows)
                            {
                                <tr class="odd">
                                    <td width="3%">@srno</td>
                                    <td>@dr["LotNo"].ToString()</td>
                                    <td>@dr["batch_no"].ToString()</td>
                                    <td>@dr["serial_no"].ToString()</td>
                                    <td class="num_right">@Convert.ToDecimal(dr["cons_qty"]).ToString(QtyDigit)</td>

                                </tr>

                                total = total + @Convert.ToDecimal(dr["cons_qty"]);
                                srno = srno + 1;
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr class="total">
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td align="right"><strong>Total</strong></td>
                            <td class="num_right"><strong>@total.ToString(QtyDigit)</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="OnClickSerialDiscardAndExit()">@Resource.Close</button>
        </div>
    </div>



