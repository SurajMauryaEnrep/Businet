@using EnRepMobileWeb.Resources;
@using System.Data;
@{
    var i = 0;
    var TotalOk = 0;
    var TotalNotOk = 0;
}
<style>
    #DttblBtnsSerial_wrapper .dataTables_length {
        position: absolute;
    }

    #DttblBtnsSerial_wrapper .dt-buttons {
        width: 10%;
        margin-left: 16%;
    }

    #DttblBtnsSerial_filter {
        position: relative;
        float: right;
    }

    .loader1 {
        -webkit-animation: spin 2s linear infinite; /* Safari */
        animation: spin 2s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -40px; /* Half of width */
        margin-left: -40px; /* Half of height */
        z-index: 9999; /* Make sure it's on top of other elements */
        display: none; /* Initially hide the loader */
        /*    position: fixed;*/
    }

    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loader1 div {
        width: 100%;
        height: 100%;
    }

    #DttblBtnsSerial thead tr > :nth-child(4) {
        z-index: 100 !important;
        position: sticky;
        left: 0;
        top: 0;
    }

    DttblBtnsSerial tbody tr > :nth-child(4) {
        background: #ffffff;
        position: sticky;
        z-index: 1;
        left: 0;
    }
</style>


<div id="loader1" class="loader1">
    <img src="~/Content/Images/loader.gif" width="100" height="100" />
</div>

<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height50VH">

    <table id="DttblBtnsSerial" class="table table-striped table-bordered width1400 itmfrz">
        <thead>
            <tr class="sticky-header">
                <th width="2%">@Resource.SrNo</th>
                <th width="20%">@Resource.ItemDescription</th>
                <th width="8%">@Resource.UOM</th>
                @if (ViewBag.DocumentMenuId == "105102115101")
                {
                    <th width="12%" id="SerialExprtQuantityType">@Resource.Quantity @Resource.Type</th>
                }              
                <th width="20%">@Resource.Manufacturer @Resource.Name</th>
                <th width="12%">@Resource.MRP</th>
                <th width="12%">@Resource.Manufactured @Resource.Date </th>
                <th width="12%">@Resource.SerialNumber </th>
                <th width="2%">@Resource.Upload @Resource.Status</th>
                <th hidden="hidden"></th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.ImportSerialPreview != null)
            {
                var rowNo = 0;
                foreach (DataRow dtr in ViewBag.ImportSerialPreview.Tables[0].Rows)
                {
                    rowNo = rowNo + 1;
            <tr>
                <td id="srno">@rowNo</td>

                <td class="tditemfrz" id="item_name">@dtr["Item_name"].ToString()</td>
                <td id="uom">@dtr["UOM"].ToString()</td>
                @if (ViewBag.DocumentMenuId == "105102115101")
                {
                    <td id="Qty_type">@dtr["Qty_type"].ToString()</td>
                }
                    <td id="mgf_name">@dtr["mgf_name"].ToString()</td>
                    <td id="MRP">@dtr["MRP"].ToString()</td>
                    <td id="mgf_dt">@dtr["mgf_dt"].ToString()  </td>
                    <td id="serial_no">@dtr["serial_no"].ToString()</td>
                    <td>
                        <div class="col-sm-10 no-padding">
                            @if (@dtr["UploadStatus"].ToString().ToLower() == "ok")
                            {
                                <i class="fa fa-check text-success " aria-hidden="true"></i>
                            }
                            else
                            {
                                <i class="fa fa-times-circle text-danger" aria-hidden="true"></i>

                            }
                        </div>
                        @if (@dtr["UploadStatus"].ToString().ToLower() != "ok")
                        {
                            <div class="col-sm-2 i_Icon">
                                <button type="button" id="ItmInfoBtnIcon" class="calculator" onclick="Cmn_OnClickErrorDetails(event);" data-toggle="modal" data-target="#ErrorDetail" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/iIcon1.png" alt="" title="@Resource.Error @Resource.Detail">  </button>
                            </div>
                        }
                    </td>
                    <td id="ErrorMessageSerialDataExport" hidden="hidden">@dtr["ErrorMessages"].ToString()</td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    <table id="tblstatus_id" class="table table-striped table-bordered">
        <tbody>
            @if (ViewBag.ImportSerialPreview != null)
            {
                TotalOk = Convert.ToInt32(@ViewBag.ImportSerialPreview.Tables[0].Rows[0]["OkCount"].ToString());
                TotalNotOk = Convert.ToInt32(@ViewBag.ImportSerialPreview.Tables[0].Rows[0]["NotOkCount"].ToString());
                <tr class="total">
                    <td colspan="3" align="right" width="75%"><strong>@Resource.Total valid records</strong></td>
                    <td class="num_right"><span id="TotConsSerial"></span>@ViewBag.ImportSerialPreview.Tables[0].Rows[0]["OkCount"].ToString()</td>
                    <td colspan="1" align="right" width="75%"><strong>@Resource.Total invalid records</strong></td>
                    <td class="num_right tlInvalidRcdSerial"><span id="TotConsSerial">@ViewBag.ImportSerialPreview.Tables[0].Rows[0]["NotOkCount"].ToString()</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<input id="hdnOkSerial" type="hidden" value="@TotalOk" />
<input id="hdnNotOkSerial" type="hidden" value="@TotalNotOk" />

