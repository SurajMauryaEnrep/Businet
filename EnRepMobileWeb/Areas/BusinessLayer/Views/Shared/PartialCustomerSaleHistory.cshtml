@using EnRepMobileWeb.Resources;
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Scripts/Common/CommonJS.js"></script>
@*//***Used In Customer Setup***//*@
@{
    var Disable = true;
    if (Model.TransType != null)
    {
        //if (Session["TransType"].ToString() == "Update")
        if (Model.TransType == "Update")
        {
            //if (Session["Command"].ToString() == "Edit")
            if (Model.Command == "Edit")
            {
                Disable = false;
            }
            else
            {
                Disable = true;
            }
        }
        else
        {
            Disable = false;
        }
        //if (Session["TransType"].ToString() == "Refresh")
        if (Model.TransType == "Refresh")
        {
            Disable = true;
        }
        //if (Session["TransType"].ToString() == "Save")
        if (Model.TransType == "Save")
        {
            //if (Session["Command"].ToString() == "Add")
            if (Model.Command == "Add")
            {
                Disable = false;
            }
            else
            {
                Disable = true;
            }
        }
    }
    if (Model.Message != null)
    {
        //if (ViewBag.Message == "Duplicate")
        if (Model.Message == "Duplicate")
        {
            Disable = false;
        }
    }
}
<table id="datatable-buttons" class="table table-striped table-bordered width1600 rowhighlighttbl" style="width:100%">
    <thead>
        <tr class="sticky-header">
            <th width="60%">@Resource.ItemName</th>
            <th>@Resource.UOM</th>
            <th>@Resource.DocumentNumber</th>
            <th>@Resource.DocumentDate</th>
            <th>@Resource.Quantity</th>
            <th>@Resource.Price</th>
            <th  width="50%">@Resource.DiscountPerUnit </th>
            <th>@Resource.NetPrice </th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.VBCustomerSaleshistorylist != null)
        {
            foreach (System.Data.DataRow item in ViewBag.VBCustomerSaleshistorylist.Rows)
            {
        <tr class="odd">
            <td>
                <div id="item_name_" class="col-sm-11">
                    @item["item_name"].ToString()
                </div>
                <div class="col-sm-1 i_Icon">
                    <input hidden="hidden" id="Hdn_item_id" value="@item["item_id"].ToString()" />
                    <button type="button" id="" class="calculator" onclick="OnClickIconBtn(event)" data-toggle="modal" data-target="#ItemInfo" data-backdrop="static" data-keyboard="false"> <img src="~/Content/Images/iIcon1.png" alt="" title="@Resource.ItemInformation" /> @*<i class="fa fa-info" aria-hidden="true" title="@Resource.ItemInformation"></i>*@ </button>
                </div>
            </td>
            <td>@item["uom_alias"].ToString()</td>
            <td>@item["inv_no"].ToString()</td>
            <td>@item["inv_dt"].ToString()</td>
            <td class="num_right">@item["inv_qty"].ToString()</td>
            <td class="num_right">@item["price"].ToString()</td>
            <td class="num_right">@item["item_disc_val"].ToString()</td>
            <td class="num_right">@item["Net_price"].ToString()</td>
        </tr>

            }
        }
    </tbody>
</table>
@if (Model.SalesHistorySearch != null)
{
   
    if (Model.SalesHistorySearch == "SalesSearch")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
    }
}