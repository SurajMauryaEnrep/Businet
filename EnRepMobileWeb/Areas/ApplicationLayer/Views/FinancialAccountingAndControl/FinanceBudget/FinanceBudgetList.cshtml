@model  EnRepMobileWeb.MODELS.ApplicationLayer.FinancialAccountingAndControl.FinanceBudget.FinanceBudgetListModel
@using EnRepMobileWeb.Resources;
@using System.Data

@if (Session["UserId"] == null)
{
    Response.Redirect("~/Login");
}
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/FinancialAccountingAndControl/FinanceBudget/FinanceBudgetList.js"></script>

<title>@Model.Title</title>
<div class="row">
    <!--WorkFlow Information-->
    <div id="WorkflowInformation" class="modal fade" role="dialog">
        <div class="modal-dialog" style="max-width:700px;">
            <!-- Modal content-->
            @Html.Partial("~/Areas/Common/Views/_WorkFlow.cshtml")
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">

                <h2 class="col-md-5 col-sm-12 heading_left_padding ">@ViewBag.MenuPageName</h2>
                <div id="wizard" class="form_wizard wizard_horizontal col-md-4 col-sm-12 work_flow">
                    @if (ViewBag.AppLevel.Rows.Count > 0)
                    {
                        @Html.Partial("~/Areas/Common/Views/_PartialWorkflowBar.cshtml")
                    }
                </div>
                <div id="" class="col-md-3 col-sm-12 heading_right_padding">
                    <ul>
                        <li>
                            <a class="tooltip-test"
                               title=" @Resource.AddNew" href="@Url.Action("AddFinanceBudgetDetail","FinanceBudget")"><img src="~/Content/Images/addgreen.png" width="32" height="32" id="Btn_AddCust" alt="Add"></a>
                        </li>
                    </ul>
                </div>
                @Html.HiddenFor(m => m.ListFilterData, new { @id = "ListFilterData" })
                @Html.HiddenFor(m => m.WF_Status, new { @id = "WF_Status" })
                <input type="hidden" id="DocumentMenuId" value="@ViewBag.DocumentMenuId" />
                <div class="x_title pad_mar ">
                    <div class="col-md-12 col-sm-12 icon_tool ">
                        <div class="col-md-2 col-sm-12">
                            <label class="col-form-label label-align">
                                @Resource.FinancialYear
                            </label>
                            @Html.DropDownListFor(Model => Model.Fin, new SelectList(Model.Finyrlist, "FinyrId", "Finyrs"), new { @class = "form-control", @id = "FinBudddlFinyrList" })
                            <span class="error_message" id="Spn_Fyear"></span>
                        </div>
                        <div class="col-md-2 col-sm-12">
                            <label class="col-form-label label-align">
                                @Resource.Status
                            </label>
                            @Html.DropDownListFor(model => model.Status, new SelectList(Model.statusLists, "status_id", "status_name"), new { @class = "form-control", id = "FinBudddlStatus" })
                            @*<select class="form-control" id="FinBudddlStatus" name="Status">
                                    <option value="0">All</option>
                                    <option value="A">Approved</option>
                                    <option value="REV">Revised</option>
                                    <option value="D">Drafted</option>
                                    <option value="F">Forwarded</option>
                                </select>*@
                        </div>

                        <div class="col-md-2 col-sm-12">
                            <button type="button" class="btn btn-primary btn-sm margintop20" id="FBBtnSearch" onclick="onclickFinBudSearch()"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <div class="col-md-12 col-sm-12 heading_left_padding ">
                    <div class="x_panel margin_top_zero">
                        <div class="x_content">
                            <div class="row">
                                <div class="card-box table-responsive dy_table">
                                    <div id="PartialFinBudList" class="sticky-table sticky-ltr-cells sb-container container-example1">
                                        @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialFinanceBudgetList.cshtml")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


