@using EnRepMobileWeb.Resources;
@using System.Data;
@{
    var i = 0;
    var TotalOk = 0;
    var TotalNotOk = 0;
}
<style>
    #DttblOPBal_wrapper .dataTables_length {
        position: absolute;
    }

    #DttblOPBal_wrapper .dt-buttons {
        width: 10%;
        margin-left: 16%;
    }

    #DttblOPBal_filter {
        position: relative;
        float: right;
    }

    .loader1 {
        -webkit-animation: spin 2s linear infinite; /* Safari */
        animation: spin 2s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -40px; /* Half of width */
        margin-left: -40px; /* Half of height */
        z-index: 9999; /* Make sure it's on top of other elements */
        display: none; /* Initially hide the loader */
        /*    position: fixed;*/
    }

    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loader1 div {
        width: 100%;
        height: 100%;
    }

    #DttblOPBal thead tr > :nth-child(4) {
        z-index: 100 !important;
        position: sticky;
        left: 0;
        top: 0;
    }

    #DttblOPBal tbody tr > :nth-child(4) {
        background: #ffffff;
        position: sticky;
        z-index: 1;
        left: 0;
    }
</style>
<div id="loader1" class="loader1">
    <img src="~/Content/Images/loader.gif" width="100" height="100" />
</div>
<div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height50VH">
    <table id="DttblOPBal" class="table table-striped table-bordered itmfrz">
        <thead>
            <tr class="sticky-header">
                <th width="2%">@Resource.SrNo</th>
                <th width="17%">@Resource.AccountType</th>
                <th width="25%" class="itmStick">@Resource.AccountName</th>
                <th width="10%">@Resource.Currency</th>
                <th width="13%">@Resource.Opening @Resource.Amount</th>
                <th width="13%">@Resource.Amount @Resource.Type</th>
                <th width="10%">@Resource.ConversionRate</th>
                <th width="10%">@Resource.Upload @Resource.Status</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.ImportPreview != null)
            {
                var rowNo = 0;
                foreach (DataRow dtr in ViewBag.ImportPreview.Tables[0].Rows)
                {
                    rowNo = rowNo + 1;
            <tr>
                <td>@rowNo</td>
                <td id="acc_type">@dtr["acc_type"].ToString()</td>
                <td id="acc_name" class="ItmNameBreak itmStick tditemfrz">@dtr["acc_name"].ToString()</td>
                <td class="center">@dtr["curr"].ToString()</td>
                <td>
                    <div class="col-sm-11 no-padding  num_right" id="op_bal" value="@dtr["op_bal_sp"].ToString()">
                        @dtr["op_bal_sp"].ToString()
                    </div>
                    @if (dtr["acc_type"].ToString() == "Customer" || dtr["acc_type"].ToString() == "Supplier")
                    {
                        <div class="col-sm-1 i_Icon">
                            <button type="button" id="" class="calculator" onclick="BindExcelBillDetail(event);" data-toggle="modal" data-target="#OpeningBalanceDetail" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/iIcon1.png" alt="" title="@Resource.OpeningDetail"></button>
                        </div>
                    }
                    else
                    {<div class="col-sm-1 i_Icon">
                            <button type="button" id="" class="calculator" data-toggle="modal" data-target="#OpeningBalanceDetail" data-backdrop="static" data-keyboard="false" disabled="" style="filter: grayscale(100%);"><img src="/Content/Images/iIcon1.png" alt="" title="Opening Detail"></button>
                        </div>}
                </td>
                <td id="bal_type">@dtr["bal_type"].ToString()</td>

                <td class="num_right">@dtr["conv_rate"].ToString()</td>
                <td class="center">
                    <div class="col-sm-10 no-padding">
                        @if (@dtr["UploadStatus"].ToString().ToLower() == "ok")
                        {
                            <i class="fa fa-check text-success " aria-hidden="true"></i>
                        }
                        else
                        {
                            <i class="fa fa-times-circle text-danger" aria-hidden="true"></i>

                        }
                    </div>
                    @if (@dtr["UploadStatus"].ToString().ToLower() != "ok")
                    {
                        <div class="col-sm-2 i_Icon">
                            <button type="button" id="ItmInfoBtnIcon" class="calculator" onclick="OnClickOMRErrorDetails(event);" data-toggle="modal" data-target="#ErrorDetail" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/iIcon1.png" alt="" title="@Resource.Error @Resource.Detail">  </button>
                        </div>
                    }
                </td>
            </tr>
                }
            }
        </tbody>
    </table>

</div>
<div>
    <table id="opbalstatus_id" class="table table-striped table-bordered">
        <tbody>
            @if (ViewBag.ImportPreview != null)
            {
                TotalOk = Convert.ToInt32(@ViewBag.ImportPreview.Tables[1].Rows[0]["TotalOk"].ToString());
                TotalNotOk = Convert.ToInt32(@ViewBag.ImportPreview.Tables[1].Rows[0]["TotalNotOk"].ToString());
                <tr class="total">
                    <td colspan="3" align="right" width="75%"><strong>@Resource.Total valid records</strong></td>
                    <td class="num_right"><span id="TotCons"></span>@ViewBag.ImportPreview.Tables[1].Rows[0]["TotalOk"].ToString()</td>
                    <td colspan="1" align="right" width="75%"><strong>@Resource.Total invalid records</strong></td>
                    <td class="num_right"><span id="TotCons">@ViewBag.ImportPreview.Tables[1].Rows[0]["TotalNotOk"].ToString()</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<input id="hdnOk" type="hidden" value="@TotalOk" />
<input id="hdnNotOk" type="hidden" value="@TotalNotOk" />

