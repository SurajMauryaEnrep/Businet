@using EnRepMobileWeb.Resources;
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Receipt @Resource.Quantity @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top: 0px;">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <label class="col-form-label label-align">@Resource.ItemName</label>
                <input id="itemName" disabled class="form-control" autocomplete="off" tabindex="5" type="text" name="ItemName" placeholder="@Resource.ItemName">


            </div>
            <div class="col-md-3 col-sm-12" style="padding-left: 0px;">
                <label class="col-form-label label-align"> @Resource.UOM</label>
                <input id="uomName" disabled class="form-control" autocomplete="off" tabindex="5" type="text" name="UOM" placeholder="@Resource.UOM">
                <input type="hidden" id="hd_OQtyUOMId" value="" />
            </div>
            <div class="col-md-3 col-sm-12" style="padding-left: 0px;">
                <label class="col-form-label label-align">@Resource.Receipt @Resource.Quantity</label>
                <input id="itemQty" disabled class="form-control num_right" autocomplete="off" maxlength="25" tabindex="5" type="text" name="" placeholder="0000.00">
            </div>


            <div class="col-md-12 col-sm-12 mt-2">
                <div class="x_panel margin_top_zero">
                    <div class="x_content">
                        <div class="sticky-table sticky-ltr-cells sb-container container-example1">
                            <div id="GoodsReceiptSummary">@Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialMISGoodsReceiptSummary.cshtml")</div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*<div class="modal-footer">

                <button type="button" id="btnOrderQtyReset" onclick="onclickbtnOrderQtyReset()" class="btn btn-primary btn-sm">@Resource.Reset</button>
                <button type="button" id="btnOrderQtySaveAndExit" onclick="onclickbtnOrderQtySaveAndExit(event)" class="btn btn-primary btn-sm">@Resource.SaveAndExit</button>
                <button type="button" id="btnOrderQtyDiscardAndExit" class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.DiscardAndExit</button>

            </div>*@
    </div>
    </div>


