<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Invoice @Resource.Summary</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top:0px;">
        <div class="col-md-55 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.RegionName</label>
            <input id="RWP_RegionName" class="form-control" autocomplete="off" type="text" name="RegionName" placeholder="@Resource.RegionName" disabled="">
            <input hidden="hidden" id="RWP_hdnRegionId" />
        </div>

        <div class="col-md-55 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.CustomerName    </label>
            <input id="RWP_CustomerName" class="form-control" autocomplete="off" type="text" name="CustomerName" placeholder="@Resource.CustomerName" disabled="">
            <input hidden="hidden" id="RWP_hdnCustomerId" />
        </div>
        <div class="col-md-55 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.Currency</label>
            <input id="RWP_Currency" class="form-control" autocomplete="off" type="text" name="Currency" placeholder="@Resource.Currency" disabled="">
            <input hidden="hidden" id="PWPCurrency_id" />
        </div>


        <div class="col-md-55 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.FromDate</label>
            <input id="RWP_FromDate" class="form-control" value="" autocomplete="off" type="date" name="FromDate" placeholder="" disabled="">
        </div>

        <div class="col-md-55 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.ToDate</label>
            <input id="RWP_ToDate" class="form-control" value="" autocomplete="off" type="date" name="ToDate" placeholder="" disabled="">
        </div>

        <div class="clearfix"></div>
      
        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 height40VH pop_csv">
                <table id="tbl_RegionWiseInvoiceSummary" data-order="" class="table table-striped width2200 table-bordered rowhighlighttbl itmfrz" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="3%">@Resource.SrNo</th>
                            <th class="itmStick">@Resource.InvoiceNumber</th>
                            <th>@Resource.InvoiceDate</th>
                            <th width="5%">@Resource.Customer @Resource.ReferenceNumber</th>
                            <th hidden="hidden"></th>
                            <th hidden="hidden"></th>
                            <th>@Resource.SalesRepresentative</th>
                            <th>@Resource.SaleAmount <br /> @Resource.InSpecific</th>
                            <th>@Resource.SaleAmount <br /> @Resource.InBase</th>
                            <th>@Resource.TaxAmount <br /> @Resource.InSpecific</th>
                            <th>@Resource.TaxAmount <br /> @Resource.InBase</th>
                            <th>@Resource.OtherCharges <br /> @Resource.InSpecific</th>
                            <th>@Resource.OtherCharges <br /> @Resource.InBase</th>
                            <th>@Resource.RoundOff <br /> @Resource.Amount</th>
                            <th>@Resource.InvoiceAmount <br /> @Resource.InSpecific</th>
                            <th>@Resource.InvoiceAmount <br /> @Resource.InBase</th>

                            <th>@Resource.ApprovedOn</th>
                        </tr>
                    </thead>
                    <tbody id="">
                        @if (ViewBag.RWInvoiceDetailList != null)
                        {
                            var srno = 1;
                            foreach (System.Data.DataRow dr in ViewBag.RWInvoiceDetailList.Rows)
                            {
                        <tr>
                            <td>@srno</td>
                            <td id="app_inv_n" class="ItmNameBreak itmStick tditemfrz">@dr["app_inv_no"].ToString()</td>
                            <td>@dr["inv_dt1"].ToString()</td>
                            <td>@dr["ref_doc_no"].ToString()</td>
                            <td id="inv_dte" hidden="hidden">@dr["inv_dt"].ToString()</td>
                            <td hidden="hidden" id="txtbr_id">@dr["br_id"].ToString()</td>
                            <td>@dr["sale_per"].ToString()</td>
                            <td class="num_right">@dr["sale_amount_spec"].ToString()</td>
                            <td class="num_right">@dr["sale_amount_bs"].ToString()</td>
                            <td class="num_right">@dr["tax_amt_spec"].ToString()</td>
                            <td class="num_right">@dr["tax_amt_bs"].ToString()</td>
                            <td class="num_right">@dr["oc_amt_spec"].ToString()</td>
                            <td class="num_right">@dr["oc_amt_bs"].ToString()</td>
                            <td class="num_right">@dr["roundoff_diff"].ToString()</td>
                            <td class="num_right">
                                <div class="col-sm-11" id="">@dr["invoice_amt_spec"].ToString()</div>
                                <div class="col-sm-1 i_Icon">
                                    <button type="button" id="" class="calculator" onclick="R_OnclickPopUp2InvoiceAmt(event)" data-toggle="modal" data-target="#RegionWiseInvoiceProductDetail" data-backdrop="static" data-keyboard="false"> <img src="~/Content/Images/iIcon1.png" alt="" title="@Resource.ProductDetail" /> @*<i class="fa fa-info" aria-hidden="true" title="@Resource.ProductDetail"></i>*@ </button>
                                </div>
                            </td>
                            <td class="num_right">
                                <div class="col-sm-11" id="">@dr["invoice_amt_bs"].ToString()</div>
                                <div class="col-sm-1 i_Icon">
                                    <button type="button" id="" class="calculator" onclick="R_OnclickPopUp2InvoiceAmt(event)" data-toggle="modal" data-target="#RegionWiseInvoiceProductDetail" data-backdrop="static" data-keyboard="false"> <img src="~/Content/Images/iIcon1.png" alt="" title="@Resource.ProductDetail" /> @*<i class="fa fa-info" aria-hidden="true" title="@Resource.ProductDetail"></i>*@ </button>
                                </div>
                            </td>

                            <td>@dr["app_dt"].ToString()</td>

                        </tr>

                                srno = srno + 1;
                                //totalsale_amt_spec = totalsale_amt_spec + dr["sale_amount_spec"]);
                                //totalsale_amt = totalsale_amt + dr["sale_amount_bs"]);
                                //totaltax_amt_spec = totaltax_amt_spec + dr["tax_amt_spec"]);
                                //totaltax_amt = totaltax_amt + dr["tax_amt_bs"]);
                                //totalOC_amt_spec = totalOC_amt_spec + dr["oc_amt_spec"]);
                                //totalOC_amt = totalOC_amt + dr["oc_amt_bs"]);
                                //totalInvoice_amt = totalInvoice_amt + dr["invoice_amt_bs"]);
                                //totalInvoice_amt_spec = totalInvoice_amt_spec + dr["invoice_amt_spec"]);
                            }
                        }
                    </tbody>
                    <tfoot>
                        @if (ViewBag.TotalCW_Inv_Details != null)
                        {
                            foreach (DataRow dr in ViewBag.TotalCW_Inv_Details.Rows)
                            {
                        <tr class="total">
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td align="right"><strong>@Resource.Total</strong></td>
                            <td hidden="hidden">&nbsp;</td>
                            <td class="num_right"><strong>@dr["sale_amount_spec"].ToString()</strong></td>
                            <td class="num_right"><strong>@dr["sale_amount_bs"].ToString()</strong></td>
                            <td class="num_right"><strong>@dr["tax_amt_spec"].ToString()</strong></td>
                            <td class="num_right"><strong>@dr["tax_amt_bs"].ToString()</strong></td>
                            <td class="num_right"><strong>@dr["oc_amt_spec"].ToString()</strong></td>
                            <td class="num_right"><strong>@dr["oc_amt_bs"].ToString()</strong></td>
                            <td class="num_right"><strong>@dr["roundoff_diff"].ToString()</strong></td>
                            <td class="num_right"><strong>@dr["invoice_amt_spec"].ToString()</strong></td>
                            <td class="num_right"><strong>@dr["invoice_amt_bs"].ToString()</strong></td>
                            <td>&nbsp;</td>
                        </tr>
                            }
                        }
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="OnClickSerialDiscardAndExit()">@Resource.Close</button>
