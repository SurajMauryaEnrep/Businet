            <td>@count</td>
            <td id="jc_no" class="ItmNameBreak itmStick tditemfrz">@item["jc_no"]</td>
            <td id="jc_dt">@item["jc_dt"]</td>
            <td>@item["src_type"]</td>
            <td>@item["ord_type"]</td>
            <td>@item["src_doc_noAnddt"]</td>
            <td>@item["item_name"]</td>
            <td>@item["uom_alias"]</td>
            <td>@item["op_name"]</td>
            <td>@item["outItmName"]</td>
            <td>@item["outUOM"]</td>
            <td>@item["batch_no"]</td>
            <td class="num_right">@item["jc_qty"]</td>
            <td>@item["shfl_name"]</td>
            <td>@item["ws_name"]</td>
            <td>@item["supervisor_name"]</td>
            <td id="Doc_Status">@item["status_name"]</td>
            <td>@item["create_by"]</td>
            <td>@item["create_dt"]</td>
            <td>@item["app_by"]</td>
            <td>@item["app_dt"]</td>
            <td>@item["mod_by"]</td>
            <td>@item["mod_dt"]</td>
            <td hidden="hidden" id="hdn_jc_no">@item["jc_no"]</td>
        </tr>
