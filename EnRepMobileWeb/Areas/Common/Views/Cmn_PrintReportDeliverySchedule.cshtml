@using System.Data;
@{
    string QtyDigit = "0.";
    var QD = Convert.ToInt32(Session["QtyDigit"].ToString());
    for (var i = 0; i < QD; i++)
    {
        QtyDigit += "0";
    }
    string doc_status = "";
    string BackGroundImgUrl = "";
    if (ViewBag.DocStatus != null)
    {
        doc_status = ViewBag.DocStatus;
    }

    if (doc_status == "D" || doc_status == "F")
    {if (ViewBag.DocId == null)
        {
            BackGroundImgUrl = Server.MapPath("~/Content/Images/draft.png");
        }
        }
    }
<style>
    .table_border {
        border: 0.5px solid #000000;
    }

        .table_border > tbody > tr > td, .table_border > thead > tr > th {
            border: 0.5px solid #000000;
        }

    .suppInfo {
        font-size: 12px;
        font-weight: normal;
        padding: 0px 0px 0px 5px;
    }

        .suppInfo > tr > td {
            padding-right: 5px;
        }
</style>
<div style="background: url(@BackGroundImgUrl) no-repeat;background-position: center center;">
    @if (ViewBag.DocId == null)
    {

        @Html.Partial("~/Areas/Common/Views/Cmn_PrintHeader.cshtml")
    }


    <table width='100%'>
        <tr>
            <td style="font-size: 20px; text-align: center; font-weight: bold; text-decoration: underline;">
                Delivery Schedule
            </td>
        </tr>
        <tr>
            <td>
                <table style='width:100%;'>
                    @if (ViewBag.PageName == "PO")
                    {
                        <tr>
                            <td style='width:10px;'></td>
                            <td>
                                <table style='width:100%;border:solid 1px #000000;'>

                                    <tr>
                                        <td style='width:50%;border-right:solid 1px #000000;'>
                                            <table class="suppInfo" style=''>
                                                <tr><td><strong> Supplier : </strong>@ViewBag.Details.Tables[0].Rows[0]["supp_name"].ToString()</td></tr>
                                                <tr><td><strong> Address : </strong> @ViewBag.Details.Tables[0].Rows[0]["supp_add"].ToString()</td></tr>
                                                <tr><td></td></tr>
                                                <tr><td><strong> State : </strong> @ViewBag.Details.Tables[0].Rows[0]["supp_state"].ToString()</td></tr>
                                                <tr><td><strong> Country : </strong>@ViewBag.Details.Tables[0].Rows[0]["supp_cntry"].ToString()</td></tr>
                                                <tr><td><strong> Phone : </strong> @ViewBag.Details.Tables[0].Rows[0]["cont_num"].ToString()</td></tr>
                                                <tr><td><strong> GSTIN/UIN : </strong> @ViewBag.Details.Tables[0].Rows[0]["supp_gst_no"].ToString()</td></tr>
                                                <tr><td><strong> PAN : </strong> @ViewBag.Details.Tables[0].Rows[0]["supp_pan_no"].ToString()</td></tr>
                                            </table>
                                        </td>
                                        <td style='width:40%; vertical-align:top;'>
                                            <table>
                                                <tr>
                                                    <td width="30%" style='font-size:12px;font-weight:bold;width:30%'> Order Number </td>
                                                    <td width="70%" style='font-size: 12px; font-weight: normal; width: 70%'>: @ViewBag.Details.Tables[0].Rows[0]["po_no"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td width="30%" style='font-size: 12px; font-weight: bold; width: 30%'> Order Date </td>
                                                    <td width="70%" style='font-size: 12px; font-weight: normal; width: 70% '>: @ViewBag.Details.Tables[0].Rows[0]["po_dt"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td width="30%" style='font-size: 12px; font-weight: bold; width: 30%'> Destination </td>
                                                    <td width="70%" style='font-size: 12px; font-weight: normal; width: 70% '>: @ViewBag.Details.Tables[0].Rows[0]["destination"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td width="30%" style='font-size: 12px; font-weight: bold; width: 30%'> Currency </td>
                                                    <td width="70%" style='font-size: 12px; font-weight: normal; width: 70% '>: @ViewBag.Details.Tables[0].Rows[0]["curr"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td width="30%" style='font-size: 12px; font-weight: bold; width: 30%'> Payment Terms </td>
                                                    <td width="70%" style='font-size: 12px; font-weight: normal; width: 70% '>: @ViewBag.Details.Tables[0].Rows[0]["paymentterms"].ToString() </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style='width:10px;'></td>
                        </tr>
                    }
                    else if (ViewBag.PageName == "SO")
                    {
                        <tr>
                            <td style='width:10px;'></td>
                            <td>
                                <table style='width:100%;border:solid 1px #000000;'>

                                    <tr>
                                        <td style='width:50%;border-right:solid 1px #000000;'>
                                            <table class="suppInfo" style=''>
                                                <tr><td><strong> Customer : </strong>@ViewBag.Details.Tables[0].Rows[0]["cust_name"].ToString()</td></tr>
                                                <tr><td><strong> Address : </strong> @ViewBag.Details.Tables[0].Rows[0]["cust_add"].ToString()</td></tr>
                                                <tr><td></td></tr>
                                                <tr><td><strong> State : </strong> @ViewBag.Details.Tables[0].Rows[0]["cust_state"].ToString()</td></tr>
                                                <tr><td><strong> Country : </strong> @ViewBag.Details.Tables[0].Rows[0]["cust_cntry"].ToString()</td></tr>
                                                <tr><td><strong> Phone : </strong> @ViewBag.Details.Tables[0].Rows[0]["cont_num"].ToString()</td></tr>
                                                <tr><td><strong> GSTIN/UIN : </strong> @ViewBag.Details.Tables[0].Rows[0]["cust_gst_no"].ToString()</td></tr>
                                            </table>
                                        </td>
                                        <td style='width:40%; verticalalign:top;'>
                                            <table>
                                                <tr>
                                                    <td style='font-size: 12px; font-weight: bold; width: 30%;'> Order Number </td>
                                                    <td style='font-size: 12px; font-weight: normal; width: 70%;'>: @ViewBag.Details.Tables[0].Rows[0]["so_no"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td style='font-size: 12px; font-weight: bold; width: 30%;'> Order Date </td>
                                                    <td style='font-size: 12px; font-weight: normal; width: 70%; '>: @ViewBag.Details.Tables[0].Rows[0]["so_dt"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td style='font-size: 12px; font-weight: bold; width: 30%;'> Destination </td>
                                                    <td style='font-size: 12px; font-weight: normal; width: 70%; '>: @ViewBag.Details.Tables[0].Rows[0]["destination"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td style='font-size: 12px; font-weight: bold; width: 30%;'> Currency </td>
                                                    <td style='font-size: 12px; font-weight: normal; width: 70%; '>: @ViewBag.Details.Tables[0].Rows[0]["curr"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td style='font-size: 12px; font-weight: bold; width: 30%;'> Payment Terms </td>
                                                    <td style='font-size: 12px; font-weight: normal; width: 70%; '>: @ViewBag.Details.Tables[0].Rows[0]["paymentterms"].ToString()</td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style='width:10px;'></td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td style='width:10px;'></td>
                            <td>
                                <table style='width:100%;'>
                                    <tr>
                                        <td style='width:50%;'>
                                            @*<table style='font-size:12px;font-weight:normal;padding:0px 0px 0px 5px;'>
                                                    <tr><td></td></tr>

                                                </table>*@
                                        </td>
                                        <td style='width:40%; verticalalign:top;'>
                                            @*<table>
                                                    <tr>
                                                        <td style='font-size:12px;font-weight:bold;'></td>
                                                    </tr>

                                                </table>*@
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style='width:10px;'></td>
                        </tr>
                    }
                    <tr>
                        <td style='width:10px;'></td>
                        <td>
                            <table class="table_border" cellspacing='0' cellpadding='0' style='width:100%;font-size:12px;font-weight:normal;padding:0px 0px;line-height:18px;font-weight:normal;'>
                                <thead>
                                    <tr>
                                        <th width='5%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> S.NO.</th>
                                        <th width='28%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Goods Description </th>
                                        <th width='5%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> UOM </th>
                                        <th width='12%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Quantity </th>
                                        <th width='12%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Delivery Date </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Details.Tables[3] != null)
                                    {
                                        var i = 1;
                                        foreach (DataRow dr in ViewBag.Details.Tables[3].Rows)
                                        {

                                            <tr>
                                                <td style='text-align:center; width:5%;'> @i</td>
                                                @if (ViewBag.PrintOption != null)
                                                {
                                                    <td style='paddingleft:5px;paddingtop:5px;paddingbottom:3px;'>
                                                        @if (ViewBag.PrintOption.Rows[0]["ShowCustSpecProdDesc"].ToString().ToUpper() == "Y")
                                                        {
                                                            @dr["CustSpecItemDesc"].ToString()
                                                        }
                                                        else
                                                        {
                                                            @dr["item_name"].ToString()
                                                        }
                                                        @if (ViewBag.PrintOption.Rows[0]["ShowProdTechDesc"].ToString().ToUpper() == "Y")
                                                        {
                                                            <br />
                                                            @dr["item_tech_des"].ToString()
                                                        }
                                                    </td>
                                                }
                                                else
                                                {
                                                    if (ViewBag.PageName == "SO")
                                                    {
                                                        <td style='paddingleft:5px;paddingtop:5px;paddingbottom:3px;'> @dr["item_tech_des"].ToString()</td>
                                                    }
                                                    else
                                                    {
                                                        <td style='paddingleft:5px;paddingtop:5px;paddingbottom:3px;'> @dr["item_name"].ToString()</td>
                                                    }
                                                }

                                            <td style='text-align:right; paddingright:5px;paddingtop:5px;paddingbottom:3px;'> @dr["uom_alias"].ToString()</td>
                                                <td style='text-align:right; paddingright:5px;paddingtop:5px;paddingbottom:3px;'> @Convert.ToDecimal(dr["delv_qty"]).ToString(QtyDigit)</td>
                                                <td style='text-align: left; paddingright: 5px; paddingleft: 5px; paddingtop: 5px; paddingbottom: 3px;'>@dr["sch_date"].ToString()</td>
                                            </tr>
                                            i = i + 1;
                                        }
                                    }

                                </tbody>
                            </table>
                        </td>
                        <td style='width:10px;'></td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
    @Html.Partial("~/Areas/Common/Views/Cmn_PrintFooter.cshtml")

</div>
