@model EnRepMobileWeb.MODELS.ApplicationLayer.SubContracting.JobInvoice.JI_ListModel
@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/SubContracting/JobInvoice/JobInvoiceList.js"></script>
<table id="datatable-buttons" class="table table-striped table-bordered width1600 rowhighlighttbl itmfrz" style="width:100%;">
    <thead>
        <tr class="sticky-header">
            <th width="2%">@Resource.SrNo</th>
            <th width="10%" class="itmStick">@Resource.Invoice <br /> @Resource.Number</th>
            <th width="7%">@Resource.Invoice <br /> @Resource.Date</th>
            <th style="display:none;">@Resource.InvoiceDate</th>
            <th width="20%">@Resource.ContractorName</th>
            @*<th width="9%">@Resource.Receipt  <br /> @Resource.Number</th>commented by shubham maurya on 12-08-2024
            <th width="7%">@Resource.Receipt  <br /> @Resource.Date</th>*@
            <th style="display:none;">@Resource.GRNDate</th>
            <th width="8%">@Resource.Invoice  <br /> @Resource.Value</th>
            <th width="8%">@Resource.Status</th>
            <th width="8%">@Resource.CreatedBy</th>
            <th width="7%">@Resource.Createdon</th>
            <th width="8%">@Resource.ApprovedBy</th>
            <th width="7%">@Resource.ApprovedOn</th>
            <th width="8%">@Resource.AmendedBy</th>
            <th width="7%">@Resource.AmendedOn</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.JIList != null)
        {
            foreach (var row in Model.JIList)
            {
                rowId++;
                <tr>
                    <td>@rowId</td>
                    <td id="InvoiceNo" class="ItmNameBreak itmStick tditemfrz">@row.InvoiceNo</td>
                    <td>@row.InvoiceDate</td>
                    <td style="display: none;" id="InvDate">@row.InvDate</td>
                    <td>@row.SuppName</td>
                    @*<td>@row.GRNNumber</td>commented by shubham maurya on 12-08-2024
                    <td>@row.GRNDate</td>*@
                    <td style="display: none;" id="GRNDt">@row.GRNDt</td>
                    <td>@row.InvoiceValue</td>
                    <td id="Doc_Status">@row.Stauts</td>
                    <td>@row.Create_By</td>
                    <td>@row.CreateDate</td>
                    <td>@row.App_By</td>
                    <td>@row.ApproveDate</td>
                    <td>@row.Mod_By</td>
                    <td>@row.ModifyDate</td>
                </tr>
            }
        }
    </tbody>
</table>
