                                    <label class="col-form-label label-align num_right_label">@Resource.PendingOrderValue</label>
                                    <input type="text" id="TxtPendingOrderVal" class="form-control num_right" placeholder="0000.00" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 available_right ">
                                    <label class="col-form-label label-align num_right_label">@Resource.InvoiceValue</label>
                                    <input type="text" id="TxtInvoiceVal" class="form-control num_right" placeholder="0000.00" readonly>
                                </div>
                            </div>
                            @*<div class="item form-group">
                                    <div class="col-md-12 col-sm-12 available_right ">
                                        <label class="col-form-label label-align num_right_label" for="">@Resource.ReturnValue</label>
                                        <input type="text" id="ReturnValue" class="form-control num_right" placeholder="0000.00" readonly>
                                    </div>
                                </div>*@
                        }
                        else
                        {
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 available_right">
                                    <label class="col-form-label label-align num_right_label">@Resource.OrderValue</label>
                                    <input type="text" id="TxtOrderVal" class="form-control num_right" placeholder="0000.00" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 available_right ">
                                    <label class="col-form-label label-align num_right_label">@Resource.GRNValue</label>
                                    <input type="text" id="TxtGRNVal" class="form-control num_right" placeholder="0000.00" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 available_right ">
                                    <label class="col-form-label label-align num_right_label">@Resource.PendingOrderValue</label>
                                    <input type="text" id="TxtPendingOrderVal" class="form-control num_right" placeholder="0000.00" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 available_right ">
                                    <label class="col-form-label label-align num_right_label">@Resource.InvoiceValue</label>
                                    <input type="text" id="TxtInvoiceVal" class="form-control num_right" placeholder="0000.00" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 available_right ">
                                    <label class="col-form-label label-align num_right_label" for="">@Resource.ReturnValue</label>
                                    <input type="text" id="ReturnValue" class="form-control num_right" placeholder="0000.00" readonly>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
