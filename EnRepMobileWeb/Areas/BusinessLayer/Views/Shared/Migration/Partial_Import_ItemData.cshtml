@using EnRepMobileWeb.Resources;
<style>
    .dataTables_length, .DataTable1_filter, .dt-buttons, .buttons-csv, .buttons-pdf {
        float: left;
    }

    .dt-buttons {
        width: 6%;
        margin-left: 2%;
    }    
</style>
<div class="modal-content" id="tbody_ItemHistory">
    <div class="modal-header">
        <h2> @Resource.Import @Resource.Data</h2>
        <button type="button" class="close" onclick="Closemodal()" data-dismiss="modal">&times;</button>
    </div>
    @*<div class="loader1" id="loader">
        <img src="~/Content/Images/loader.gif" width="100" height="100" />
    </div>*@
    <div class="modal-body pop_top">
        <div class="row">
            <div class="col-md-4 col-sm-12 no-padding">
                <div class="col-md-8 col-sm-12">
                    <div class="file-upload">
                        <div class="file-select mt-4">
                            <input type="file" name="chooseFile" id="chooseFile">
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 no-padding">
                    <div class="col-md-12 mt-12">
                        <button type="button" class="btn btn-primary btn-sm margintop20"  @*data-dismiss="modal"*@ onclick="FetchData();">@Resource.FetchDetail</button>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12 no-padding">
                <div class="col-md-6 col-sm-12 ">
                    <label class="col-form-label label-align">
                        @Resource.Upload @Resource.Status
                    </label>
                    <select class="form-control" id="item_ActStatus" @*onchange="searchText();"*@ name="item_ActStatus">
                        <option value="0">ALL</option>
                        <option value="Ok">Ok</option>
                        <option value="Not Ok">Not Ok</option>
                    </select>

                </div>
                <div class="col-md-2 col-sm-12 width5">
                    <button type="button" class="btn btn-primary btn-sm margintop20" id="BtnSearch" onclick="SearchDataByUploadStatus();"><i class="fa fa-search" aria-hidden="true"></i></button>
                </div>

            </div>
        </div>
        <div id="PartialImportItemsDetail" class="card-box table-responsive dy_table margin10">
            @Html.Partial("~/Areas/BusinessLayer/Views/Shared/PartialImportItemsDetail.cshtml")
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnImportData" type="button" style="background-color:#D3D3D3" class="btn btn-primary btn-sm" @*data-dismiss="modal"*@ onclick="ImportDataFromExcel();" disabled>Import Data</button>
        <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal" onclick="Closemodal()">Close</button>
    </div>
</div>

