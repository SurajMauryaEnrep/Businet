                                        @if (ViewBag.Details.Tables[0].Rows != null)
                                        {
                                            var i = 1;
                                            DataView data = new DataView();
                                            foreach (DataRow dr in ViewBag.Details.Tables[0].Rows)
                                            {
                                                <tr>
                                                    <td style='text-align:center; width:5%;'>@i</td>
                                                    <td style='paddingleft:5px;paddingtop:5px;paddingbottom:3px;'>

                                                        @*@if (ViewBag.PrintOption.Rows[0]["ShowCustSpecProdDesc"].ToString().ToUpper() == "Y")
                        {
                            @dr["CustSpecItemDesc"].ToString()
                        }
                        else
                        {
                            @dr["item_name"].ToString()
                        }*@
                                                        @if (ViewBag.PrintOption.Rows[0]["ShowProdDesc"].ToString().ToUpper() == "Y" && ViewBag.PrintOption.Rows[0]["ShowCustSpecProdDesc"].ToString().ToUpper() == "Y")
                                                        {
                                                            string itemdesc = $"{@dr["item_name"].ToString()} ({@dr["suppSpecDesc"].ToString()})";
                                                            @itemdesc;
                                                        }
                                                        else if (ViewBag.PrintOption.Rows[0]["ShowCustSpecProdDesc"].ToString().ToUpper() == "Y" && ViewBag.PrintOption.Rows[0]["ShowProdDesc"].ToString().ToUpper() == "N")
                                                        {
                                                            @dr["suppSpecDesc"].ToString()
                                                        }
                                                        else
                                                        {
                                                            @dr["item_name"].ToString()
                                                        }
                                                        @if (ViewBag.PrintOption.Rows[0]["ShowProdTechDesc"].ToString().ToUpper() == "Y")
                                                        {
                                                            <br /> @dr["item_tech_des"].ToString()
                                                        }
                                                        @if (ViewBag.PrintOption.Rows[0]["ShowSubItem"].ToString() == "Y")
                                                        {
                                                            if (ViewBag.Details.Tables[1].Rows.Count > 0)
                                                            {
                                                                data = ViewBag.Details.Tables[1].DefaultView;
                                                                DataTable NewDT1 = new DataTable();
                                                                data.RowFilter = "item_id='" + dr["item_id"].ToString() + "'";
                                                                NewDT1 = data.ToTable();
                                                                <table width="100%" style="font-size: 11px; paddingtop:3px;">
                                                                    <tr>
                                                                        <td colspan="3">sadfsadfsdfs</td>
                                                                    </tr>
                                                                    @foreach (System.Data.DataRow drsubitm in NewDT1.Rows)
                                                                    {
                                                                        if (dr["item_id"].ToString() == drsubitm["item_id"].ToString())
                                                                        {
                                                                            <tr>
                                                                                <td width="10%" style="paddingtop: 0px;paddingbottom:0px;"></td>
                                                                                <td width="45%" style="paddingtop: 0px; paddingbottom: 0px;">@drsubitm["sub_item_name"] </td>
                                                                                <td width="45%" style="text-align: right; paddingtop: 0px; paddingbottom: 0px; paddingright: 5px;"> @drsubitm["ord_qty_spec"]</td>
                                                                            </tr>
                                                                        }
                                                                    }
                                                                </table>
                                                            }
                                                        }

                                                    </td>
                                                    <td style='paddingleft:5px;paddingtop:5px;paddingbottom:3px;'>@dr["uom_id"].ToString()</td>
                                                    <td style='paddingleft:5px;paddingtop:5px;paddingbottom:3px;'>@dr["HSN_code"].ToString()</td>
                                                    <td style='text-align:right; paddingright:5px;paddingtop:5px;paddingbottom:3px;'>@dr["issue_qty"].ToString()</td>
                                                    <td style='text-align:right; paddingright:5px;paddingtop:5px;paddingbottom:3px;'>@dr["value"].ToString()</td>
                                                    <td style='text-align: left; paddingleft: 5px; paddingright: 5px; paddingtop: 5px; paddingbottom: 3px;'>@dr["it_remarks"].ToString()</td>
                                                    
                                                }
</tr>
                                                
                                                mdValue = mdValue + Convert.ToDecimal(dr["value"]);
                                                i++;
                                            }
                                        }
                                        <tr>
                                            <td colspan='7' class="">
                                                <table class="" cellpadding='0' cellspacing='0' style='width:100%;font-size:12px;font-weight:normal;padding:0px 0px;line-height:18px;font-weight:normal;'>
                                                    <tr>
                                                        <td width="40%">&nbsp;</td>
                                                        <td width="23%" class="" style='paddingleft:5px;paddingtop:5px;paddingbottom:3px;font-weight:bold;'>Total</td>
                                                        <td width='12%' class="td_border_left" style='text-align:right;paddingright:5px;paddingtop:5px;paddingbottom:3px;font-weight:bold;'>@mdValue.ToString()</td>
                                                        <td width='193' class="td_border_left " style='text-align:right;paddingright:5px;paddingtop:5px;paddingbottom:3px;font-weight:bold;'>&nbsp;</td>
                                                    </tr>


                                                </table>
                                            </td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            <td style='width:10px;'></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        @Html.Partial("~/Areas/Common/Views/Cmn_PrintFooter.cshtml")
