@using EnRepMobileWeb.Resources;

<div class="modal-content">
    @if (@ViewBag.DocumentMenuId == "105102155" || @ViewBag.DocumentMenuId == "105102115120")
    {
        <!-- Error Detail -->
        <div id="PartialImportSerialData" class="modal fade" role="dialog">
            <div class="modal-dialog" style="min-width:1200px;">
                <!-- Modal content-->
                @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/Partial_Import_ItemSerialData.cshtml")
            </div>
        </div>

        <!--Partial Import Customer Data Start-->
        <div id="ErrorDetail" class="modal fade show" role="dialog" aria-modal="true">
            <div class="modal-dialog" id="" style="min-width:600px;">
                <!-- Modal content-->
                <div id="divErrorDetail">
                    @Html.Partial("~/Areas/Common/Views/Cmn_PartialExportErrorDetail.cshtml")

                </div>
            </div>
        </div>
    }
    <div class="modal-header">
        <h2>@Resource.SerialDetail</h2>
        @if (@ViewBag.DocumentMenuId == "105102155" || @ViewBag.DocumentMenuId == "105102115120")

        {
            var Flag = "";

            if (@ViewBag.DocumentMenuId == "105102155")
            {
                Flag = "StockTakeSerialExcel";

            }
            else
            {
                Flag = "OpeningRcptSerialExcel";

            }
            <div id="DivDownloadImportExcelSerial" class="work_flow heading_right_padding pl-5">
                <ul>
                    <li>
                        <a class="tooltip-test"
                           title="@Resource.Download @Resource.Template" id="DownloadTemplate" onclick="OnclickDownExcelSerial('@Flag')"><img src="~/Content/Images/export_icon.png" width="25" id="" onclick="" height="25" alt="Download Data Template"></a>
                    </li>
                    <li>

                        <a class="tooltip-test"
                           title="@Resource.Import @Resource.Data" id="ImportData" onclick="OnClickImportSerialDataExcel('@Flag')" data-toggle="modal" data-target="#PartialImportSerialData" data-backdrop="static" data-keyboard="false"><img src="~/Content/Images/import_icon.png" width="25" id="ImportData" height="25" alt="Import Data"></a>

                    </li>
                </ul>
            </div>
        }
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.ItemName
            </label>
            <input id="SerialItemName" class="form-control" autocomplete="off" type="text" name="SerialItemName" placeholder="Item Name" onblur="this.placeholder='Item Name'" disabled="">
            <input type="hidden" id="hfSItemID" />
            <input type="hidden" id="hfSItemSNo" />
            <input type="hidden" id="hfSCostPrice" />
            <input type="hidden" id="hfSeriable" />

        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.UOM
            </label>
            <input id="serialUOM" class="form-control" autocomplete="off" type="text" name="serialUOM" placeholder="@Resource.UOM" disabled="">
            <input type="hidden" id="SerialUOMId" />
        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.Received @Resource.Quantity
            </label>
            <input id="SerialReceivedQuantity" class="form-control num_right" autocomplete="off" type="text" name="SerialReceivedQuantity" placeholder="Received Quantity" onblur="this.placeholder='Received Quantity'" disabled="">
        </div>

        <div class="clearfix"></div>

        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="table_label col-form-label label-align">@Resource.Serial @Resource.Number <span class="required">*</span></label>
            @if (ViewBag.DocumentMenuId == "105102115120")/*This condition is Added by Suraj on 07-10-2024 for OMR*/
            {
                <input id="SerialNo" class="form-control" autocomplete="off" type="text" name="SerialNo" maxlength="25" onkeypress="OnKeyPressSerialNo()" placeholder="Serial No" onblur="this.placeholder='Serial No'">
            }
            else
            {
                <input id="SerialNo" class="form-control" autocomplete="off" type="text" name="SerialNo" maxlength="25" onkeypress="OnKeyPressSerialNoSTK()" placeholder="Serial No" onblur="this.placeholder='Serial No'">
            }

            <span id="SpanSerialNo" class="error_message"></span>
        </div>
        <div class="col-md-3 col-sm-12 pl-0">
            <label class="table_label col-form-label label-align">@Resource.Manufacturer @Resource.Name@*<span class="required">*</span>*@</label>
            <input id="txtSrMfgName" class="form-control" autocomplete="off" type="text" maxlength="100" onchange="Cmn_OnChangeMfgName(event)" name="ManufacturerName" placeholder="@Resource.Manufacturer @Resource.Name">
        </div>
        <div class="col-md-6 col-sm-12 pl-0">
            <div class="col-md-5 col-sm-12 pl-0">
                <label class="table_label col-form-label label-align">@Resource.MRP@*<span class="required">*</span>*@</label>
                <input id="txtSrMfgMRP" class="form-control num_right" autocomplete="off" type="text" name="MRP" onchange="Cmn_OnChangeMfgMrp(event)" onkeypress="return Cmn_FloatValueonly(this,event,'#RateDigit')" placeholder="0000.00">
            </div>
            <div class="col-md-5 col-sm-12 pl-0">
                <label class="table_label col-form-label label-align">@Resource.Manufactured @Resource.Date@*<span class="required">*</span>*@</label>
                <input id="txtSrMfgDate" class="form-control" autocomplete="off" type="date" name="ManufacturedDate" max="@DateTime.Now.ToString("yyyy-MM-dd")">
            </div>
            <div id="DivAddNewSerial" class="col-md-1 col-sm-12" style="padding-left:0px; ">
                @if (ViewBag.DocumentMenuId == "105102115120")/*This condition is Added by Suraj on 07-10-2024 for OMR*/
                {
                    <div class="plus_icon1" style="float: right; margin-top:25px"> <i class="fa fa-plus" onclick="Cmn_OnClickAddNewSerialDetail()" id="Btn_AddNewSerialDetail" title="Add New"></i> </div>
                }
                else
                {
                    <div class="plus_icon1" style="float: right; margin-top:25px"> <i class="fa fa-plus" onclick="Cmn_OnClickAddNewSerialDetail()" id="Btn_AddNewSerialDetail" title="Add New"></i> </div>
                }


            </div>
        </div>
        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="SerialDetailTbl" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">

                    @*<table id="SerialDetailTbl" class="table table-bordered margin15">*@
                    <thead>
                        <tr class="headings">
                            <th width="4%"> &nbsp;</th>
                            <th width="4%">@Resource.SrNo</th>
                            <th width="23%"> @Resource.Serial @Resource.Number</th>
                            <th width="23%">@Resource.Manufacturer @Resource.Name</th>
                            <th width="23%">@Resource.MRP</th>
                            <th width="23%">@Resource.Manufactured @Resource.Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*<tr>
                            <td class=" red center"> <i class="fa fa-trash" aria-hidden="true" title="Delete" disabled="disabled"></i></td>
                            <td>01</td>
                            <td>PRAK123</td>
                        </tr>*@
                    </tbody>
                </table>
                </div>
            </div>

            </div>
            <div class="modal-footer">
                @if (ViewBag.DocumentMenuId == "105102115120")/*This condition is Added by Suraj on 07-10-2024 for OMR*/
                {
                    <button type="button" class="btn btn-primary btn-sm" onclick="Cmn_OnClickSerialResetBtn()" id="SerialResetBtn"> @Resource.Reset</button>
                    <button type="button" class="btn btn-primary btn-sm" id="SerialSaveAndExitBtn" onclick="Cmn_OnClickSerialSaveAndClose()">@Resource.SaveAndExit</button>
                    <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="SerialDiscardAndExitBtn" onclick="Cmn_OnClickSerialDiscardAndExit()">@Resource.DiscardAndExit</button>
                }
                else
                {
                    <button type="button" class="btn btn-primary btn-sm" onclick="OnClickSerialResetBtnSTK()" id="SerialResetBtn"> @Resource.Reset</button>
                    <button type="button" class="btn btn-primary btn-sm" id="SerialSaveAndExitBtn" onclick="OnClickSerialSaveAndCloseSTK()">@Resource.SaveAndExit</button>
                    <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="SerialDiscardAndExitBtn" onclick="OnClickSerialDiscardAndExitSTK()">@Resource.DiscardAndExit</button>
                }

            </div>
        </div>
