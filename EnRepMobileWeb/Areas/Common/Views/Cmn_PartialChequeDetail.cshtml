@using EnRepMobileWeb.Resources;
@using System.Data;

<script src="~/Content/Scripts/Common/CommonJS.js"></script>
<div class="modal-content" id="">
    <div class="modal-header">
        <h2> @Resource.Cheque @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div class="row">
            <div class="col-md-4 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.GLName</label>
                <input id="chq_GLName" class="form-control" value="" autocomplete="off" type="text" name="GLName" placeholder="GL Name" disabled="">
            </div>
            <div class="col-md-4 col-sm-12">
                <label class="col-form-label label-align">@Resource.GLBalance</label>
                <input id="chq_ApprovedBalance" class="form-control" value="0.00 Dr" autocomplete="off" type="text" name="ApprovedBalance" placeholder="Approved Balance" disabled="">
            </div>
            <div class="clear"></div>
            <div class="card-box table-responsive dy_table margin15">
                <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 height30VH">
                    <table id="Datatable" data-order="" class="table table-striped  table-bordered rowhighlighttbl" style="width:100%">
                        <thead>
                            <tr class="sticky-header">
                                <th width="5%">@Resource.SrNo</th>
                                <th width="14%">@Resource.Document <br /> @Resource.Number</th>
                                <th width="14%">@Resource.Document <br /> @Resource.Date</th>
                                @*<th width="14%">@Resource.Cheque <br /> @Resource.Number</th>
                                <th width="14%">@Resource.Cheque <br /> @Resource.Date</th>*@
                                <th width="14%">@Resource.Instrument <br /> @Resource.Number</th>
                                <th width="13%">@Resource.Instrument <br /> @Resource.Date</th>
                                <th width="12%">@Resource.Amount</th>

                            </tr>
                        </thead>
                        <tbody id="">
                            @if (ViewBag.chqDetails != null)
                            {
                                if (ViewBag.chqDetails.Rows.Count > 0)
                                {
                                    foreach (System.Data.DataRow item in ViewBag.chqDetails.Rows)
                                    {
                                        <tr>
                                            <td>@item["Rno"].ToString()</td>
                                            <td>@item["vou_no"].ToString()</td>
                                            <td>@item["vou_dt"].ToString()</td>
                                            <td>@item["ins_no"].ToString()</td>
                                            <td>@item["ins_dt"].ToString()</td>
                                            <td class="num_right">@item["Vou_Amt"].ToString()</td>
                                        </tr>
                                    }
                                }
                            }
                            @*<tr>
            <td>01</td>
            <td>B1/11/23/DSO0000176</td>
            <td>09-11-2023</td>
            <td>987987</td>
            <td>09-11-2023</td>
            <td>B1/11/23/DSO0000176</td>
            <td>09-11-2023</td>
            <td class="num_right">0000.00</td>
        </tr>*@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
    </div>
</div>