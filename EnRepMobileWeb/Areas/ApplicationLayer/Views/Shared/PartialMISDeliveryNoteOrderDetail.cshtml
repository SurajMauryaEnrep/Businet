@using EnRepMobileWeb.Resources;

<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Order @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body pop_top">
        <div class="col-md-6 col-sm-12">
            <label class="col-form-label label-align">@Resource.Item @Resource.Name</label>
            <input autocomplete="off" class="form-control" id="" maxlength="25" name="ItemName" placeholder="@Resource.Item @Resource.Name" readonly="readonly" type="text" value="">
        </div>
        <div class="col-md-2 col-sm-12">
            <label class="col-form-label label-align">@Resource.UOM</label>
            <input autocomplete="off" class="form-control" id="" maxlength="25" name="UOM" placeholder="@Resource.UOM" readonly="readonly" type="text" value="">

        </div>
        <div class="card-box table-responsive">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1">
                <div class="col-md-12 col-sm-12">
                    <table class="table table-striped jambo_table bulk_action margin5 rowhighlighttbl itmfrz">
                        <thead>
                            <tr class="headings">
                                <th width="3%">@Resource.SrNo</th>
                                <th width="25%">@Resource.Supplier <br /> @Resource.Name</th>
                                <th width="25%">@Resource.Order <br /> @Resource.Number</th>
                                <th width="30%">@Resource.Order <br /> @Resource.Date</th>
                                <th width="17%">@Resource.Pending <br /> @Resource.Quality  </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>01</td>
                                <td>AB_TEST SUPPLIER</td>
                                <td>B1/07/24/DPO0000001</td>
                                <td>03-07-2024	</td>
                                <td class="num_right">0000.00</td>
                            </tr>
                           
                        </tbody>
                        <tfoot>
                            <tr class="total font-weight-bold">
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td class="num_right">@Resource.Total</td>
                                <td class="num_right">0000.00</td>
                            </tr>

                        </tfoot>
                        @*<tfoot>
                                <tr class="total">
                                    <td>&nbsp;</td>
                                </tr>
                            </tfoot>*@
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.Close</button>
    </div>
</div>
