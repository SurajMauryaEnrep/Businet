@using System.Data;

<style>
    .table_border {
        border: 0.5px solid #000000;
    }

        .table_border > tbody > tr > td, .table_border > thead > tr > th {
            border: 0.5px solid #000000;
        }

    .td_border {
        border: 1px solid #000000;
    }

    .td_border_top {
        border-top: 1px solid #000000;
    }

    .td_border_left {
        border-left: 1px solid #000000;
    }

    .td_border_right {
        border-right: 1px solid #000000;
    }

    .td_border_rightpoint5 {
        border-right: 0.5px solid #000000;
    }

    .td_border_bottom {
        border-bottom: 1px solid #000000;
    }

    .td_border_bottom-top {
        border-bottom: 1px solid #000000;
        border-top: 1px solid #000000;
    }

    .suppInfo {
        font-size: 12px;
        font-weight: normal;
        padding: 0px 0px 0px 5px;
    }

        .suppInfo > tr > td {
            padding-right: 5px;
        }

    .td_pading {
        paddingleft: 5px;
        paddingtop: 5px;
        paddingbottom: 3px;
        paddingright: 5px;
    }

    .table_css {
        width: 100%;
        font-size: 12px;
        font-weight: normal;
        padding: 0px 0px;
        line-height: 18px;
        font-weight: normal;
    }
</style>

<div style=''>
    @*@Html.Partial("~/Areas/Common/Views/Cmn_PrintHeaderWithoutAddr.cshtml")*@
    @* ------------------- Header ------------------ *@
    @Html.Partial("~/Areas/Common/Views/Cmn_PrintHeaderWithoutAddr.cshtml")
    @* ------------------- Header ------------------ *@
    <table width='100%'>
        <tr>
            <td>
                <table style='width:100%;'>
                    <tr>
                        <td style='width:10px;'></td>
                        <td style="vertical-align:top; padding:0px;">
                            <table class="table_border table_css" cellspacing='0' cellpadding='0' style=''>
                                <tr>
                                    <td width="33%" class="td_border_right" style="vertical-align:top;">
                                        <table class="table_css">
                                            <tr>
                                                <td width="45%" style="font-weight:bold;">Source Type</td>
                                                <td width="55%">@ViewBag.Details.Tables[0].Rows[0]["src_type"]</td>
                                            </tr>
                                            <tr>
                                                <td width="45%" style="font-weight:bold;">Order Number</td>
                                                <td width="55%">@ViewBag.Details.Tables[0].Rows[0]["jc_no"]</td>
                                            </tr>
                                            <tr>
                                                <td width="45%" style="font-weight:bold;">UOM</td>
                                                <td width="55%">@ViewBag.Details.Tables[0].Rows[0]["uom_alias"]</td>
                                            </tr>
                                            <tr>
                                                <td width="45%" style="font-weight:bold;">Operation Name</td>
                                                <td width="55%">@ViewBag.Details.Tables[0].Rows[0]["op_name"]</td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td width="38%" class="td_border_right" style="vertical-align:top;">
                                        <table class="table_css">
                                            <tr>
                                                <td width="50%" style="font-weight:bold;">Order Type</td>
                                                <td width="50%">@ViewBag.Details.Tables[0].Rows[0]["ord_type"]</td>
                                            </tr>
                                            <tr>
                                                <td width="50%" style="font-weight:bold;">Order Date</td>
                                                <td width="50%">@ViewBag.Details.Tables[0].Rows[0]["jc_dt"]</td>
                                            </tr>
                                            <tr>
                                                <td width="50%" style="font-weight:bold;">Source Doc. Number</td>
                                                <td width="50%">@ViewBag.Details.Tables[0].Rows[0]["src_doc_no"]</td>
                                            </tr>
                                            <tr>
                                                <td width="50%" style="font-weight:bold;">Operation Output Item</td>
                                                <td width="50%">@ViewBag.Details.Tables[0].Rows[0]["item_name"]</td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td width="29%" class="td_border_right" style="vertical-align:top;">
                                        <table class="table_css">
                                            <tr>
                                                <td width="50%" style="font-weight:bold;">Status</td>
                                                <td width="50%">@ViewBag.Details.Tables[0].Rows[0]["status"]</td>
                                            </tr>
                                            <tr>
                                                <td width="50%" style="font-weight:bold;">Product Name</td>
                                                <td width="50%">@ViewBag.Details.Tables[0].Rows[0]["product_name"]</td>
                                            </tr>
                                            <tr>
                                                <td width="50%" style="font-weight:bold;">Source Doc. Date</td>
                                                <td width="50%">@ViewBag.Details.Tables[0].Rows[0]["src_doc_dt"]</td>
                                            </tr>
                                            <tr>
                                                <td width="50%" style="font-weight:bold;">Output UOM</td>
                                                <td width="50%">@ViewBag.Details.Tables[0].Rows[0]["op_uom_alias"]</td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td style='width:10px;'></td>
                    </tr>
                    <tr>
                        <td style='width:10px;'></td>
                        <td>
                            <div style='font-weight: bold; font-size: 14px; width: 100%; float: left; padding-left: 0px; padding-right: 10px; padding-bottom: 5px; padding-top: 10px; '>Input Material Detail</div>
                            <table class="table_border" cellspacing='0' cellpadding='0' style='width:100%;font-size:12px;font-weight:normal;padding:0px 0px;line-height:18px;font-weight:normal;'>
                                <thead>
                                    <tr>
                                        <th width='7%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> S.NO.</th>
                                        <th width='45%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Item Name </th>
                                        <th width='13%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> UOM </th>
                                        <th width='20%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Item Type</th>
                                        <th width='15%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Required Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Details.Tables[1].Rows != null)
                                    {
                                        var i = 1;
                                        foreach (DataRow dr in ViewBag.Details.Tables[1].Rows)
                                        {
                                            <tr>
                                                <td style='text-align:center; width:5%;'>@i</td>
                                                <td class="td_pading">@dr["item_name"].ToString()</td>
                                                <td class="td_pading">@dr["uom_alias"].ToString()</td>
                                                <td class="td_pading" style='text-align:left;'>@dr["item_type"].ToString()</td>
                                                <td class="td_pading" style='text-align:right;'>@dr["req_qty"].ToString()</td>
                                            </tr>
                                            i++;

                                        }
                                    }


                                </tbody>
                            </table>
                        </td>
                        <td style='width:10px;'></td>
                    </tr>
                    <tr>
                        <td style='width:10px;'></td>
                        <td>
                            <div style='font-weight: bold; font-size: 14px; width: 100%; float: left; padding-left: 0px; padding-right: 10px; padding-bottom: 5px; padding-top: 10px; '>Output Material Detail</div>
                            <table class="table_border" cellspacing='0' cellpadding='0' style='width:100%;font-size:12px;font-weight:normal;padding:0px 0px;line-height:18px;font-weight:normal;'>
                                <thead>
                                    <tr>
                                        <th width='7%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> S.NO.</th>
                                        <th width='45%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Item Name </th>
                                        <th width='13%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> UOM </th>
                                        <th width='20%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Item Type</th>
                                        <th width='15%' align='center' style='font-weight:bold;paddingtop:5px;paddingbottom:3px;'> Output Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Details.Tables[2].Rows != null)
                                    {
                                        var i = 1;
                                        DataView data = new DataView();
                                        foreach (DataRow dr in ViewBag.Details.Tables[2].Rows)
                                        {
                                            <tr>
                                                <td style='text-align:center; width:5%;'>@i</td>
                                                <td class="td_pading">
                                                    @dr["item_name"].ToString()
                                                    @if (ViewBag.Details.Tables[3].Rows.Count > 0)
                                                    {
                                                        data = ViewBag.Details.Tables[3].DefaultView;
                                                        DataTable NewDT1 = new DataTable();
                                                        data.RowFilter = "item_id='" + dr["item_id"].ToString() + "'";
                                                        NewDT1 = data.ToTable();
                                                        <table width="100%" style="font-size: 11px; paddingtop:3px;">
                                                            <tr>
                                                                <td colspan="3"></td>
                                                            </tr>
                                                            @foreach (System.Data.DataRow drsubitm in NewDT1.Rows)
                                                            {
                                                                if (dr["item_id"].ToString() == drsubitm["item_id"].ToString())
                                                                {
                                                                    <tr>
                                                                        <td width="10%" style="paddingtop: 0px;paddingbottom:0px;"></td>
                                                                        <td width="45%" style="paddingtop: 0px; paddingbottom: 0px;">@drsubitm["sub_item_name"] </td>
                                                                        <td width="45%" style="text-align: right; paddingtop: 0px; paddingbottom: 0px; paddingright: 5px;"> @drsubitm["ord_qty"]</td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </table>
                                                    }
                                                </td>
                                                <td class="td_pading">@dr["uom_alias"].ToString()</td>
                                                <td class="td_pading" style='text-align:left;'>@dr["item_type"].ToString()</td>
                                                <td class="td_pading" style='text-align:right;'>@dr["req_qty"].ToString()</td>
                                            </tr>
                                            i++;

                                        }
                                    }


                                </tbody>
                            </table>
                        </td>
                        <td style='width:10px;'></td>
                    </tr>
                    <tr>
                        <td style='width:10px;'></td>
                        <td>
                            <table class="table_border" cellspacing='0' cellpadding='0'
                                   style='width:100%;font-size:12px;font-weight:normal;padding:0px 0px;line-height:18px;font-weight:normal;'>
                                <thead>
                                    <tr>
                                        <th style='font-weight:bold;text-align:center;paddingleft:5px;paddingtop:5px;paddingbottom:3px;'><strong>Created By</strong></th>
                                        <th style='font-weight: bold; text-align: center; paddingleft: 5px; paddingtop: 5px; paddingbottom: 3px; '><strong>Approved By</strong></th>
                                        <th style='font-weight: bold; text-align: center; paddingleft: 5px; paddingtop: 5px; paddingbottom: 3px; '><strong>Amended By</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="td_pading" style="text-align: center;">@ViewBag.Details.Tables[0].Rows[0]["created_by"]</td>
                                        <td class="td_pading" style="text-align: center;">@ViewBag.Details.Tables[0].Rows[0]["approved_by"]</td>
                                        <td class="td_pading" style="text-align: center;">@ViewBag.Details.Tables[0].Rows[0]["ammend_by"]</td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                        <td style='width:10px;'></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    @*@Html.Partial("~/Areas/Common/Views/Cmn_PrintFooter.cshtml")*@
</div>
