


@using EnRepMobileWeb.Resources;
<div class="modal-content" id="tbody_ItemHistory">
    <div class="modal-header">
        <h2> @Resource.Production @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div class="row">

            <div class="col-md-4 col-sm-12">
                <label class="col-form-label label-align">@Resource.Production @Resource.Description</label>
                <input id="IconProductionDescription" class="form-control" autocomplete="off" type="text" name="ProductionDescription" placeholder="@Resource.Production @Resource.Description" disabled="">
            </div>
            <div class="col-md-55 ">
                <label class="col-form-label label-align">@Resource.UOM</label>
                <input id="IconUOM" class="form-control" autocomplete="off" type="text" name="UOM" placeholder="@Resource.UOM" onblur="this.placeholder = '@Resource.UOM'" disabled="">
                
            </div>            
        </div>
        <div class="card-box table-responsive dy_table margin10">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="OutputItemDtTbl" class="table table-striped table-bordered">
                    <thead>
                        <tr class="sticky-header">
                            <th width="4%">@Resource.SrNo</th>
                            <th width="21%">@Resource.ConfirmationNumber</th>
                            <th width="15%">@Resource.ConfirmationDate</th>
                            <th width="15%">@Resource.ProducedQuantity</th>
                            <th width="15%">@Resource.QC @Resource.Accepted</th>
                            <th width="15%">@Resource.QC @Resource.Rejected</th>
                            <th width="15%">@Resource.QC @Resource.Reworkable </th>
                        </tr>
                    </thead>
                    <tbody>                                         
                    </tbody>
                </table>
            </div>
            <table id="TotalQtyDetail" class="table table-striped table-bordered">
                <tbody>
                    <tr class="total">
                        <td colspan="3" align="right" width="40%"><strong>@Resource.Total</strong></td>
                        <td width="15%" class="num_right"><span id="TotProd"></span></td>
                        <td width="15%" class="num_right"><span id="TotAcc"></span></td>
                        <td width="15%" class="num_right"><span id="TotRej"></span></td>
                        <td width="15%" class="num_right"><span id="TotRew"></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.Close</button>
                </div>
            </div>
            
