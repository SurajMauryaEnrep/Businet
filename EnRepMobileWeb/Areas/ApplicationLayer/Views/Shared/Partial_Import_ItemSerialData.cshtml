<div class="modal-content" id="tbody_ItemHistory">
    <div class="modal-header">
        <h2> @Resource.Import @Resource.Data</h2>
         @*<button type="button" class="close" onclick="Closemodal()" data-dismiss="modal">&times;</button>*@

    <button type="button"
            class="close"
            onclick="Closemodal(this)">
        &times;
    </button>
    </div>
    <div class="modal-body pop_top">
        <div class="row">
            <div class="col-md-4 col-sm-12 no-padding">
                <div class="col-md-8 col-sm-12">
                    <div class="file-upload">
                        <div class="file-select mt-4">
                            <input type="file" name="ChooseSerial" id="ChooseSerialNofile">
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 no-padding">
                    <div class="col-md-12 mt-12">
                        <button type="button" class="btn btn-primary btn-sm margintop20" onclick="FetchDataSerial()">@Resource.FetchDetail</button>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12 no-padding">
                <div class="col-md-6 col-sm-12 ">
                    <label class="col-form-label label-align">
                        @Resource.Upload @Resource.Status
                    </label>
                    <select class="form-control" id="UploadStatusSerial" name="UploadStatus">
                        <option value="0">ALL</option>
                        <option value="Ok">Ok</option>
                        <option value="Not Ok">Not Ok</option>
                    </select>

                </div>
                <div class="col-md-2 col-sm-12 width5">
                    <button type="button" class="btn btn-primary btn-sm margintop20" id="BtnSearch" onclick="SearchByUploadStatusSerial();"><i class="fa fa-search" aria-hidden="true"></i></button>
                </div>

            </div>
          
        </div>
        <div id="PartialImportSerialDetail" class="card-box table-responsive dy_table margin10">
            @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialImportSerialDetail.cshtml")
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnImportData" type="button" style="background-color:#D3D3D3" class="btn btn-primary btn-sm" onclick="ImportDataFromSerialExcel(this);" disabled>Import Data</button>
        @*<button type="button" class="btn btn-danger btn-sm" id="ClosemodalPartialImportData" data-dismiss="" onclick="Closemodal()">Close</button>*@
        <button type="button"
                class="btn btn-danger btn-sm"
                onclick="Closemodal(this)">
            Close
        </button>
    </div>
</div>


