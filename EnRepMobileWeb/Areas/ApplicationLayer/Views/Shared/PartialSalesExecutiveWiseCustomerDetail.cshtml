<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.CustomerDetails</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top:0px;">
        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.SalesExecutiveName</label>
            <input id="SalesExecutiveName" class="form-control" autocomplete="off" type="text" name="SalesExecutiveName" placeholder="@Resource.SalesExecutiveName" disabled="">
            <input id="sale_Exc_id" hidden="hidden" />
        </div>

        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.Currency</label>
            <input id="SaleEx_Currency" class="form-control" autocomplete="off" type="text" name="UOM" placeholder="@Resource.Currency" disabled="">
            <input hidden="hidden" id="SaleEx_Currency_id" />
        </div>


        <div class="col-md-2 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.FromDate</label>
            <input id="SaleEx_FromDate" class="form-control" value="" autocomplete="off" type="date" name="FromDate" placeholder="" disabled="">
        </div>

        <div class="col-md-2 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.ToDate</label>
            <input id="SaleEx_ToDate" class="form-control" value="" autocomplete="off" type="date" name="ToDate" placeholder="" disabled="">
        </div>

        <div class="clearfix"></div>

        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 height40VH pop_csv">
                <table id="tbl_SalesExecutiveWiseCustomerDetail" class="table table-striped width2000 table-bordered rowhighlighttbl itmfrz" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="3%">@Resource.SrNo</th>
                            <th class="itmStick">@Resource.CustomerName</th>
                            <th hidden="hidden"></th>
                            @*<th hidden="hidden"></th>*@
                            <th>@Resource.Currency</th>
                            <th>@Resource.SaleAmount <br /> @Resource.InSpecific</th>
                            <th>@Resource.SaleAmount <br /> @Resource.InBase</th>
                            <th>@Resource.TaxAmount <br /> @Resource.InSpecific</th>
                            <th>@Resource.TaxAmount <br /> @Resource.InBase</th>
                            <th>@Resource.OtherCharges <br /> @Resource.InSpecific</th>
                            <th>@Resource.OtherCharges <br /> @Resource.InBase </th>
                            <th width="9%">@Resource.RoundOff <br /> @Resource.Amount</th>
                            <th>@Resource.InvoiceAmount <br /> @Resource.InSpecific</th>
                            <th>@Resource.InvoiceAmount <br /> @Resource.InBase</th>

                        </tr>
                    </thead>
                    <tbody id="">
                        @if (ViewBag.SalesDetailSalePersonWiseCustomerList != null)
                        {
                            var srno = 1;
                            foreach (System.Data.DataRow dr in ViewBag.SalesDetailSalePersonWiseCustomerList.Rows)
                            {
                        <tr>
                            <td>@srno</td>
                            <td id="custmer_nm" class="ItmNameBreak itmStick tditemfrz">@dr["cust_name"].ToString()</td>
                            <td id="custmer_id" hidden="hidden">@dr["cust_id"].ToString()</td>
                            @*<td hidden="hidden" id="txtbr_id">@dr["br_id"].ToString()</td>*@
                            <td id="currsymbol" class="center">@dr["curr_symbol"].ToString()</td>
                            <td class="num_right">@dr["sale_amount_spec"].ToString()</td>
                            <td class="num_right">@dr["sale_amount_bs"].ToString()</td>
                            <td class="num_right">@dr["tax_amt_spec"].ToString()</td>
                            <td class="num_right">@dr["tax_amt_bs"].ToString()</td>
                            <td class="num_right">@dr["oc_amt_spec"].ToString()</td>
                            <td class="num_right">@dr["oc_amt_bs"].ToString()</td>
                            <td class="num_right" id="">@dr["roundoff_diff"].ToString()</td>
                            <td class="num_right">
                                <div class="col-sm-11" id="">@dr["invoice_amt_spec"].ToString()</div>
                                <div class="col-sm-1 i_Icon">
                                    <button type="button" id="" class="calculator" onclick="SaleExctv_OnclickPopUpInvoiceAmt(event)" data-toggle="modal" data-target="#SalesExecutiveWiseInvoiceSummary" data-backdrop="static" data-keyboard="false"> <img src="~/Content/Images/iIcon1.png" alt="" title="@Resource.Invoice @Resource.Summary" /> @*<i class="fa fa-info" aria-hidden="true" title="@Resource.Invoice @Resource.Summary"></i>*@ </button>
                                </div>
                            </td>
                            <td class="num_right">
                                <div class="col-sm-11" id="">@dr["invoice_amt_bs"].ToString()</div>
                                <div class="col-sm-1 i_Icon">
                                    <button type="button" id="" class="calculator" onclick="SaleExctv_OnclickPopUpInvoiceAmt(event)" data-toggle="modal" data-target="#SalesExecutiveWiseInvoiceSummary" data-backdrop="static" data-keyboard="false"> <img src="~/Content/Images/iIcon1.png" alt="" title="@Resource.Invoice @Resource.Summary" /> @*<i class="fa fa-info" aria-hidden="true" title="@Resource.Invoice @Resource.Summary"></i>*@ </button>
                                </div>
                            </td>
                        </tr>

                                srno = srno + 1;
                                //totalsale_amt_spec = totalsale_amt_spec + dr["sale_amount_spec"]);
                                //totalsale_amt = totalsale_amt + dr["sale_amount_bs"]);
                                //totaltax_amt_spec = totaltax_amt_spec + dr["tax_amt_spec"]);
                                //totaltax_amt = totaltax_amt + dr["tax_amt_bs"]);
