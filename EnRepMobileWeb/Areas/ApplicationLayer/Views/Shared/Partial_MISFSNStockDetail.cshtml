@using EnRepMobileWeb.Resources;
@using System.Data;
@{
    decimal total = 0;
    int qtyDgt = 0;
    string setQtyDgt = "0.";
    if (Session["QtyDigit"] != null)
    {
        qtyDgt = Convert.ToInt32(Session["QtyDigit"]);
    }
    for (int i = 0; i < qtyDgt; i++)
    {
        setQtyDgt = setQtyDgt + "0";
    }
}
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Stock @Resource.Detail</h2> <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div id="">
            <div class="col-md-8 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.ItemName</label>
                <input id="Inst_Stk_ItemName" class="form-control" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="ItemName" placeholder="@Resource.ItemName" onblur="this.placeholder = '@Resource.ItemName'" disabled>
            </div>
            <div class="col-md-2 col-sm-12 pl-0">
                <label class="col-form-label label-align">@Resource.UOM</label>
                <input id="Inst_Stk_UOM" class="form-control" autocomplete="off" onchange="" maxlength="10" onkeypress="" type="text" name="UOM" placeholder="@Resource.UOM" onblur="this.placeholder = '@Resource.UOM'" disabled>
            </div>
        </div>
        <div class="clear"></div>
        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="InstTbl_StkDetails" data-order="" class="table table-striped table-bordered rowhighlighttbl">
                    <thead>
                        <tr class="sticky-header">
                            <th width="5%">&nbsp;</th>
                            <th width="13%">@Resource.Warehouse <br /> @Resource.Number</th>
                            <th width="13%">@Resource.LotNumber</th>
                            <th width="13%">@Resource.Batch <br />  @Resource.Number</th>
                            <th width="13%">@Resource.Serial <br />  @Resource.Number</th>
                            <th width="12%">@Resource.Manufacturer @Resource.Name</th>
                            <th width="10%">@Resource.MRP</th>
                            <th width="11%">@Resource.Manufactured @Resource.Date</th>
                            <th width="10%">@Resource.Available <br />  @Resource.Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.InSightData != null)
                        {
                            var srno = 1;
                            foreach (DataRow dr in ViewBag.InSightData.Rows)
                            {
                                <tr>
                                    <td>@srno</td>
                                    <td>@dr["wh_name"].ToString()</td>
                                    <td>@dr["lot_id"].ToString()</td>
                                    <td>@dr["batch_no"].ToString()</td>
                                    <td>@dr["serial_no"].ToString()</td>
                                    <td>@dr["mfg_name"].ToString()</td>
                                    <td class="num_right">@dr["mfg_mrp"].ToString()</td>
                                    <td>@dr["mfg_date"].ToString()</td>
                                    <td class="num_right">@dr["avlStk"].ToString()</td>
                                </tr>
                                srno++;
                                total = total + Convert.ToDecimal(dr["avlStk"]);
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr class="total">
                            <td colspan="8" class="num_right"><strong>Total</strong></td>
                            <td class="num_right"><strong>@total.ToString(setQtyDgt)</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="modal-footer" id="">
            <button type="button" class="btn btn-primary btn-sm" id="" data-dismiss="modal" onclick="">@Resource.Close</button>
        </div>
    </div>
</div>

<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>