@using EnRepMobileWeb.Resources;
@using System.Data;
@{
    var i = 0;
    var TotalOk = 0;
    var TotalNotOk = 0;
}
<style>
    .loader1 {
        /* border: 16px solid #343a40;
        border-radius: 50%;
        border-top: 16px solid #3498db;
        width: 130px;
        height: 130px;*/
        -webkit-animation: spin 2s linear infinite; /* Safari */
        animation: spin 2s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -40px; /* Half of width */
        margin-left: -40px; /* Half of height */
        z-index: 9999; /* Make sure it's on top of other elements */
        display: none; /* Initially hide the loader */
        /*    position: fixed;*/
    }

    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loader1 div {
        width: 100%;
        height: 100%;
    }

    thead tr > :nth-child(2) {
        z-index: 100 !important;
        position: sticky;
        left: 0;
        top: 0;
    }

    tbody tr > :nth-child(2) {
        background: #ffffff;
        position: sticky;
        z-index: 1;
        left: 0;
    }
</style>
<div id="loader1" class="loader1">
    <img src="~/Content/Images/loader.gif" width="100" height="100" />
</div>

<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height50VH">

    <table id="DttblBtns" class="table table-striped table-bordered width3800 rowhighlighttbl itmfrz">
        <thead>
            <tr class="sticky-header">
                <th width="2%">@Resource.SrNo</th>
                <th width="9%" class="width-400">@Resource.Item Description</th>
                <th width="2%" class="width-150">@Resource.OEMNo</th>
                <th width="4%">@Resource.Alias @Resource.Name</th>
                <th width="4%">@Resource.RefNo</th>
                <th width="5%">@Resource.Technical @Resource.Specification</th>
                <th width="5%">@Resource.Technical @Resource.Description</th>
                <th width="7%">@Resource.ItemGroup</th>
                <th width="3%">@Resource.HSNCode</th>
                <th width="2%">@Resource.BaseUOM</th>
                <th width="3%">@Resource.UnitCost</th>
                <th width="3%">@Resource.UnitPrice</th>
                <th width="3%">@Resource.issuemethod</th>
                <th width="3%">@Resource.costmethod</th>
                <th width="4%" class="width-200">@Resource.Minimum @Resource.Stock @Resource.Level</th>
                <th width="4%" class="width-200">@Resource.Minimum @Resource.Purchase @Resource.Stock</th>
                <th width="4%">@Resource.Reorder @Resource.Level</th>
                <th width="4%">@Resource.WeightInKg</th>
                <th width="4%">@Resource.WeightInLiters</th>
                <th width="6%" class="width-400">@Resource.remarks</th>
                <th width="4%">@Resource.Workstation</th>
                <th width="4%">@Resource.TaxExempted</th>
                <th width="4%" class="width-200">@Resource.SubItem</th>
                <th width="3%">@Resource.BranchMapping</th>
                <th width="3%">@Resource.Item @Resource.Portfolio</th>
                <th width="4%">@Resource.Upload @Resource.Status</th>
                @*<th hidden="hidden"></th>*@
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.ImportItemsPreview != null)
            {
                var rowNo = 0;
                foreach (DataRow dtr in ViewBag.ImportItemsPreview.Tables[0].Rows)
                {
                    rowNo = rowNo + 1;
            <tr>
                <td>@rowNo</td>
                <td id="tdItmName">@dtr["item_name"].ToString()</td>
                <td>@dtr["item_oem_no"].ToString()</td>
                <td class="ItmNameBreak">@dtr["item_sam_cd"].ToString()</td>
                <td>@dtr["item_leg_cd"].ToString()</td>
                <td>@dtr["item_tech_spec"].ToString()</td>
                <td>@dtr["item_tech_des"].ToString()</td>
                <td>@dtr["item_grp_id"].ToString()  </td>
                <td>@dtr["HSN_code"].ToString()</td>
                <td id="tdBaseUom">@dtr["base_uom_id"].ToString()</td>
                <td class="num_right">@dtr["cost_price"].ToString()</td>
                <td class="num_right">@dtr["sale_price"].ToString()</td>
                <td>@dtr["issue_method"].ToString()</td>
                <td>@dtr["cost_method"].ToString()</td>
                <td class="num_right">@dtr["min_stk_lvl"].ToString()</td>
                <td class="num_right">@dtr["min_pr_stk"].ToString()</td>
                <td class="num_right">@dtr["re_ord_lvl"].ToString()</td>
                <td class="num_right">@dtr["wght_kg"].ToString()</td>
                <td class="num_right">@dtr["wght_ltr"].ToString()</td>
                <td>@dtr["item_remarks"].ToString()</td>
                <td class="center">
                    @if (@dtr["i_ws"].ToString().ToLower() == "yes")
                    {
                        <i class="fa fa-check text-success " aria-hidden="true"></i>
                    }
                    else
                    {
                        <i class="fa fa-times-circle text-danger" aria-hidden="true"></i>
                    }
                </td>
                <td class="center">

                    @if (@dtr["tax_exemp"].ToString().ToLower() == "yes")
                    {
                        <i class="fa fa-check text-success " aria-hidden="true"></i>
                    }
                    else
                    {
                        <i class="fa fa-times-circle text-danger" aria-hidden="true"></i>
                    }
                </td>
                <td class="i_Icon center" style="text-align:center !important;">
                    @if (@dtr["sub_item"].ToString().ToLower() == "yes")
                    {

                        <button type="button" id="SubItmInfoBtnIcon" class="calculator" onclick="BindExcelSubItemDetails(event);" data-toggle="modal" data-target="#SubItemDetail" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/subItem.png" alt="" title="@Resource.SubItem @Resource.Detail">  </button>

                    }
                </td>
                <td class="center"><button type="button" class="calculator subItmImg" onclick="BindItemBranchDetails(event)" id="" data-toggle="modal" data-target="#BranchMapping" data-backdrop="static" data-keyboard="false"><i class="fa fa-eye" aria-hidden="true" data-toggle="" title="@Resource.BranchMapping"></i></button></td>
                <td class="center"><button type="button" class="calculator subItmImg" onclick="BindItemPortfolioDetails(event)" data-toggle="modal" data-target="#ItemPortfolio" data-backdrop="static" data-keyboard="false"><i class="fa fa-eye" aria-hidden="true" data-toggle="" title="@Resource.Item @Resource.Portfolio"></i></button></td>
                <td>
                    <div class="col-sm-10 no-padding">
                        @if (@dtr["UploadStatus"].ToString().ToLower() == "ok")
                        {
                            <i class="fa fa-check text-success " aria-hidden="true"></i>
                        }
                        else
                        {
                            <i class="fa fa-times-circle text-danger" aria-hidden="true"></i>

                        }
                    </div>
                    @if (@dtr["UploadStatus"].ToString().ToLower() != "ok")
                    {
                        <div class="col-sm-2 i_Icon">
                            <button type="button" id="ItmInfoBtnIcon" class="calculator" onclick="OnClickErrorDetails(event);" data-toggle="modal" data-target="#ErrorDetail" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/iIcon1.png" alt="" title="@Resource.Error @Resource.Detail">  </button>
                        </div>
                    }
                </td>
                @*<td id="uplSts" hidden="hidden">@dtr["UploadStatus"].ToString().ToLower()</td>*@
            </tr>
                }
            }
        </tbody>
    </table>

</div>
<div>
    <table id="tblstatusid" class="table table-striped table-bordered">
        <tbody>
            @if (ViewBag.ImportItemsPreview != null)
            {
                TotalOk = Convert.ToInt32(@ViewBag.ImportItemsPreview.Tables[4].Rows[0]["TotalOk"].ToString());
                TotalNotOk = Convert.ToInt32(@ViewBag.ImportItemsPreview.Tables[4].Rows[0]["TotalNotOk"].ToString());
                <tr class="total">
                    <td colspan="3" align="right" width="75%"><strong>@Resource.Total valid records</strong></td>
                    <td class="num_right"><span id="TotCons"></span>@ViewBag.ImportItemsPreview.Tables[4].Rows[0]["TotalOk"].ToString()</td>
                    <td colspan="1" align="right" width="75%"><strong>@Resource.Total invalid records</strong></td>
                    <td class="num_right"><span id="TotCons">@ViewBag.ImportItemsPreview.Tables[4].Rows[0]["TotalNotOk"].ToString()</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<input id="hdnOk" type="hidden" value="@TotalOk" />
<input id="hdnNotOk" type="hidden" value="@TotalNotOk" />
