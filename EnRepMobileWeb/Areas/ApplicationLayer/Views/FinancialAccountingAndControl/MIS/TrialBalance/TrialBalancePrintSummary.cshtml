    .reserve_txt_v1 {
        font-size: 13px;
        font-weight: bold;
        paddingleft: 5px;
        paddingright: 10px;
        paddingtop: 5px;
        paddingbottom: 5px;
        background-color: #ffffff;
    }

    .reserve_txt_v2 {
        font-size: 11px;
        font-weight: bold;
        paddingleft: 15px;
        paddingright: 10px;
        paddingtop: 5px;
        paddingbottom: 5px;
        background-color: #ffffff;
    }

    .reserve_txt_v2_nor {
        font-size: 11px;
        font-weight: normal;
        paddingleft: 25px;
        paddingright: 10px;
        paddingtop: 5px;
        paddingbottom: 5px;
        background-color: #ffffff;
    }

    .reserve_txt_v3 {
        font-size: 11px;
        font-weight: bold;
        paddingleft: 25px;
        paddingright: 10px;
        paddingtop: 10px;
        paddingbottom: 10px;
        background-color: #ffffff;
    }
    .reserve_txt_v3_nor {
        font-size: 11px;
        font-weight: normal;
        paddingleft: 35px;
        paddingright: 10px;
        paddingtop: 10px;
        paddingbottom: 10px;
        background-color: #ffffff;
    }

    .reserve_txt_v4 {
        font-size: 11px;
        font-weight: bold;
        paddingleft: 35px;
        paddingright: 10px;
        paddingtop: 10px;
        paddingbottom: 10px;
        background-color: #ffffff;
    }

    .reserve_txt_v4_nor {
        font-size: 11px;
        font-weight: normal;
        paddingleft: 45px;
        paddingright: 10px;
        paddingtop: 10px;
        paddingbottom: 10px;
        background-color: #ffffff;
    }

    
    .num_right {
        text-align: right;
    }

    .l1_bg {
        background-color: #badafa;
    }

    .l2_bg {
        background-color: #cbe3fa;
    }
    .l3_bg {
        background-color: #dcebf9;
    }
    .l4_bg {
        background-color: #e7eef5;
    }
    .p-2 {
        paddingright:50px;
