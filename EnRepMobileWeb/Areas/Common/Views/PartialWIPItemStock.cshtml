@using EnRepMobileWeb.Resources;

@{
    decimal TotalIssueQty = 0;
    
}
<div class="modal-content">
    <div class="modal-header">
        @if (ViewBag.StockType == "wip")
        {
            <h2>@Resource.WIP @Resource.Stock</h2>
        }
        else
        {
            <h2>@Resource.InTransit @Resource.Stock</h2>
        }
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top: 0px;">
        <div class="row">
            <div class="col-md-9 col-sm-12">
                <label class="col-form-label label-align">@Resource.ItemName</label>
                <input id="WareHouseWiseItemName" value="@ViewBag.ItemName" disabled class="form-control" autocomplete="off" maxlength="25" tabindex="5" type="text" name="ItemName" placeholder="ItemName" onblur="this.placeholder='ItemName'">
            </div>
            <div class="col-md-3 col-sm-12">
                <label class="col-form-label label-align"> @Resource.UOM</label>
                <input id="WareHouseWiseUOM" value="@ViewBag.UOM" disabled class="form-control" autocomplete="off" maxlength="25" tabindex="5" type="text" name="UOM" placeholder="@Resource.UOM">
            </div>
        </div>

        @*<div class="price_item_detail tableFixHead height30VH margin10">
        <table class="table table-bordered">
            <thead>
                <tr>*@
    <div class="card-box table-responsive price_item_detail dy_table margin15">
        <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
            <table id="ItemPendingStockDetailsTbl" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                <thead>
                    <tr class="sticky-header">
                        @*<th> @Resource.SrNo</th>*@
                        @if (ViewBag.StockType == "wip")
                        {
                            <th> @Resource.Production @Resource.Order @Resource.Number</th>
                            <th> @Resource.Production @Resource.Order  @Resource.Date</th>
                            <th> @Resource.WIP @Resource.Quantity</th>
                        }
                        else
                        {
                            <th> @Resource.Purchase @Resource.Order  @Resource.Number</th>
                            <th>  @Resource.Purchase @Resource.Order @Resource.Date</th>
                            <th> @Resource.InTransit <br /> @Resource.Quantity</th>
                        }

                    </tr>
                </thead>
                <tbody>

                    @if (ViewBag.PendingStockItemWise != null)
                    {
                        var SrNo = 0;
                        foreach (System.Data.DataRow Row in ViewBag.PendingStockItemWise.Rows)
                        {
                            SrNo = SrNo + 1;
                            if (Row["pend_qty"].ToString() != "" && Row["pend_qty"].ToString() != null)
                            {
                                TotalIssueQty = Convert.ToDecimal(TotalIssueQty) + Convert.ToDecimal(Row["pend_qty"].ToString());
                            }
                    <tr>
                        @*<td>@SrNo</td>*@
                        <td>
                            <input id="" value="@Row["doc_no"].ToString()" disabled class="form-control " autocomplete="off" type="text">
                        </td>
                        <td>
                            <input id="" value="@Row["doc_dt"].ToString()" disabled class="form-control " autocomplete="off" type="text">
                        </td>
                        <td class="num_right">
                            <input id="" value="@Row["pend_qty"].ToString()" disabled class="form-control num_right" autocomplete="off" type="text">
                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
            <table class="table table-bordered" id="">
                <tr class="total">
                    <th width="70%" class="num_right"><strong> Total</strong></th>
                    <th class="num_right">
                        <strong>@TotalIssueQty</strong>
                        @*<div id="TotalIssuedQuantity" value="@TotalIssueQty" disabled autocomplete="off" type="text" name="txtItemTotolQty" required="required" placeholder="@Resource.IssuedQuantity"  onblur="this.placeholder='Issued Quantity'" readonly></div>*@
                    </th>
                </tr>
            </table>


        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
        </div>
    </div>

