@model EnRepMobileWeb.MODELS.ApplicationLayer.Procurement.SupplierPriceList.SupplierPriceListModel
@using EnRepMobileWeb.Resources;
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@{
    if (TempData["Message"] != null)
    {
        if (TempData["Message"].ToString() == "Financial Year not Exist")
        {
            <script type="text/javascript">
                swal("", $("#FinancialYearDoesNotExistTransactionCanNotBeDone").text(), "warning");
            </script>
        }

    }
}
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Css/build/js/sweetalert.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/Procurement/SupplierPriceList/SupplierPriceListJs.js"></script>
<title>@Model.Title</title>
<div class="row">
    <!-- Workflow Information -->
    <div id="WorkflowInformation" class="modal fade" role="dialog">
        <div class="modal-dialog" style="max-width:700px;">
            <div class="price_item_detail">
                <!-- Modal content-->
                @Html.Partial("~/Areas/Common/Views/_WorkFlow.cshtml")
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <h2 class="col-md-5 col-sm-12 heading_left_padding ">@ViewBag.MenuPageName</h2>
                <div id="wizard" class="form_wizard wizard_horizontal col-md-3 col-sm-12 work_flow">
                    @Html.Partial("~/Areas/Common/Views/_PartialWorkflowBar.cshtml")
                </div>
                @Html.HiddenFor(m => m.ListFilterData, new { @id = "ListFilterData" })
                @Html.HiddenFor(m => m.DocumentMenuId, new { @id = "DocumentMenuId" })
                @Html.HiddenFor(m => m.ValidUpto, new { @id = "Create_DT" })
                @Html.HiddenFor(m => m.wf_status, new { @id = "WF_Status" })
                @if (ViewBag.VBRoleList != null)
                {
                    foreach (System.Data.DataRow Row in ViewBag.VBRoleList.Rows)
                    {
                        if (Row["feature_id"].ToString() == "105101101001")
                        {
                            <div id="" class="col-md-4 col-sm-12 heading_right_padding">
                                <ul>
                                    <li>
                                        <a class="tooltip-test"
                                           title=" @Resource.AddNew" href="@Url.Action("AddSupplierPriceListDetail","SupplierPriceList")"><img src="~/Content/Images/addgreen.png" width="32" height="32" id="Btn_AddNewGRN" alt="Add"></a>
                                    </li>
                                </ul>
                            </div>
                        }
                    }
                }
                <div class="x_title pad_mar ">
                    <div class="col-md-12 col-sm-12 icon_tool padding_zero">
                        <div class="col-md-12 col-sm-12 padding_zero">
                            <div class="col-md-3 col-sm-12">
                                <label class="col-form-label label-align">@Resource.Category</label>
                                @Html.DropDownListFor(model => model.catalog, new SelectList(Model.CatalogList, "catalog_id", "catalog_name", Model.catalog), new { @class = "form-control", @id = "catalog" })
                                @*<select class="form-control" id="Category" name="Category">
                                        <option value="">All</option>
                                        <option value="">Category</option>
                                        <option value="">Category 1</option>
                                        <option value="">Category 2</option>
                                        <option value="">Category 3</option>
                                        <option value="">Category 4</option>

                                    </select>*@
                            </div>
                            <div class="col-md-3 col-sm-12 pl-0">
                                <label class="col-form-label label-align">@Resource.Portfolio</label>
                                @Html.DropDownListFor(model => model.portfolio, new SelectList(Model.portfolioList, "Portfolio_id", "Portfolio_name", Model.portfolio), new { @class = "form-control", @id = "portfolio" })
                                @*<select class="form-control" id="Portfolio" name="Portfolio">
                                        <option value="">All</option>
                                        <option value="">Portfolio</option>
                                        <option value="">Portfolio 1</option>
                                        <option value="">Portfolio 2</option>
                                        <option value="">Portfolio 3</option>
                                        <option value="">Portfolio 4</option>
                                    </select>*@
                            </div>
                            <div class="col-md-2 col-sm-12 pl-0">
                                <label class="col-form-label label-align">@Resource.Active @Resource.Status</label>
                                @Html.DropDownListFor(model => model.ActStatus, new SelectList(new List<SelectListItem> {
                                                                                              new SelectListItem {Text="All",Value="0" },
                                                                                              new SelectListItem {Text="Yes",Value="Y" },
                                                                                              new SelectListItem {Text="No",Value="N" },
                                                                                              }, "Value", "Text"
                                               ), new { @class = "form-control", @id = "supp_act", @name = "supp_act" })
                                @*<select class="form-control" id="ActiveStatus" name="ActiveStatus">
                                        <option value="">All</option>
                                        <option value="">Yes</option>
                                        <option value="">No</option>
                                    </select>*@
                            </div>
                            @*<div class="col-md-2 col-sm-12 pl-0">
                                <label class="col-form-label label-align">@Resource.ValidUpto</label>
                                @Html.TextBoxFor(model => model.ValidUpto, new { @class = "form-control", @id = "AsDate", @type = "date", @Value = System.DateTime.Now.ToString("yyyy-MM-dd"), @max = System.DateTime.Now.ToString("yyyy-MM-dd") })
                            </div>*@
                            <div class="col-md-1 col-sm-12 pl-0">
                                <button type="button" class="btn btn-primary btn-sm margintop20" id="Btn_Search" onclick="BtnSearch()"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <div class="card-box table-responsive dy_table">
                    <div id="SupplierPriceLt" class="sticky-table sticky-ltr-cells sb-container container-example1">
                        @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialSupplierPriceList.cshtml")

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page content end -->
