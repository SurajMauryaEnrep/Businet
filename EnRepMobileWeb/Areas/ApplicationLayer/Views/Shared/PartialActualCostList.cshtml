@using EnRepMobileWeb.Resources;
@using System.Data;
@{
    string ValDigit = "0.";
    var VD = Convert.ToInt32(Session["ValDigit"].ToString());
    for (var i = 0; i < VD; i++)
    {
        ValDigit += "0";
    }
    string QtyDigit = "0.";
    var QD = Convert.ToInt32(Session["QtyDigit"].ToString());
    for (var i = 0; i < QD; i++)
    {
        QtyDigit += "0";
    }
    string RateDigit = "0.";
    var RD = Convert.ToInt32(Session["RateDigit"].ToString());
    for (var i = 0; i < RD; i++)
    {
        RateDigit += "0";
    }
    decimal Total = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>

<div class="modal-content">
    <div class="modal-header">
        @if (ViewBag.ActualValueDetails != null)
        {
            <h2>@ViewBag.ActualValueDetails.Rows[0]["product_name"]</h2>
        }
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top:0px;">
        <div class="card-box table-responsive dy_table margin10">
            <div class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH pop_csv">
                <table id="tblPAActualCost" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="2%"> @Resource.SrNo</th>
                            <th width="28%"> @Resource.MaterialName</th>
                            <th width="10%"> @Resource.UOM</th>
                            <th width="10%">@Resource.ConsumedQuantity</th>
                            <th width="10%">@Resource.Lot</th>
                            <th width="10%">@Resource.Batch1</th>
                            <th width="10%">@Resource.Serial1</th>
                            <th width="10%">@Resource.CostPrice</th>
                            <th width="10%">@Resource.Value</th>
                        </tr>
                    </thead>
                    <tbody id="">
                        @if (ViewBag.ActualValueDetails != null)
                        {
                            var srno = 1;
                            foreach (DataRow dr in ViewBag.ActualValueDetails.Rows)
                            {

                                <tr class="odd">
                                    <td width="3%">@srno</td>
                                    <td width="30%">@dr["item_name"].ToString()</td>
                                    <td width="10%">@dr["uom_alias"].ToString()</td>
                                    <td class="num_right">@Convert.ToDecimal(dr["qty"]).ToString(QtyDigit)</td>
                                    <td class="">@dr["LotNo"].ToString()</td>
                                    <td class="">@dr["batch_no"].ToString()</td>
                                    <td class="">@dr["serial_no"].ToString()</td>
                                    <td class="num_right">@Convert.ToDecimal(dr["item_cost"]).ToString(RateDigit)</td>
                                    <td class="num_right">@Convert.ToDecimal(dr["item_value"]).ToString(ValDigit)</td>
                                </tr>
                                Total = Convert.ToDecimal(Total) + Convert.ToDecimal(dr["item_value"]);
                                srno = srno + 1;
                            }
                        }

                    </tbody>
                    <tfoot>
                        <tr class="total">
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td align="right"> <strong>@Resource.Total</strong></td>
                            <td class="num_right"><strong>@Total.ToString(ValDigit)</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="OnClickSerialDiscardAndExit()">@Resource.Close</button>
        </div>
    </div>



