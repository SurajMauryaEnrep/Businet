@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/ApplicationLayer/FinancialAccountingAndControl/PaymentRequisition/PaymentRequisition_JS.js"></script>
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<table id="datatable-buttons" class="table table-striped table-bordered width1700 rowhighlighttbl">
    <thead>
        <tr class="sticky-header">
            <th width="3%">@Resource.SrNo</th>
            <th width="7%">@Resource.Requisition @Resource.Number</th>
            <th width="7%">@Resource.Requisition @Resource.Date</th>
            <th hidden="hidden">@Resource.Requisition @Resource.Date</th>
            <th width="7%">@Resource.Requirement @Resource.Area</th>
            <th width="7%">@Resource.Requested @Resource.By</th>
            <th width="7%">@Resource.Requested @Resource.Amount</th>
            <th width="7%">@Resource.Currency</th>
            <th width="7%">@Resource.Status</th>
            <th width="8%">@Resource.CreatedBy</th>
            <th width="8%">@Resource.Createdon</th>
            <th width="8%">@Resource.ApprovedBy</th>
            <th width="8%">@Resource.ApprovedOn</th>
            <th width="8%">@Resource.AmendedBy</th>
            <th width="8%">@Resource.AmendedOn</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.PaymentRequisitionDetailsList != null)
        {
            foreach (System.Data.DataRow item in ViewBag.PaymentRequisitionDetailsList.Rows)
            {
                rowId = rowId + 1;
                <tr>

                    <td class="sorting_1">@rowId</td>
                    <td id="pr_no" class="ItmNameBreak itmStick tditemfrz">@item["pr_no"].ToString()</td>
                    <td>@item["PRDate"].ToString()</td>
                    <td hidden="hidden" id="prdateID">@item["Pr_date"].ToString()</td>
                    <td id="reqArea">@item["reqArea"].ToString()</td>
                    <td id="req_by">@item["req_by"].ToString()</td>
                    <td id="">@item["req_amt"].ToString()</td>
                    <td id="">@item["curr_name"].ToString()</td>
                    <td id="Doc_Status">@item["Status"].ToString()</td>
                    <td>@item["create_by"].ToString()</td>
                    <td>@item["CreateDate"].ToString()</td>
                    <td>@item["app_by"].ToString()</td>
                    <td>@item["ApproveDate"].ToString()</td>
                    <td>@item["mod_by"].ToString()</td>
                    <td>@item["ModifyDate"].ToString()</td>

                </tr>
            }
        }
    </tbody>
</table>
@if (Model.SearchFlag != null)
{
 
    if (Model.SearchFlag == "SearchData")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        Model.SearchFlag = null;
    }
}
