
@using EnRepMobileWeb.Resources;

<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.BatchDetail</h2>
       <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.ItemName</label>
            <input id="ItemNameBatchWise" class="form-control" autocomplete="off" type="text" name="ItemNameBatchWise" placeholder="Item Name"  onblur="this.placeholder='Item Name'" disabled="">
            @*<input type="hidden" id="hfItemID" />
            <input type="hidden" id="hfItemSNo" />
            <input type="hidden" id="hfexpiryflag" />
            <input type="hidden" id="HDItemNameBatchWise" />*@
        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.UOM</label>
            <input id="UOMBatchWise" class="form-control" autocomplete="off" type="text" name="UOMBatchWise" placeholder="@Resource.UOM" disabled="">
            @*<input type="hidden" id="HDUOMBatchWise" />*@
        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.Received @Resource.Quantity</label>
            <input id="BatchReceivedQuantity" class="form-control" autocomplete="off" type="text" name="BatchReceivedQuantity" placeholder="Received Quantity"  onblur="this.placeholder='Received Quantity'" disabled="">
        </div>
        <div class="clearfix"></div>      

        <table id="MI_ItemBatchTbl" class="table table-bordered">
            <thead>
                <tr class="headings" disabled="disabled">                  
                    <th width="33%" disabled="disabled">@Resource.Quantity</th>
                    <th width="33%" disabled="disabled"> @Resource.BatchNumber</th>
                    <th width="33%" title="Unit Of Measure"> @Resource.ExpiryDate</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.ItemStockBatchWise != null)
                {                   
                    foreach (System.Data.DataRow Row in ViewBag.ItemStockBatchWise.Rows)
                    {
                        <tr>
                            <td align="right">@Row["IssueQty"].ToString()</td>
                            <td>@Row["batch_no"].ToString()</td>
                            <td>@Row["exp_date"].ToString()</td>
                        </tr>
                    }
                }
                    </tbody>
          
        </table>

    </div>
    <div class="modal-footer">
        @*<button type="button" class="btn btn-primary btn-sm" id="BatchResetBtn" onclick="OnClickBatchResetBtn()">@Resource.Reset</button>
        <button type="button" class="btn btn-primary btn-sm" id="BatchSaveAndExitBtn" onclick="OnClickSaveAndClose()">@Resource.SaveAndExit</button>*@
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="BatchDiscardAndExitBtn">@Resource.DiscardAndExit</button>
    </div>
</div>
