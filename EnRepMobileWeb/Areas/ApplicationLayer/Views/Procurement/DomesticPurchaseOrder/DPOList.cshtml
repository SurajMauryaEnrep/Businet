<script src="~/Content/Scripts/ApplicationLayer/Procurement/DomesticPurchaseOrder/DPOList.js"></script>
<title>@Model.Title</title>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <!-- Purchase Order Tracking Start -->
        <div id="PurchaseOrderTracking" class="modal fade" role="dialog">
            <div id="trackingpo" class="modal-dialog" style=" max-width:1200px;">
                <!-- Modal content-->
                @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/_PurchaseOrderTracking.cshtml")
            </div>
        </div>
        <!-- Purchase Order Tracking End -->
        <!--PO Pending Source Documents Start -->
        <div id="POPendingSourceDocument" class="modal fade" role="dialog">
            <div class="modal-dialog pop_csv" id="GetDataPending" style="max-width:1200px;">
                <!-- Modal content-->
                @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/POPartialPendingSourceDocument.cshtml")
            </div>
        </div>
        <!--PO Pending Source Documents End -->
        <!-- Workflow Information -->
        <div id="WorkflowInformation" class="modal fade" role="dialog">
            <div class="modal-dialog" style="max-width:700px;">
                <div class="price_item_detail">
                    <!-- Modal content-->
                    @Html.Partial("~/Areas/Common/Views/_WorkFlow.cshtml")
                </div>
            </div>
        </div>
        <!-- Item Information MI  -->
        <div id="ItemInfoMIList1" class="modal fade" role="dialog">
            <div class="modal-dialog" style=" max-width:700px;">
                <!-- Modal content-->
                @*@Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialItemInformationMIList.cshtml")*@
                @Html.Partial("~/Areas/Common/Views/Cmn_ItemInformationPSDList.cshtml")
            </div>
        </div>
        <div class="x_panel mar_pad1">
            <div class="x_content mar_pad1">
                <h2 class="col-md-5 col-sm-12 heading_left_padding ">@ViewBag.MenuPageName</h2>
                <!-- Smart Wizard -->
                <div id="wizard" class="form_wizard wizard_horizontal col-md-3 col-sm-12 work_flow">
                    @Html.Partial("~/Areas/Common/Views/_PartialWorkflowBar.cshtml")
                </div>
                @Html.HiddenFor(m => m.ListFilterData, new { @id = "ListFilterData" })
                @Html.HiddenFor(m => m.DocumentMenuId, new { @id = "DocumentMenuId" })
                @Html.HiddenFor(m => m.WF_status, new { @id = "WF_status" })
                @if (Model.DocumentMenuId != "105101130")
                {
                    @Html.HiddenFor(m => m.SrcType, new { @id = "SrcType" })
                }
                else
                {
                    @Html.HiddenFor(m => m.SrcType, new { @id = "SrcType" })
                }
                @*<input type="hidden" id="DocumentMenuId" value="@ViewBag.DocumentMenuId" />*@
                @if (ViewBag.VBRoleList != null)
                {
                    foreach (System.Data.DataRow Row in ViewBag.VBRoleList.Rows)
                    {
                        if (Row["feature_id"].ToString() == "105101130001" || Row["feature_id"].ToString() == "105101140101001" || Row["feature_id"].ToString() == "105101136001")
                        {

                            <div id="" class="col-md-4 col-sm-12 work_flow heading_right_padding">
                                <ul>
                                    @if (Model.DocumentMenuId != "105101136")
                                    {
                                        <li>
                                            <a class="tooltip-test PendingSourceDocuments" id="PendingSourceDocuments" onclick=" return GetPendingDocument()" data-toggle="modal" data-target="#POPendingSourceDocument" data-backdrop="static" data-keyboard="false" title="@Resource.Pending @Resource.Source @Resource.Documents">
                                                @Resource.Pending @Resource.Source @Resource.Documents
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <a class="tooltip-test" href="@Url.Action("AddNewDPO","DPO", new { Model.DocumentMenuId })" title="@Resource.AddNew">
                                            <img src="~/Content/Images/addgreen.png" width="28" id="Btn_AddNewPO" height="28" alt="Add">
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                    }
                }
                <div class="x_title pad_mar ">
                    <div class="col-md-12 col-sm-12 icon_tool padding_zero">
                        @*<form class="available_stock pad_mar" action="" method="post" novalidate>*@
                        <div class="col-md-12 col-sm-12 padding_zero">
                            <div class="col-md-3 col-sm-12">
                                <label class="col-form-label label-align">@Resource.SupplierName</label>
                                @Html.DropDownListFor(model => model.SuppID, new SelectList(Model.SupplierNameList, "supp_id", "supp_name"), new { @class = "form-control", id = "POListSupplier" })
                                <input type="hidden" id="SuppNameList" value='@Url.Action("GetAutoCompleteSearchSuppList", "DPO")' />
                            </div>
                            @if (Model.DocumentMenuId == "105101130")
                            {
                                <div class="col-md-2 col-sm-12 pl-0">
                                    <label class="col-form-label label-align">@Resource.Item @Resource.Type</label>
                                    @Html.DropDownListFor(model => model.Itemtype, new SelectList(new List<SelectListItem> {
                                       new SelectListItem {Text="All",Value="0" },
                                                  //new SelectListItem {Text="Both",Value="A" },
                                                  //new SelectListItem {Text="Consumable",Value="C" }
                                                  new SelectListItem {Text="Stockable",Value="S" },
                                              }, "Value", "Text"
               ), new { @class = "form-control", @id = "idItemtype", @name = "Itemtype" })
                                </div>
                            }
                            <div class="col-md-2 col-sm-12 pl-0">
                                <label class="col-form-label label-align">@Resource.FromDate</label>
                                @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control", @id = "txtFromdate", @onchange = "FromToDateValidation()", @type = "date", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                @Html.HiddenFor(model => model.FromDate, new { id = "hdFromdate" })
                            </div>
                            <div class="col-md-2 col-sm-12 pl-0">
                                <label class="col-form-label label-align">@Resource.ToDate</label>
                                @if (Model.PO_ToDate != null)
                                {
                                    @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control", @id = "txtTodate", @placeholder = "dd-MM-yyyy", @onchange = "FromToDateValidation()", @type = "date", @max = DateTime.Now.ToString("yyyy-MM-dd"), @Value = Model.PO_ToDate })
                                }
                                else
                                {
                                    @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control", @id = "txtTodate", @placeholder = "dd-MM-yyyy", @onchange = "FromToDateValidation()", @type = "date", @max = DateTime.Now.ToString("yyyy-MM-dd"), @Value = @DateTime.Now.ToString("yyyy-MM-dd") })
                                }
                            </div>
                            <div class="col-md-2 col-sm-12 pl-0">
                                <label class="col-form-label label-align">@Resource.Status</label>
                                @Html.DropDownListFor(model => model.Status, new SelectList(Model.StatusList, "status_id", "status_name"), new { @class = "form-control", id = "ddlStatus" })

                            </div>
                            <div class="col-md-1 col-sm-12 pl-0">
                                <button type="button" class="btn btn-primary btn-sm margintop20" id="Btn_Search" onclick="BtnSearch()"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>
                        </div>
                        @*</form>*@
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-10 col-sm-12 padding_right">
        <div id="Itm_Details_List" class="x_panel margin_top_zero">
            <div class="x_content">
                <div class="card-box table-responsive dy_table">
                    <div id="tbodyDPOList" class="sticky-table sticky-ltr-cells sb-container container-example1">
                        @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialDPOList.cshtml")
                    </div>
                </div>
            </div>
        </div>
    </div>
