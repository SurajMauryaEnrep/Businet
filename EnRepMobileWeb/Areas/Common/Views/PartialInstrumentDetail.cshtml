@using EnRepMobileWeb.Resources;
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.InstrumentDetail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top:0px;">
        <div class="col-md-8 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.SupplierName</label>
            <input id="SupplierName" class="form-control" autocomplete="off" type="text" name="SupplierName" placeholder="@Resource.SupplierName" onblur="this.placeholder = '@Resource.SupplierName'" disabled="">
        </div>
        <div class="col-md-4 col-sm-12 no-padding">
            <label class="col-form-label label-align">
                @Resource.PaymentAmount
            </label>
            <input id="InstPaymentAmount" class="form-control num_right" autocomplete="off" type="text" name="InstPaymentAmount" placeholder="0000.00" disabled="">
        </div>
        <div class="clearfix"></div>
        <div class="tableFixHead height30VH margin10">
            <table id="InstrumentDetail" class="table table-bordered">
