@model EnRepMobileWeb.MODELS.ApplicationLayer.Procurement.Purchase_Quotation.PQList_Model
@using EnRepMobileWeb.Resources;
@using System.Data
@if (Session["UserId"] == null)
{
    Response.Redirect("~/Login");
}
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Css/build/js/sweetalert.js"></script>
@*/*start Add by Hina on 06-02-2024 to chk Financial year exist or not*/*@
@{
    if (TempData["Message"] != null)
    {
        if (TempData["Message"] == "Financial Year not Exist")
        {
            <script type="text/javascript">
                swal("", $("#FinancialYearDoesNotExistTransactionCanNotBeDone").text(), "warning");
            </script>
        }

    }
}
@*/*End to chk Financial year exist or not*/*@
<script src="~/Content/Scripts/ApplicationLayer/Procurement/PurchaseQuotation/PurchaseQuotation.js"></script>
<title>@Model.title</title>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <!-- Workflow Information -->
        <div id="WorkflowInformation" class="modal fade" role="dialog">
            <div class="modal-dialog" style="max-width:700px;">
                <div class="price_item_detail">
                    <!-- Modal content-->
                    @Html.Partial("~/Areas/Common/Views/_WorkFlow.cshtml")
                </div>
            </div>
        </div>
        <!-- Smart Wizard -->
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <h2 class="col-md-6 col-sm-12 heading_left_padding ">@ViewBag.MenuPageName</h2>
                <div id="wizard" class="form_wizard wizard_horizontal col-md-3 col-sm-12 work_flow">
                    @Html.Partial("~/Areas/Common/Views/_PartialWorkflowBar.cshtml")
                    @*<div id="step-1">
                        </div>*@
                </div>
                @Html.HiddenFor(m => m.WF_status, new { @id = "WF_status" })
                @Html.HiddenFor(m => m.ListFilterData, new { @id = "ListFilterData" })
                <input type="hidden" id="DocumentMenuId" value="@ViewBag.DocumentMenuId" />
                <div id="" class=" heading_right_padding">
                    @if (ViewBag.VBRoleList != null)
                    {
                        foreach (System.Data.DataRow Row in ViewBag.VBRoleList.Rows)
                        {
                            if (Row["feature_id"].ToString() == "105101120001")
                            {
                                <ul>
                                    <li>
                                        <a class="tooltip-test"
                                           title=" @Resource.AddNew" href="@Url.Action("AddPurchaseQuotationDetail","PurchaseQuotation")"><img src="~/Content/Images/addgreen.png" width="32" height="32" id="Btn_AddCust" alt="Add"></a>
                                    </li>
                                </ul>
                            }
                        }
                    }
                </div>
                <div class="x_title pad_mar ">
                    <div class="col-md-12 col-sm-12 icon_tool padding_zero">
                        <form class="available_stock pad_mar" action="" method="post" novalidate>
                            <div class="col-md-2 col-sm-12">
                                <label class="col-form-label label-align">
                                    @Resource.SupplierName
                                </label>
                                @*@Html.DropDownListFor(model => model.SuppID, new SelectList(Model.suppLists, "Supp_id", "Supp_name"), new { @class = "form-control", id = "SupplierNameList" })
                                    <input type="hidden" id="SuppNameList" value='@Url.Action("GetAutoCompleteSearchSuppList", "RequestForQuotation")' />*@
                                @Html.DropDownListFor(model => model.SuppID, new SelectList(Model.suppLists, "Supp_id", "Supp_name"), new
                                {
                                    @class = "form-control",@*onchange = "onChangeRequiredArea()",*@id = "SupplierNameList"
})
                            </div>
                            <div class="col-md-2 col-sm-12">
                                <label class="col-form-label label-align">
                                    @Resource.FromDate
                                </label>
                                @Html.TextBoxFor(model => model.PQ_FromDate, new { @class = "form-control", @id = "txtFromdate", @onchange = "FromToDateValidation()", @type = "date", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                @Html.HiddenFor(model => model.PQ_FromDate, new { @id = "hdFromdate" })
                            </div>
                            <div class="col-md-2 col-sm-12">
                                <label class="col-form-label label-align">
                                    @Resource.ToDate
                                </label>
                                @if (Model.PQ_ToDate != null)
                                {
                                    @Html.TextBoxFor(model => model.PQ_ToDate, new { @class = "form-control", @id = "txtTodate", @onchange = "FromToDateValidation()", @placeholder = "dd-MM-yyyy", @type = "date", @max = DateTime.Now.ToString("yyyy-MM-dd"), @Value = Model.PQ_ToDate })
                                }
                                else
                                {
                                    @Html.TextBoxFor(model => model.PQ_ToDate, new { @class = "form-control", @id = "txtTodate", @onchange = "FromToDateValidation()", @placeholder = "dd-MM-yyyy", @type = "date", @max = DateTime.Now.ToString("yyyy-MM-dd"), @Value = @DateTime.Now.ToString("yyyy-MM-dd") })
                                }
                            </div>
                            <div class="col-md-2 col-sm-12">
                                <label class="col-form-label label-align">
                                    @Resource.Status
                                </label>
                                @Html.DropDownListFor(model => model.PQ_status, new SelectList(Model.statusLists, "status_id", "status_name"), new { @class = "form-control", id = "ddlStatus" })
                            </div>
                            <div class="col-md-1 col-sm-12">
                                <button type="button" class="btn btn-primary btn-sm margintop20" id="BtnSearch" onclick="FilterPQListData()"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>

                        </form>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12">
        <div class="x_panel margin_top_zero">
            <div class="x_content">
                <div class="card-box table-responsive dy_table">
                    <div class="sticky-table sticky-ltr-cells sb-container container-example1" id="Tbl_list_PQ">
                        @Html.Partial("~/Areas/ApplicationLayer/Views/Shared/PartialPurchaseQuotationList.cshtml")
                        @*<a href="~/Areas/ApplicationLayer/Views/Shared/PartialPurchaseQuotationList.cshtml"></a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- page content end -->
