@model EnRepMobileWeb.MODELS.ApplicationLayer.ProductionAndPlanning.MaterialRequirementPlan.MaterialRequirementPlan_Model
@using EnRepMobileWeb.Resources;

<script src="~/Content/Css/build/js/sweetalert.js"></script>
<script src="~/Content/Scripts/QualityInspection/QualityInspectionDetail.js"></script>

<div class="modal-content" style="min-width:800px;">
    <div class="modal-header">
        <h2>@Resource.MaterialDetail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.ProductName
            </label>
            <input id="MD_ProductName" class="form-control" type="text" name="ProductName" placeholder="@Resource.ProductName" onfocus="this.placeholder = '@Resource.ProductName'" onblur="this.placeholder = '@Resource.ProductName'" disabled>
            <input type="hidden" id="hfMD_productID" />
        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.UOM
            </label>
            <input id="PP_MD_UOM" class="form-control " type="text" name="UOM" placeholder="UOM" onfocus="this.placeholder='UOM'" onblur="this.placeholder='UOM'" disabled>
        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px; padding-right:0px;">
            <label class="col-form-label label-align">@Resource.PlannedQuantity</label>
            <input id="MD_PlannedQuantity" class="form-control num_right" type="text" name="PlannedQuantity" placeholder="@Resource.PlannedQuantity" onfocus="this.placeholder = '@Resource.PlannedQuantity'" onblur="this.placeholder = '@Resource.PlannedQuantity'" disabled>
        </div>
        @*<table class="table table-bordered margin10" id="">
            <thead>
                <tr>*@
        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="MRP_MaterialDetailTbl" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th>@Resource.SrNo</th>
                            <th>@Resource.MaterialName</th>
                            <th>@Resource.UOM</th>
                            <th>@Resource.MaterialType</th>
                            <th>@Resource.BOMQuantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.MaterialDetails != null)
                        {
                            int i = 1;
                            foreach (System.Data.DataRow dr in ViewBag.MaterialDetails.Rows)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@dr["MatrialName"]</td>
                                    <td>@dr["uom_name"]</td>
                                    <td>@dr["MatrialType"]</td>
                                    <td class="num_right">@dr["ReqQty"]</td>
                                </tr>
                                i = i + 1;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="QCReset">@Resource.Close</button>
    </div>
</div>
