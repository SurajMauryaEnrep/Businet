<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Transaction @Resource.Detail</h2>
        <button type="button" class="close " data-dismiss="modal">×</button>
    </div>
    <div class="modal-body" style="padding-top:0px;">
        <div id="divBatchLotewiseRept_Issue">
            <div class="col-md-12 col-sm-12 no-margin no-padding" style="margin-bottom:10px;">
                <div class="col-md-3 padding_left">
                    <label class="col-form-label label-align col-md-5">@Resource.AccountName</label>
                    <div class="label_value col-md-7"><label id="SpanAccName" class="col-form-label label-align ">@ViewBag.AccName</label></div>
                </div>
                @if (ViewBag.CostCenterTransactionDetailsTotal != null)
                {
            <div class="col-md-3">
                <label class="col-form-label label-align col-md-7">@Resource.Total @Resource.Amount @Resource.InBase</label>
                @if (ViewBag.CostCenterTransactionDetailsTotal.Rows.Count > 0)
                {
                    <div class="label_value col-md-5"><label id="SpanTotalDr_bs" class="col-form-label label-align ">@ViewBag.CostCenterTransactionDetailsTotal.Rows[0]["total_cc_amt_bs"]</label></div>
                }
                else
                {
                    <div class="label_value col-md-5"><label id="SpanTotalDr_bs" class="col-form-label label-align ">0000.00</label></div>
                }
            </div>
                }
            </div>
            <div class=" clear"></div>
            @*<div class="tableFixHead height40VH">
                <table class="table table-striped rowhighlighttbltopup" id="TblTrialBalDebitDetails">
                    <thead>
                        <tr>*@

            <div class="card-box table-responsive dy_tablec">
                <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1">
                    <table id="TblTransactionDetails" data-order="" class="table table-striped width1600 table-bordered rowhighlighttbl" style="width:100%">
                        <thead>
                            <tr class="sticky-header">
                                <th width="5%">@Resource.SrNo</th>
                                <th width="13%">@Resource.Voucher <br /> @Resource.Number</th>
                                <th width="10%">@Resource.Voucher <br />  @Resource.Date</th>
                                <th width="10%">@Resource.Amount <br /> @Resource.InBase</th>
                                <th width="10%">@Resource.Amount <br /> @Resource.InSpecific</th>
                                <th width="6%">@Resource.AmountType</th>
                                <th width="6%">@Resource.Currency</th>
                                <th width="8%">@Resource.ConversionRate</th>
                                <th width="32%">@Resource.Narration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.CostCenterTransactionDetails != null)
                            {
                                foreach (System.Data.DataRow row in ViewBag.CostCenterTransactionDetails.Rows)
                                {
                                    rowId++;
                                    <tr>
                                        <td>@rowId</td>
                                        @*<td id="tditem">@row["src_doc_no"].ToString()</td>*@
                                        <td id="tditem">
                                            <div class="col-sm-10 no-padding" id="">@row["vou_no"].ToString()</div>
                                            <div class="col-sm-2 i_Icon">
                                                <button type="button" id="VoucherDetail" class="calculator" onclick="OnClickVoucherDetailsIconBtn(event);" data-toggle="modal" data-target="#MISCostCenterVoucherDetail" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/iIcon1.png" alt="" title="@Resource.VoucherDetail"> </button>
                                            </div>
                                            <input type="hidden" id="hdn_acc_id" value="@row["acc_id"]" />
                                            <input type="hidden" id="hdn_vouno" value="@row["vou_no"]" />
                                        </td>
                                        <td><span id="spn_voudt">@row["vou_dt"].ToString()</span><input type="hidden" id="hdn_voudt" value="@row["hdn_vou_dt"]" /></td>
                                        <td class="num_right" id="cc_vou_amt_bs">@row["cc_amt_bs"].ToString()</td>
                                        <td class="num_right" id="cc_vou_amt_sp">@row["cc_amt_sp"].ToString()</td>
                                        <td id="amt_type">@row["amt_type"].ToString()</td>
                                        <td class="center" id="curr_logo">@row["curr_logo"].ToString()</td>
                                        <td class="num_right" id="conv_rate">@row["conv_rate"].ToString()</td>
                                        <td class="narration" id="narr">@row["narr"].ToString()</td>
                                    </tr>
                                }
                            }
                        </tbody>
                        @if (ViewBag.tbtype != "CB")
                        {
                            <tfoot>
                                <tr class="total">
                                    <td colspan="3" align="right"> <strong>@Resource.Total</strong></td>
                                    @if (ViewBag.CostCenterTransactionDetailsTotal != null)
                                    {
                                        foreach (System.Data.DataRow row in ViewBag.CostCenterTransactionDetailsTotal.Rows)
                                        {

                                            <td class="num_right"><strong>@row["total_cc_amt_bs"].ToString()</strong></td>
                                            <td class="num_right"><strong>@row["total_cc_amt_sp"].ToString()</strong></td>
                                        }
                                    }
                                    else
                                    {
                                        <td class="num_right"><strong id="strngTotalCcAmtBs">0000.00</strong></td>
                                        <td class="num_right"><strong id="strngTotalCcAmtSp">0000.00</strong></td>
                                    }
                                    <td colspan="4"></td>
                                </tr>
                            </tfoot>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


