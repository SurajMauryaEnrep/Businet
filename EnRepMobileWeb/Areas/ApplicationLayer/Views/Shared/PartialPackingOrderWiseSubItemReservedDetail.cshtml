<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Order @Resource.ReservedStock @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top: 0px;">
        <div class="col-md-6 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.ItemName</label>
            <input id="ItemNameOrdRevSubItemDetails" class="form-control" type="text" name="ItemName" placeholder="@Resource.ItemName" disabled>
            <input type="hidden" id="HDItemIDOrdRevSubItemDetails" />
            <input type="hidden" id="HDWhidOrdRevSubItemDetails" />
        </div>
        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.UOM</label>
            <input id="UOMOrdRevSubItemDetails" class="form-control" type="text" name="UOM" placeholder="@Resource.UOM" disabled>
            <input type="hidden" id="hdnUomIdOrdRevSubItemDetails" />
        </div>
        <div class="col-md-3 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.Quantity</label>
            <input id="OrdReserveQuantitySubItemDetails" class="form-control" type="text" name="Quantity" placeholder="@Resource.Quantity" disabled>
            <input type="hidden" id="hdnUomIdOrdRevSubItemDetails" />
        </div>
        <div class="clearfix"></div>
        <div class="OrderReservedDetails">
            <div class="tableFixHead price_item_detail ">
                <div class="col-md-12 col-sm-12" style="padding-left:0px;">
                    <table id="OrderReservedStockSubItemTbl" class="table table-bordered margin5">
                        <thead>
                            <tr class="headings" disabled="disabled">
                                <th width="25%" disabled="disabled"> @Resource.OrderNumber</th>
                                <th width="25%" disabled="disabled"> @Resource.OrderDate</th>
                                <th width="25%" disabled="disabled"> @Resource.Order @Resource.Reserved </br> @Resource.Quantity</th>
                                <th width="25%"> @Resource.Packed <br />  @Resource.Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.OrderReservedItemStockBatchWise != null)
                            {
                                decimal IssueQty = 0;
                                foreach (System.Data.DataRow Row in ViewBag.OrderReservedItemStockBatchWise.Rows)
                                {
                                    
                                    <tr>
                                        <td>
                                            <input id="tblorderno" value="@Row["srcno"].ToString()" class="form-control" autocomplete="off" type="text" name="Lot" placeholder="@Resource.Lot" onblur="this.placeholder='@Resource.Lot'" disabled="">
                                        </td>
                                        <td>
                                            <input id="tblorderdt" value="@Row["srcdate"].ToString()" class="form-control" autocomplete="off" type="text" name="BatchNumber" placeholder="@Resource.BatchNumber" onblur="this.placeholder='@Resource.BatchNumber'" disabled="">
                                            <input type="hidden" id="hdn_orderdt" value="@Row["src_date"].ToString()" />
                                        </td>
                                        <td align="right">
                                            <input id="tblresqty" value="@Convert.ToDecimal(@Row["Qty"]).ToString(ViewBag.QtyDigit)" class="form-control num_right" autocomplete="off" type="text" name="AvailableQuantity" placeholder="@Resource.AvailableQuantity" onblur="this.placeholder='@Resource.AvailableQuantity'" disabled="">
                                        </td>
                                        <td>
                                            <div class=" col-sm-10 lpo_form no-padding">
                                                @{
                                                    var qty = Convert.ToDecimal(Row["Qty"]);
                                                    var Issuqty = Convert.ToDecimal(Row["issue_qty"].ToString()==""?0: Row["issue_qty"]);
                                                    if(qty < Issuqty)
                                                    {
                                                        Issuqty = qty;
                                                    }

                                                }
                                                @if (Disable)
                                                {
                                                    <input id="OrdResIssuedQty" disabled class="form-control num_right" value="@Issuqty.ToString(ViewBag.QtyDigit)" autocomplete="off" type="text" name="OrdResIssuedQty" placeholder="0000.00">
                                                }
                                                else
                                                {
                                                    //if (Session["Command"].ToString() == "Edit" && (ViewBag.DocumentCode == "A" || ViewBag.DocumentCode == null))
                                                    if (ViewBag.Command == "Edit" && (ViewBag.DocumentCode == "A" || ViewBag.DocumentCode == null))
                                                    {
                                                        <input id="OrdResIssuedQty" disabled class="form-control num_right" value="@Issuqty.ToString(ViewBag.QtyDigit)" autocomplete="off" type="text" name="OrdResIssuedQty" placeholder="0000.00">
                                                    }
                                                    else
                                                    {
                                                        <input id="OrdResIssuedQty" disabled class="form-control num_right" value="@Issuqty.ToString(ViewBag.QtyDigit)" onchange="OnChangeOrderResIssueQty(event);" onkeypress="return QtyFloatValueonly(this,event);" autocomplete="off" type="text" name="OrdResIssuedQty" placeholder="0000.00">
                                                    }
                                                }

                                                <span id="OrdResIssuedQty_Error" class="error-message is-visible"></span>
                                            </div>
                                            <div class="col-sm-2 i_Icon no-padding" id="div_SubItemOrdQty">
                                                <button type="button" id="SubItemPackResDetailQty" class="calculator subItmImg" onclick="return SubItemDetailsPopUp('PackResQuantity',event)" data-toggle="modal" data-target="#SubItem" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/subItem.png" alt="" title="@Resource.SubItem @Resource.Detail"> </button>
                                            </div>
                                        </td>
                                    </tr>
                                                            if (Issuqty.ToString() != "")
                                                            {
                                                                TotalIssueQty = Convert.ToDecimal(TotalIssueQty) + Convert.ToDecimal(Issuqty);
                                                            }
                                                        }
                                                    }
                        </tbody>
                    </table>
                </div>
            </div>
            <table class="table table-bordered" id="ItembatchwiseDetailsTbl" style="margin-bottom:0rem !important;">
                <tr class="total">
                    <th width="50%" class="num_right">@Resource.Total</th>
                    <th class="num_right" width="25%">

                        <span id="OrdResTotalAvlQuantity" title="@Resource.Total @Resource.Order @Resource.Reserved @Resource.Quantity + @Resource.AvailableQuantity"></span>

                    </th>
                    <th class="num_right" width="25%">
                        <span id="OrdResTotalIssuedQuantity">@Convert.ToDecimal(TotalIssueQty).ToString(ViewBag.QtyDigit)</span>
                    </th>
                </tr>
            </table>
        </div>
    </div>
    <div class="modal-footer">
            @if (Disable)
            {
            @*<button type="button" disabled class="btn btn-primary btn-sm" id="btnOrdResReset">@Resource.Reset</button>
            <button type="button" disabled class="btn btn-primary btn-sm" id="btnOrdResSaveAndExit">@Resource.SaveAndExit</button>
            <button type="button" disabled class="btn btn-primary btn-sm" data-dismiss="modal" id="btnOrdResDiscardAndExit">@Resource.DiscardAndExit</button>*@
            }
            else
            {
                //if (Session["Command"].ToString() == "Edit" && (ViewBag.DocumentCode == "A" || ViewBag.DocumentCode == null))
                if (ViewBag.Command == "Edit" && (ViewBag.DocumentCode == "A" || ViewBag.DocumentCode == null))
                {
                @*<button type="button" disabled class="btn btn-primary btn-sm" id="btnOrdResReset">@Resource.Reset</button>*@
                <button type="button" disabled class="btn btn-primary btn-sm" id="btnOrdResSaveAndExit">@Resource.SaveAndExit</button>
                <button type="button" disabled class="btn btn-primary btn-sm" data-dismiss="modal" id="btnOrdResDiscardAndExit">@Resource.DiscardAndExit</button>
                }
                else
                {
                @*<button type="button" id="btnOrdResReset" onclick="UnReserveSubItem_Resetbtn()" class="btn btn-primary btn-sm">@Resource.Reset</button>*@
                <button type="button" id="btnOrdResSaveAndExit" onclick="SaveAndExitUnReserveSubItemDetails()" class="btn btn-primary btn-sm">@Resource.SaveAndExit</button>
                <button type="button" id="btnOrdResDiscardAndExit" class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.DiscardAndExit</button>
                }
            }
    </div>
</div>




