@model EnRepMobileWeb.MODELS.ApplicationLayer.SalesAndDistribution.SalesAndDistributionModels.LSOListModel

@using EnRepMobileWeb.Resources;
@using System.Data
@if (Session["UserId"] == null)
{
    Response.Redirect("~/Login");
}

@*<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>*@
<script src="~/Content/Scripts/ApplicationLayer/SalesAndDistribution/LocalSalesOrder/LSOList.js"></script>
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Order @Resource.Tracking </h2> <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        @*<form id="PurchaseOrderTracking" data-parsley-validate class="form-horizontal form-label-left">*@
        <div class="row">
            <div class="col-md-2 col-sm-12 available_right pl-0 ">
                <label class="col-form-label label-align" for="">@Resource.SalesOrderNumber</label>
                <input type="text" id="SalesOrderNumber" class="form-control" readonly>
            </div>
            <div class="col-md-2 col-sm-12 available_right pl-0 ">
                <label class="col-form-label label-align" for="">@Resource.OrderDate</label>
                <input type="text" id="OrderDate" class="form-control" readonly>
            </div>
            <div class="col-md-2 col-sm-12 available_right ">
                <label class="col-form-label label-align" for="">@Resource.CustomerName</label>
                <input type="text" id="CustomerName" class="form-control" readonly>
            </div>
            <div class="col-md-2 col-sm-12 available_right ">
                <label class="col-form-label label-align" for="">@Resource.Customer @Resource.Alias</label>
                <input type="text" id="CustomerAlias" class="form-control" readonly>
            </div>
        </div>
        @*</form>*@
        <div class="card-box table-responsive dy_table margin15">
            <div class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height40VH pop_csv">
                <table id="SO_trackingTBL" class="table table-striped table-bordered rowhighlighttbl width1800" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="4%">&nbsp;</th>
                            <th width="11%">&nbsp;</th>
                            <th width="5%">&nbsp;</th>
                            <th width="8%">&nbsp;</th>
                            <th width="8%">&nbsp;</th>
                            <th width="8%">&nbsp;</th>
                            <th width="8%" class="light_cream_colour">&nbsp;</th>
                            <th width="8%" class="light_cream_colour">@Resource.PackingDetail</th>
                            <th width="8%" class="light_cream_colour">&nbsp;</th>
                            <th width="8%" class="light_blue_colour">&nbsp;</th>
                            <th width="8%" class="light_blue_colour">@Resource.ShipmentDetail</th>
                            <th width="8%" class="light_blue_colour">&nbsp;</th>
                            <th width="8%" class="light_blue1_colour">&nbsp;</th>
                            <th width="8%" class="light_blue1_colour">@Resource.InvoiceDetail</th>
                            <th width="8%" class="light_blue1_colour">&nbsp;</th>
                            <th colspan="3" class="light_cream1_colour center">@Resource.SaleReturnDetail</th>
                        </tr>
                        <tr class="sticky-header">
                            <th width="4%">@Resource.SrNo</th>
                            <th width="11%">@Resource.ItemName</th>
                            <th width="5%">@Resource.UOM</th>
                            <th width="8%">@Resource.Order <br /> @Resource.Quantity</th>
                            <th width="8%">@Resource.Pending <br /> @Resource.Quantity</th>
                            <th width="8%">@Resource.ForceClosed </th>
                            <th width="8%" class="light_cream_colour">@Resource.Packing @Resource.List <br /> @Resource.Number</th>
                            <th width="8%" class="light_cream_colour">@Resource.PackDate</th>
                            <th width="8%" class="light_cream_colour">@Resource.Packed <br /> @Resource.Quantity</th>
                            <th width="8%" class="light_blue_colour">@Resource.Shipment <br /> @Resource.Number</th>
                            <th width="8%" class="light_blue_colour">@Resource.Shipment <br /> @Resource.Date</th>
                            <th width="8%" class="light_blue_colour">@Resource.Shipped <br /> @Resource.Quantity</th>
                            <th width="8%" class="light_blue1_colour">@Resource.Invoice <br /> @Resource.Number</th>
                            <th width="8%" class="light_blue1_colour">@Resource.Invoice <br /> @Resource.Date</th>
                            <th width="8%" class="light_blue1_colour">@Resource.Invoice <br /> @Resource.Quantity</th>
                            <th class="light_cream1_colour">@Resource.Return <br /> @Resource.Number</th>
                            <th class="light_cream1_colour">@Resource.Return <br /> @Resource.Date</th>
                            <th class="light_cream1_colour">@Resource.Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.SOTrackingList != null)
                        {
                            var rowIdx = 0;
                            foreach (System.Data.DataRow Row in ViewBag.SOTrackingList.Rows)
                            {
                                rowIdx++;
                        <tr>
                            <td class="">@rowIdx</td>
                            <td class="">@Row["item_name"].ToString()</td>
                            <td class="">@Row["uom_name"].ToString()</td>
                            <td class="num_right">@Row["ord_qty_base"].ToString()</td>
                            <td class="num_right">@Row["Pending_qty"].ToString()</td>
                            @if (Row["ForceClosed"].ToString() == "Yes")
                            {
                                <td class="center"><i class="fa fa-check text-success" aria-hidden="true"></i><span hidden="hidden">@Row["ForceClosed"].ToString()</span></td>
                            }
                            else if (Row["ForceClosed"].ToString() == "No")
                            {
                                <td class="center"><i class="fa fa-times-circle text-danger" aria-hidden="true"></i><span hidden="hidden">@Row["ForceClosed"].ToString()</span></td>
                            }
                            <td class="light_cream_colour">@Row["pack_no"].ToString()</td>
                            <td class="light_cream_colour">@Row["pack_dt"].ToString()</td>
                            <td class="light_cream_colour num_right">@Row["pack_qty"].ToString()</td>
                            <td class="light_blue_colour">@Row["ship_no"].ToString()</td>
                            <td class="light_blue_colour">@Row["ship_dt"].ToString()</td>
                            <td class="light_blue_colour num_right">@Row["ship_qty"].ToString()</td>
                            <td class="light_blue1_colour">@Row["app_inv_no"].ToString()</td>
                            <td class="light_blue1_colour">@Row["inv_dt"].ToString()</td>
                            <td class="light_blue1_colour num_right">@Row["inv_qty"].ToString()</td>

                            <td class="light_cream1_colour">@Row["srt_no"].ToString()</td>
                            <td class="light_cream1_colour">@Row["srt_dt"].ToString()</td>
                            <td class="light_cream1_colour num_right">@Row["srt_qty"].ToString()</td>
                        </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

