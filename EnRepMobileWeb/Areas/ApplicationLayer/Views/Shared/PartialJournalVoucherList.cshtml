    //if (Session["JVSearch"].ToString() == "JV_Search")
    if (Model.JVSearch == "JV_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        //Session["JVSearch"] = null;
        Model.JVSearch = null;
    }
}





