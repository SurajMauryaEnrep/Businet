@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/ApplicationLayer/InventoryManagement/MIS/MISGatePassDetail/MISGatePassDetail_JS.js"></script>
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<table id="datatable-buttons" class="table table-striped table-bordered width2000 rowhighlighttbl itmfrz">
    <thead>
        <tr class="sticky-header">
            <th width="2%">@Resource.SrNo</th>
            <th width="8%" class="itmStick">@Resource.GatePass @Resource.Number</th>
            <th width="8%">@Resource.GatePass @Resource.Date</th>
            @if (@ViewBag.Source_type == "O")
            {
                <th width="7%" hidden="hidden">@Resource.Source</th>
            }
            else
            {
                <th width="7%">@Resource.Source</th>
            }

            <th width="7%">@Resource.EntityType</th>
            <th width="10%">@Resource.Entity @Resource.Name</th>
            <th width="15%">@Resource.Item @Resource.Name</th>
            <th hidden="hidden">@Resource.ItemID</th>
            <th width="7%" title="@Resource.UnitOfMeasure"> @Resource.UOM </th>
            <th width="8%">@Resource.Issued @Resource.Quantity</th>
            <th width="8%">@Resource.Received @Resource.Quantity</th>
            <th width="8%">@Resource.Pending @Resource.Quantity</th>
            <th width="12%">@Resource.remarks</th>
        </tr>
    </thead>
    <tbody>

        @if (ViewBag.GatePassReciptList != null)
        {
            var rowIdx = 0;
            foreach (System.Data.DataRow Row in ViewBag.GatePassReciptList.Rows)
            {
                rowIdx++;
        <tr>
            <td>@rowIdx</td>
            <td class="ItmNameBreak itmStick tditemfrz">@Row["gpass_no"].ToString()</td>
            <td>@Row["gpass_dt"].ToString()</td>
            @if (@ViewBag.Source_type == "O")
            {
                <td hidden="hidden"></td>
            }
            else
            {
                <td>@Row["src_type"].ToString()</td>
            }
            <td>@Row["Entitytype"].ToString()</td>
            <td>@Row["Entityname"].ToString()</td>
            <td id="">
                <div class="col-sm-11 no-padding" id="multiWrapper"><span id="ItmNameSpan"> @Row["item_name"].ToString()</span></div>
                <div class="col-sm-1 i_Icon">
                    <button type="button" id="ItmInfoBtnIcon" class="calculator" onclick="OnClickIconBtn(event);" data-toggle="modal" data-target="#ItemInfo" data-backdrop="static" data-keyboard="false"><img src="/Content/Images/iIcon1.png" alt="" title="Item Information">  </button>
                </div>
                <input hidden="hidden" id="hfItemID" value="@Row["item_id"].ToString()"/>
            </td>
            <td hidden="hidden" >@Row["item_id"].ToString()</td>
            <td><span id="">@Row["uom_alias"].ToString()</span></td>
            <td class="num_right">@Row["gpass_qty"].ToString()</td>
            <td class="num_right">@Row["rec_qty"].ToString()</td>
            <td class=" num_right">@Row["Pending_qty"].ToString()</td>
            <td>@Row["remarks"].ToString()</td>
        </tr>
            }
        }

    </tbody>
</table>

@if (Model.GatePassSearch != null)
{
    if (Model.GatePassSearch == "Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        Model.GatePassSearch = null;

    }

}