<table id="datatable-buttons" class="table table-striped table-bordered width1800 rowhighlighttbl itmfrz" style="width:100%;">
    <thead>
        <tr class="sticky-header">
            <th width="3%">@Resource.SrNo</th>
            <th width="10%" class="itmStick">@Resource.Verification <br /> @Resource.Number</th>
            <th width="7%">@Resource.Verification <br /> @Resource.Date</th>
