@using EnRepMobileWeb.Resources;
@{
    var i = 0;
}
@{
    var EditFlag = "N";
    var DeleteFlag = "N";
    if (ViewBag.VBRoleList != null)
    {
        foreach (System.Data.DataRow Row in ViewBag.VBRoleList.Rows)
        {
            if (Row["feature_id"].ToString() == "103150002")
            {
                EditFlag = "Y";
            }
            if (Row["feature_id"].ToString() == "103150004")
            {
                DeleteFlag = "Y";
            }
        }
    }
}
<table id="datatable-buttons1" class="table table-bordered rowhighlighttbl" style="width:100%;">
    <thead>
        <tr class="sticky-header">
            <th class="two_per">&nbsp;</th>
            <th class="two_per">&nbsp;</th>
            <th class="two_per">@Resource.SrNo</th>
            <th hidden="hidden"></th>
            <th width="45%">@Resource.CostCenter</th>
            <th>@Resource.Value</th>
            <th hidden="hidden"></th>
        </tr>
    </thead>
    <tbody id="">
        @if (Model.CostCenterValue != null)
        {
            foreach (System.Data.DataRow dr in Model.CostCenterValue.Rows)
            {
                i = i + 1;
                <tr role="row" class="odd">

                    <td class="center">
                        @if (EditFlag == "Y")
                        {
                            <i type="submit" class="fa fa-edit" onclick="EditCostCenterValue(event)" aria-hidden="true" title="@Resource.Edit"></i>
                        }
                    </td>
                    <td class="center">
                        @if (DeleteFlag == "Y")
                        {
                            <i class="fa fa-trash red" aria-hidden="true" title="@Resource.Delete" onclick="return functionValueConfirm(event)"></i>
                        }
                    </td>
                    <td class="sorting_1">@i</td>
                    <td id="hdn_cc_idval" hidden="hidden">@dr["cc_id"].ToString()</td>
                    <td id="cc_name2">@dr["cc_name"].ToString()</td>
                    <td id="cc_name3">@dr["cc_val_name"].ToString()</td>
                    <td hidden="hidden"><input hidden="hidden" id="HdnCC_val_Id" value="@dr["cc_val_id"].ToString()" /></td>

                </tr>
            }
        }
    </tbody>
</table>


