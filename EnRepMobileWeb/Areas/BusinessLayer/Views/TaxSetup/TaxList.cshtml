@model EnRepMobileWeb.MODELS.BusinessLayer.TaxDetail.TaxDetailModel
@using EnRepMobileWeb.Resources;
@using System.Data
@if (Session["UserId"] == null)
{
    Response.Redirect("~/Login");
}
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<script src="~/Content/Css/jquery/dist/jquery.min.js"></script>
<script src="~/Content/Scripts/BusinessLayer/TaxSetup/TaxList.js"></script>
<title>@Model.Title</title>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel mar_pad1 ">
            <div class="x_content mar_pad1">
                <h2 class="col-md-5 col-sm-12 heading_left_padding ">@ViewBag.MenuPageName</h2>
                <!-- Smart Wizard -->
                <div id="wizard" class="form_wizard wizard_horizontal col-md-3 col-sm-12 work_flow">
                    &nbsp;
                </div>
                @Html.HiddenFor(m=>m.ListFilterData,new {@id= "ListFilterData" })
                <div id="" class="col-md-4 col-sm-12 work_flow heading_right_padding">
                    <ul>
                        @if (ViewBag.VBRoleList != null)
                        {
                            foreach (System.Data.DataRow Row in ViewBag.VBRoleList.Rows)
                            {
                                if (Row["feature_id"].ToString() == "103155001")
                                {
                                    <li>
                                        <a class="tooltip-test"
                                           title="@Resource.AddNew" href="@Url.Action("AddNewTax","TaxList")"><img src="~/Content/Images/addgreen.png" width="32" id="addNewItem" height="32" alt="Add"></a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
                <div class="x_title pad_mar ">
                    <div class="col-md-12 col-sm-12 icon_tool padding_zero">
                        @*<form class="available_stock pad_mar" action="" method="post" novalidate>*@
                            <div class="col-md-12 col-sm-12 padding_zero">
                                <div class="col-md-3 col-sm-12">
                                    <label class="col-form-label label-align">
                                        @Resource.TaxName
                                    </label>
                                    @Html.DropDownListFor(model => model.TaxListDDL, new SelectList(Model.TaxList, "ID", "Name"), new { @class = "form-control", id = "TaxListDDL" })
                                    @*<select class="form-control" id="TaxListDDL">
            <option value="0">ALL</option>
        </select>*@
                                    <input type="hidden" id="TaxListName" value='@Url.Action("GetAutoCompleteTaxList", "TaxList")' />
                                </div>
                                <div class="col-md-3 col-sm-12">
                                    <label class="col-form-label label-align">
                                        @Resource.TaxType
                                    </label>
                                    @Html.DropDownListFor(model => model.tax_type, new SelectList(new List<SelectListItem> {
                                                             new SelectListItem {Text="ALL",Value="0" },
                                                             new SelectListItem {Text="TAX",Value="TAX" },
                                                             new SelectListItem {Text="TDS",Value="TDS" },
                                                             }, "Value", "Text"
              ), new { @class = "form-control", @id = "tax_type", @name = "tax_type" })
                                    @*<select class="form-control" id="tax_type">
            <option value="All">ALL</option>
            <option value="TAX">TAX</option>
            <option value="TDS">TDS</option>
        </select>*@

                                </div>
                                <div class="col-md-3 col-sm-12">
                                    <label class="col-form-label label-align">
                                        @Resource.Active
                                    </label>
                                    @Html.DropDownListFor(model => model.tax_act_stat, new SelectList(new List<SelectListItem> {
                                                             new SelectListItem {Text="ALL",Value="0" },
                                                             new SelectListItem {Text="Yes",Value="Y" },
                                                             new SelectListItem {Text="No",Value="N" },
                                                             }, "Value", "Text"
              ), new { @class = "form-control", @id = "tax_act_stat", @name = "tax_act_stat" })
                                    @*<select class="form-control" id="tax_act_stat">
            <option value="All">ALL</option>
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </select>*@
                                </div>
                                <div class="col-md-1 col-sm-12">
                                    <button type="button" class="btn btn-primary btn-sm margintop20" id="BtnSearch" onclick="FilterTaxList()"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </div>
                            </div>
                        @*</form>*@
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div id="Itm_Details_List" class="x_panel margin_top_zero">
            <div class="x_content">
                <div class="card-box table-responsive dy_table">
                    <div id="TaxList" class="sticky-table sticky-ltr-cells sb-container container-example1">                     
                         @Html.Partial("~/Areas/BusinessLayer/Views/Shared/PartialTaxList.cshtml")                         
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page content end -->
