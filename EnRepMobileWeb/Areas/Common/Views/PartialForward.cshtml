@using EnRepMobileWeb.Resources;
<div class="modal-content" style="max-width:400px;">
    <div class="modal-header">
        <button type="button" id="closebtn" onclick="Cmn_OnClickRemarksClear()" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <p class="workflow_approval">
                    <input type="radio" name="forward_action" onclick="Cmn_OnClickWFRadioBtns()" id="radio_forward" value="Forward" checked="checked"  />
                    <span id="span_forward">@Resource.Forward</span>
                    <span id="span_approve" style="display:none;">@Resource.Approve</span>
                    <input type="radio" name="forward_action" onclick="Cmn_OnClickWFRadioBtns()" id="radio_reject" value="Reject" />
                    <span id="span_reject">@Resource.Reject</span>
                    <input type="radio" name="forward_action" onclick="Cmn_OnClickWFRadioBtns()" id="radio_revert" value="Revert" />
                    <span id="span_revert">@Resource.Revert</span>
                    <input type="hidden" id="hd_nextlevel" />
                    <input type="hidden" id="hd_currlevel" />
                    <input type="hidden" id="hd_createrlevel" />
                    <input type="hidden" id="hd_doc_id" />
                </p>
                <div class="tableFixHead height30VH margin10">
                    <table class="table table-bordered" id="forwardDetailsTbl">
                        <thead>
                            <tr>
                                <th colspan="2">@Resource.ForwardTo</th>
                            </tr>
                        </thead>
