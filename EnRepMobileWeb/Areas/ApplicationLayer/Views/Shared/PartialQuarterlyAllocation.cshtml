@model  EnRepMobileWeb.MODELS.ApplicationLayer.FinancialAccountingAndControl.FinanceBudget.FinanceBudgetModel
@using EnRepMobileWeb.Resources;

@{ 
    var i = 0;
    var GlAccId = Model.Acc_Id;
    double Total = Convert.ToDouble(Model.TotalAmount);
    var DisFlaf = Model.DisableFlag;
}
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Quarterly @Resource.Allocation</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        @*<div class="col-md-4 col-sm-12" style="padding-left:0px;">
                <label class="col-form-label label-align">@Resource.RequirementArea</label>
                <input id="RequirementArea" class="form-control" autocomplete="off" type="text" name="RequirementArea" placeholder="@Resource.RequirementArea" disabled="">
            </div>*@
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">@Resource.FinancialYear</label>
            <input id="QuatFinancialYear" class="form-control " autocomplete="off" type="text" name="FinancialYear" placeholder="@Resource.FinancialYear" disabled="">
        </div>
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align ">@Resource.Budget @Resource.Amount</label>
            <input id="QuatBudgetAmount" class="form-control num_right" autocomplete="off" type="text" name="BudgetAmount" placeholder="0000.00" disabled="">
        </div>
        <div class="card-box table-responsive dy_table margin15 price_item_detail">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="tblQuaterlyAlloc" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="10%"> @Resource.SrNo</th>
                            <th width="30%">@Resource.Quarter</th>
                            <th width="30%">@Resource.Period</th>
                            <th width="30%">@Resource.Budget @Resource.Amount</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Monthlists != null)
                        {
                            if (Model.Monthlists.Count > 0)
                            {

                                foreach (var Month in Model.Monthlists)
                                {
                                    i = i + 1;
                        <tr>
                            <td class="sorting_1 pl-2">@i</td>
                            <td id="Quat_month" class="pl-2">@Month.month</td>
                            <td id="Quat_period" class="pl-2">@Month.monPeriod</td>
                            @*<td class="num_right" id="QuatAll_Amount">@Month.Amount</td>*@
                            @if (DisFlaf != "" && DisFlaf == "Ey")
                            {
                                <td>
                                    <input id="Quat_Amt" value="@Month.monAmount" 
                                            class="form-control num_right" autocomplete="off" type="text" name="" placeholder="0000.00" readonly>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input id="Quat_Amt" value="@Month.monAmount" onchange="onchangePARBudgetAmt(event,'QuaterlyAlloc','Quat')"
                                           onkeypress="return onkeypressBudgetAmount(this,event)" onkeyup="ValidateOnkeypressAmt(event,'QuaterlyAlloc','Quat')"
                                           class="form-control num_right" autocomplete="off" type="text" name="" placeholder="0000.00">
                                </td>
                            }

                        </tr>
                                }
                            }
                        }
                  
                    </tbody>
                    <tfoot>
                        <tr class="total">
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td class="font-weight-bold num_right">@Resource.Total</td>
                            <td class="num_right" id="Quat_TotalAmt">@string.Format("{0:0.00}", Total)</td>
                        </tr>
                    </tfoot>
                        
                  
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="">@Resource.Close</button>
        @if (DisFlaf == "Ey" && DisFlaf != "")
        {
        }
        else
        {
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="Quat_SaveExitBtn" onclick="onclickBtnSaveExit('Quat',@GlAccId,'QuaterlyAlloc')">@Resource.SaveAndExit</button>
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="" onclick="">@Resource.DiscardAndExit</button>
        }
    </div>
</div>
