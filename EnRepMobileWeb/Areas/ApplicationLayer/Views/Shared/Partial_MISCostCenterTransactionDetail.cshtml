@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonJS.js"></script>
<style>
    #TblTransactionDetails_wrapper{/*Style Added by Suraj on 10-10-2024*/
       /* display:flex;*/
    }
        #TblTransactionDetails_wrapper .dt-buttons {
            position: absolute;
            margin-left: 2%;
        }
        #TblTransactionDetails_wrapper .btn-group, .btn-group-vertical {
           width:10%;
        }
    #TblTransactionDetails_filter {
        position: absolute;
        right: 5px;
        top: 0px;
    }

    #TblTransactionDetails_wrapper {
        padding-left: 2px !important;
    }
        #TblTransactionDetails_wrapper .dataTables_length {
            float:left;
        }
