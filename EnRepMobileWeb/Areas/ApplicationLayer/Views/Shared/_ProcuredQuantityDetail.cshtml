@*@model EnRepMobileWeb.MODELS.ApplicationLayer.ProductionAndPlanning.MaterialRequirementPlan.MaterialRequirementPlan_Model*@
@using EnRepMobileWeb.Resources;
@{ 
    string QtyDigit = "0.";
    var QD = Convert.ToInt32(Session["QtyDigit"].ToString());
    for (var i = 0; i < QD; i++)
    {
        QtyDigit += "0";
    }
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Procurement @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div class="col-md-4 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.ProductName
            </label>
            <input id="RMPD_ProductName" class="form-control" type="text" name="ProductName" placeholder="@Resource.ProductName" onfocus="this.placeholder = '@Resource.ProductName'" onblur="this.placeholder = '@Resource.ProductName'" disabled>
            <input type="hidden" id="hfRMPD_productID" />
        </div>
        <div class="col-md-2 col-sm-12" style="padding-left:0px;">
            <label class="col-form-label label-align">
                @Resource.UOM
            </label>
            <input id="RMPD_UOM" class="form-control " type="text" name="UOM" placeholder="UOM" onfocus="this.placeholder='UOM'" onblur="this.placeholder='UOM'" disabled>
        </div>
       

        <div class="card-box table-responsive dy_table margin15">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th>@Resource.SrNo</th>
                            <th>@Resource.SupplierName</th>
                            <th>@Resource.GRNNumber</th>
                            <th>@Resource.GRNDate</th>
                            <th>@Resource.Procured @Resource.Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.ProcDetail != null)
                        {
                            var srno = 1;
                            foreach (System.Data.DataRow dr in ViewBag.ProcDetail.Rows)
                            {
                                <tr>
                                    <td>@srno</td>
                                    <td>@dr["supp_name"]</td>
                                    <td>@dr["mr_no"]</td>
                                    <td>@dr["mr_dt"]</td>
                                    <td class="num_right">@Convert.ToDecimal(dr["rec_qty"]).ToString(QtyDigit)</td>
                                </tr>
                                srno = srno + 1;
                            }
                        }
                       

                    </tbody>
                </table>
            </div>
        </div>
    </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" id="QCReset">@Resource.Close</button>
            </div>
        </div>
