<style>
    .timeline {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 0px 0px 30px 0px;
    }

        .timeline .timeline-step {
            position: relative;
            text-align: center;
            z-index: 1;
        }

            .timeline .timeline-step .step-circle {
                /*width: 40px;
                height: 40px;*/
                width: 20px;
                height: 20px;
                border-radius: 50%;
                display: inline-block;
                background-color: #6c757d;
                color: white;
                line-height: 20px;
                font-weight: bold;
                margin-bottom: 0px;
            }

            .timeline .timeline-step.complete .step-circle {
                background-color: #28a745; /* Green for completed */
            }

            .timeline .timeline-step.in-progress .step-circle {
                background-color: #ffc107; /* Yellow for in-progress */
            }

            .timeline .timeline-step.pending .step-circle {
                background-color: #6c757d; /* Grey for pending */
            }

            .timeline .timeline-step .step-label {
                /*font-size: 14px;*/
                font-size: 10px;
                font-weight: bold;
            }

        .timeline .timeline-line {
            position: absolute;
            top: 18px; /* Center the line vertically with the circles */
            left: 0;
            width: 100%;
            height: 2px;
            background-color: #6c757d;
            z-index: 0;
        }

            .timeline .timeline-line.completed {
                /*background-color: #28a745;*/ /* Green for completed steps */
                background-color: #343434; /* Green for completed steps */
                top: 10px;
                height: 5px;
                width: 96%;
                margin-left: 2%;
            }

            .timeline .timeline-line.in-progress {
                background-color: #ffc107; /* Yellow for in-progress */
            }

            .timeline .timeline-line.pending {
                background-color: #6c757d; /* Grey for pending */
            }

        /* Adjust the position of the line between the steps */
        .timeline .timeline-step:first-child .timeline-line {
            width: 20%; /* Adjust starting point */
        }

        .timeline .timeline-step:last-child .timeline-line {
            width: 20%; /* Adjust ending point */
        }
</style>
