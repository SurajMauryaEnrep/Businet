@using EnRepMobileWeb.Resources;
<style>
    #datatable-buttons_filter {
        right: 21.5%;
    }
</style>
@{
    string Scheme = System.Web.HttpContext.Current.Request.Url.Scheme.ToLower();
    string Host = System.Web.HttpContext.Current.Request.Url.Host.ToLower();
    string LocalServerURL = "";
    string localsysip = System.Configuration.ConfigurationManager.AppSettings["LocalServerip"];
    if (Host == localsysip)
    {
        LocalServerURL = System.Configuration.ConfigurationManager.AppSettings["LocalServerURL"];
    }
    else if (Host == "localhost")
    { LocalServerURL = System.Configuration.ConfigurationManager.AppSettings["LocalServerURL"]; }

    else
    { LocalServerURL = System.Configuration.ConfigurationManager.AppSettings["LiveServerURL"]; }
}
<div id="mailview" class="modal-content">
    <div class="modal-header">
        <h2>Log @Resource.Detail </h2> <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div class="row">
            <div class="col-md-4 col-sm-12">
                @if (ViewBag.DocumentMenuId == "105104135115")
                {
                    <label class="col-form-label label-align">@Resource.CustomerName</label>
                }
                else
                {
                    <label class="col-form-label label-align">@Resource.DocumentNumber</label>
                }
                <input id="LogDocumentNumber" class="form-control" autocomplete="off" type="text" name="LogDocumentNumber" placeholder="@Resource.DocumentNumber" disabled="">
            </div>
            <div class="col-md-4 col-sm-12">
                <label class="col-form-label label-align">@Resource.DocumentDate</label>
                <input id="LogDocumentDate" class="form-control" autocomplete="off" type="text" name="LogDocumentDate" placeholder="@Resource.DocumentDate" disabled="">

            </div>
        </div>
        <div class="card-box table-responsive dy_table mt-3">
            <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">
                <table id="" data-order="" class="table table-striped table-bordered rowhighlighttbl" style="width:100%">
                    <thead>
                        <tr class="sticky-header">
                            <th width="16%">@Resource.Dated</th>
                            <th width="28%">@Resource.Receipients</th>
                            <th width="28%">@Resource.Email @Resource.Message</th>
                            <th width="10%">@Resource.Event</th>
                            <th width="10%">@Resource.Attachment</th>
                            <th width="8%">@Resource.Sent @Resource.Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.EmailLog != null)
                        {
                            foreach (System.Data.DataRow dr in ViewBag.EmailLog.Rows)
                            {
                        <tr>
                            <td>@dr.ItemArray[0]</td>
                            <td>@dr.ItemArray[1]</td>
                            <td class="truncate-text" style="width: 260px; padding-right: 30px;"> <span>@dr.ItemArray[2] </span> </td>

                            @*<td>@dr.ItemArray[2]</td>*@
                            @{
                                if (ViewBag.DocumentMenuId == "105104135115" && dr.ItemArray[3]?.ToString() == "A")
                                {
                                    dr[3] = "Send Email";
                                }
                                else
                                {
                                    if (dr.ItemArray[3]?.ToString() == "A")
                                    {
                                        dr[3] = "Approved";
                                    }
                                }
                                if (dr.ItemArray[3]?.ToString() == "SH")
                                {
                                    dr[3] = "Shipped";
                                }
                                if (dr.ItemArray[3]?.ToString() == "C")
                                {
                                    dr[3] = "Cancelled";
                                }
                                if (dr.ItemArray[3]?.ToString() == "FC")
                                {
                                    dr[3] = "Force Closed";
                                }
                                if (dr.ItemArray[3]?.ToString() == "AM")
                                {
                                    dr[3] = "Amendment";
                                }
                                    <td>@dr.ItemArray[3]</td>
                                if (((dr.ItemArray[3]?.ToString() == "Approved" || dr.ItemArray[3]?.ToString() == "A") && (dr.ItemArray[5]?.ToString() != "")) || (ViewBag.DocumentMenuId == "105104135115"))
                                {
                                    string basePath = LocalServerURL + "/LogsFile/";
                                    string fileName = dr.ItemArray[5].ToString();
                                    string fullUrl = basePath + fileName;
                                        <td class="center">
                                            <a href="@fullUrl" target="_blank" title="Open PDF">
                                                <i class="fa fa-paperclip primary" style="font-size:14px;"></i>
                                            </a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="center"></td>
                                    }
                                    if (dr.ItemArray[4]?.ToString() == "Y")
                                    {
                                        <td class="green center"><i class="fa fa-check" aria-hidden="true"></i></td>

                                    }
                                    if (dr.ItemArray[4]?.ToString() == "N")
                                    {
                                        <td class="red center"><i class="fa fa-times" aria-hidden="true"></i></td>
                                    }
                                }

                                @*<td>@dr.ItemArray[4]</td>*@
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">@Resource.Close</button>
    </div>
</div>




