@using EnRepMobileWeb.Resources;
@using System.Data;
<style>
    #BranchMapping .modal-content, #PartialCustomerAddressDetail .modal-content {
        width: 800px;
        margin: 0 auto;
    }
    #CustomerAddress thead tr > :nth-child(1) {
        z-index: 100 !important;
        position: sticky;
        left: 0;
        top: 0;
    }
    #CustomerAddress tbody tr > :nth-child(1) {
        background: #ffffff;
        position: sticky;
        z-index: 1;
        left: 0;
    }
    .custom-switch {
        position: relative;
        padding-left: 60% !important;
        margin-bottom: 4px;
    }
</style>
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Address @Resource.Information</h2>
        <button type="button" class="close" onclick="popClose_modal();" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pop_top">
        <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height50VH">
            <table id="CustomerAddress" class="table table-striped table-bordered width1800 itmfrz">
                <thead>
                    <tr class="sticky-header">
                        @if (ViewBag.SupplierSetup == "Supplier")
                        {
                            <th width="14%">@Resource.SupplierName</th>
                            <th width="12%">@Resource.Address</th>
                            <th width="11%">@Resource.Country</th>
                            <th width="11%">@Resource.State</th>
                            <th width="10%">@Resource.DistrictAndZone</th>
                            <th width="10%">@Resource.City</th>
                            <th width="6%">@Resource.Pin</th>
                            <th width="10%">@Resource.GSTNumber</th>
                            <th width="8%">@Resource.BillingAddress</th>
                        }
                        else
                        {
                            <th width="14%">@Resource.CustomerName</th>
                            <th width="12%">@Resource.Address</th>
                            <th width="11%">@Resource.Country</th>
                            <th width="11%">@Resource.State</th>
                            <th width="10%">@Resource.DistrictAndZone</th>
                            <th width="10%">@Resource.City</th>
                            <th width="6%">@Resource.Pin</th>
                            <th width="10%">@Resource.GSTNumber</th>
                            <th width="10%">@Resource.ContactPerson</th>
                            <th width="10%">@Resource.ContactNumber</th>
                            <th width="8%">@Resource.BillingAddress</th>
                            <th width="8%">@Resource.ShippingAddress</th>
                        }
                    </tr>
                </thead>
                <tbody id="AddressBody">
                    @if (ViewBag.CustomerAddressDetail != null)
                    {
                        foreach (DataRow rw in ViewBag.CustomerAddressDetail.Rows)
                        {
                            <tr>
                                @if (ViewBag.SupplierSetup == "Supplier")
                                {
                                    <td>@rw.ItemArray[0]</td>
                                    <td>@rw.ItemArray[1]</td>
                                    <td>@rw.ItemArray[2]</td>
                                    <td>@rw.ItemArray[3]</td>
                                    <td>@rw.ItemArray[4]</td>
                                    <td>@rw.ItemArray[5]</td>
                                    <td>@rw.ItemArray[6]</td>
                                    <td>@rw.ItemArray[7]</td>
                                    <td>
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input margin-switch" id="chkCustomerBillingAddress" @(rw.ItemArray[8].ToString() == "Yes" ? "checked" : "") disabled="disabled">
                                            <label class="custom-control-label" for="i_sls"></label>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td>@rw.ItemArray[0]</td>
                                    <td>@rw.ItemArray[1]</td>
                                    <td>@rw.ItemArray[2]</td>
                                    <td>@rw.ItemArray[3]</td>
                                    <td>@rw.ItemArray[4]</td>
                                    <td>@rw.ItemArray[5]</td>
                                    <td>@rw.ItemArray[6]</td>
                                    <td>@rw.ItemArray[7]</td>
                                    <td>@rw.ItemArray[8]</td>
                                    <td>@rw.ItemArray[9]</td>
                                    <td>
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input margin-switch" id="chkCustomerBillingAddress" @(rw.ItemArray[10].ToString() == "Yes" ? "checked" : "") disabled="disabled">
                                            <label class="custom-control-label" for="i_sls"></label>
                                        </div>
                                        @*<input type="checkbox" class="custom-switch" @(rw.ItemArray[8].ToString() == "Yes" ? "checked" : "") disabled="disabled" />*@
                                    </td>
                                    <td>
                                        <div class="custom-control custom-switch col-md-2 col-sm-12">
                                            <input type="checkbox" class="custom-control-input col-md-4 col-sm-12 margin-switch" id="chkCustomerShippingAddress" @(rw.ItemArray[11].ToString() == "Yes" ? "checked" : "") disabled="disabled">
                                            <label class="custom-control-label" for="i_sls"></label>
                                        </div>
                                        @*<input type="checkbox" class="js-switch" @(rw.ItemArray[9].ToString() == "Yes" ? "checked" : "") disabled="disabled" />*@
                                    </td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" onclick="popClose_modal();" data-dismiss="modal">@Resource.Close</button>
    </div>
</div>


