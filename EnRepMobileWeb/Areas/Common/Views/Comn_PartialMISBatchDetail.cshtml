@using EnRepMobileWeb.Resources;
@using System.Data
@{
    string ValDigit = "0.";
    var VD = Convert.ToInt32(Session["ValDigit"].ToString());
    for (var j = 0; j < VD; j++)
    {
        ValDigit += "0";
    }
}
<style>
    #datatable-buttons_filter {
        right: 19%;
    }
</style>
<div class="modal-content">
    <div class="modal-header">
        <h2>@Resource.Batch / @Resource.Serial @Resource.Detail</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" style="padding-top: 0px;">
        <div class="row">
            @if (ViewBag.ShflTrfItemBatchDetails != null)
            {

                <div class="col-md-6 col-sm-12">
                    <label class="col-form-label label-align">@Resource.ItemName</label>
                    <input id="ItemName" value="@ViewBag.ShflTrfItemBatchDetails.Rows[0]["item_name"].ToString()" disabled class="form-control" autocomplete="off" tabindex="5" type="text" name="ItemName" placeholder="@Resource.ItemName">


                </div>
                <div class="col-md-3 col-sm-12" style="padding-left: 0px;">
                    <label class="col-form-label label-align"> @Resource.UOM</label>
                    <input id="OrderQtyUOM" value="@ViewBag.ShflTrfItemBatchDetails.Rows[0]["uom_alias"].ToString()" disabled class="form-control" autocomplete="off" tabindex="5" type="text" name="UOM" placeholder="@Resource.UOM">
                    <input type="hidden" id="hd_OQtyUOMId" value="" />
                </div>
                <div class="col-md-3 col-sm-12" style="padding-left: 0px;">
                    <label class="col-form-label label-align">@Resource.Receipt @Resource.Quantity</label>
                    <input id="" value="@Convert.ToDecimal(ViewBag.ShflTrfItemBatchDetails.Rows[0]["trf_qty"]).ToString(ValDigit)" disabled class="form-control num_right" autocomplete="off" tabindex="5" type="text" name="" placeholder="0000.00">
                </div>


            }
            else
            {
                <div class="col-md-6 col-sm-12">
                    <label class="col-form-label label-align">@Resource.ItemName</label>
                    <input id="ItemName" disabled class="form-control" autocomplete="off" maxlength="25" tabindex="5" type="text" name="ItemName" placeholder="@Resource.ItemName">


                </div>
                <div class="col-md-3 col-sm-12" style="padding-left: 0px;">
                    <label class="col-form-label label-align"> @Resource.UOM</label>
                    <input id="OrderQtyUOM" disabled class="form-control" autocomplete="off" maxlength="25" tabindex="5" type="text" name="UOM" placeholder="@Resource.UOM">
                    <input type="hidden" id="hd_OQtyUOMId" value="" />
                </div>
                <div class="col-md-3 col-sm-12" style="padding-left: 0px;">
                    <label class="col-form-label label-align">@Resource.Receipt @Resource.Quantity</label>
                    <input id="" disabled class="form-control num_right" autocomplete="off" maxlength="25" tabindex="5" type="text" name="" placeholder="0000.00">
                </div>

            }
            <div class="card-box table-responsive dy_table mt-2">
                <div id="" class="sticky-table sticky-ltr-cells sb-container container-example1 OrderHistory height30VH">


                    <table id="datatable-buttons10" class="table table-striped rowhighlighttbl dataTables_filter" cellspacing="0">
                        <thead>
                            <tr class="sticky-header">
                                <th> @Resource.LotNumber</th>
                                <th>@Resource.BatchNumber / @Resource.SerialNumber</th>
                                <th>@Resource.TransferQuantity</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.ShflTrfItemBatchDetails != null)
                            {
                                foreach (DataRow dr in ViewBag.ShflTrfItemBatchDetails.Rows)
                                {
                                    <tr>
                                        <td>@dr["LotNo"].ToString()</td>
                                        <td>@dr["BatchNo"].ToString()</td>
                                        <td>@Convert.ToDecimal(dr["TrfQty"]).ToString(ValDigit)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>


    </div>

</div>

@*@Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
    @Scripts.Render("~/Content/Scripts/DatatablesJs")*@

