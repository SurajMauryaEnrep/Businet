@using EnRepMobileWeb.Resources;
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<script src="~/Content/Scripts/ApplicationLayer/FixedAssetManagement/AssetRetirement/AssetRetirement.js"></script>

<table id="datatable-buttons" class="table table-striped rowhighlighttbl width1800 itmfrz" cellspacing="0" width="100%">
    <thead>
        <tr class="sticky-header">
            <th width="4%"> @Resource.SrNo</th>
            <th width="10%">@Resource.Document   <br /> @Resource.Number</th>
            <th width="8%">@Resource.Document @Resource.Date </th>
            <th width="12%">@Resource.Asset @Resource.Group</th>
            <th hidden="hidden"></th>
            <th width="10%">@Resource.Asset @Resource.Description</th>
            <th width="8%">@Resource.Scrap @Resource.Value</th>
            <th width="8%">@Resource.Retirement  <br />@Resource.Date</th>
            <th width="8%">@Resource.Status</th>
            <th width="8%">@Resource.CreatedBy</th>
            <th width="8%">@Resource.Createdon</th>
            <th width="8%">@Resource.ApprovedBy</th>
            <th width="8%">@Resource.ApprovedOn</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.ListDetail != null)
        {
            int Srno = 1;
            foreach (System.Data.DataRow dr in ViewBag.ListDetail.Rows)
            {
                <tr>
                    <td class="sorting_1">@Srno</td>
                    <td id="DPDocNo" class="ItmNameBreak itmStick tditemfrz">@dr["ARTDocNo"].ToString()</td>
                    <td id="DPDocDt">@dr["ARTDocDt"].ToString()</td>
                    <td style="display:none;" id="SSIDt">@dr["ARTDocDate"].ToString()</td>
                    <td id="AssetGroup">@dr["AssetGroup"].ToString()</td>
                    <td>@dr["AssetDesc"].ToString()</td>
                    <td class="num_right">@dr["scrap_val"].ToString()</td>
                    <td>@dr["retire_dt"].ToString()</td>
                    <td id="FADP_Status">@dr["Status"].ToString()</td>
                    <td>@dr["create_by"].ToString()</td>
                    <td>@dr["CreateDate"].ToString()</td>
                    <td>@dr["app_by"].ToString()</td>
                    <td>@dr["ApproveDate"].ToString()</td>
                </tr>
                Srno = Srno + 1;
            }
        }
    </tbody>
</table>

@if (ViewBag.ListSearch != null)
{
    if (ViewBag.ListSearch == "ListSearch")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
        ViewBag.ListSearch = null;
    }
}








