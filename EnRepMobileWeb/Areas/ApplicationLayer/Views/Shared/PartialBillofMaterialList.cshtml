
@using EnRepMobileWeb.Resources
@{
    Int32 count = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
@*<script src="~/Content/Scripts/Common/CommonJS.js"></script>*@
<script src="~/Content/Scripts/ApplicationLayer/ProductionAndPlanning/BillofMaterial/BillofMaterial.js"></script>
<table id="datatable-buttons" class="table table-striped table-bordered width1700 rowhighlighttbl itmfrz">
    <thead>
        <tr class="sticky-header">

            <th>&nbsp;</th>
            <th width="3%">@Resource.SrNo</th>
            <th hidden="hidden">@Resource.Product <br /> @Resource.Name</th>
            <th hidden="hidden">@Resource.Revision  <br />  @Resource.Number</th>
            <th width="20%" class="itmStick">@Resource.Product <br /> @Resource.Name</th>
            <th>@Resource.UOM</th>
            <th class="num_right">@Resource.Quantity</th>
            <th>@Resource.Revision  <br />  @Resource.Number</th>
            <th>@Resource.Status</th>
            <th>@Resource.Active</th>
            <th>@Resource.Default</th>
            <th width="9%">@Resource.CreatedBy</th>
            <th width="9%">@Resource.Createdon</th>
            <th width="9%">@Resource.ApprovedBy</th>
            <th width="9%">@Resource.ApprovedOn</th>
            <th width="9%">@Resource.AmendedBy</th>
            <th width="9%">@Resource.AmendedOn</th>
            <th>@Resource.remarks</th>

        </tr>
    </thead>
    <tbody>
        @if (ViewBag.GetBOMList != null)
        {
            foreach (System.Data.DataRow item in ViewBag.GetBOMList.Rows)
            {
                count++;
                <tr>
                    <td class="i_Icon"><button type="button" id="hierarchy" class="calculator" onclick="" data-toggle="modal" data-target="#BOMHierarchy" data-backdrop="static" data-keyboard="false"> <img src="/Content/Images/BOM.png" alt="" title="@Resource.BOMHierarchy"> </button></td>
                    <td>@count</td>
                    <td hidden="hidden" id="hdn_product_id">@item["product_id"]</td>
                    <td hidden="hidden" id="hdn_rev_no">@item["rev_no"]</td>
                    <td class="ItmNameBreak itmStick tditemfrz">@item["item_name"]</td>
                    <td id="uom_name">@item["uom_name"]</td>
                    <td class="num_right">@item["qty"]</td>
                    <td id="rev_no" class="num_right">@item["rev_no"]</td>
                    <td id="Doc_Status">@item["status_name"]</td>
                    @if (item["act_status"].ToString() == "Y")
                    {
                        <td class="center"><i class="fa fa-check text-success" aria-hidden="true"></i><span hidden="hidden">@item["act_status"].ToString()</span></td>
                    }
                    else if (item["act_status"].ToString() == "N")
                    {
                        <td class="center"><i class="fa fa-times-circle text-danger" aria-hidden="true"></i><span hidden="hidden">@item["act_status"].ToString()</span></td>
                    }

                    @if (item["def_status"].ToString() == "Y")
                    {
                        <td class="center"><i class="fa fa-check text-success" aria-hidden="true"></i><span hidden="hidden">@item["def_status"].ToString()</span></td>
                    }
                    else if (item["def_status"].ToString() == "N")
                    {
                        <td class="center"><i class="fa fa-times-circle text-danger" aria-hidden="true"></i><span hidden="hidden">@item["def_status"].ToString()</span></td>
                    }

                    <td id="">@item["create_by"]</td>
                    <td id="create_dt">@item["create_dt"]</td>
                    <td>@item["app_by"]</td>
                    <td>@item["app_dt"]</td>
                    <td>@item["mod_by"]</td>
                    <td>@item["mod_dt"]</td>
                    <td>@item["bom_remarks"]</td>
                </tr>
            }
        }
    </tbody>
</table>
@if (ViewBag.SearchData != null)
{
    if (ViewBag.SearchData == "SearchDataBOM")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")
    }
    ViewBag.SearchData = null;
}
