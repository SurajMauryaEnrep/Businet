@using EnRepMobileWeb.Resources;
@{
    var rowId = 0;
}
<script src="~/Content/Scripts/Common/CommonPartialJS.js"></script>
<table id="datatable-buttons" class="table table-striped table-bordered width1900 rowhighlighttbl">
    <thead>
        <tr class="sticky-header">
            <th width="3%">@Resource.SrNo</th>
            <th width="10%" hidden>@Resource.Scheme Id</th>
            <th width="10%">@Resource.Scheme @Resource.Name</th>
            <th width="6%">@Resource.Valid @Resource.From </th>
            <th width="6%">@Resource.Valid  @Resource.to1</th>
            <th width="6%">@Resource.Scheme @Resource.Type</th>
            @*<th width="6%" hidden>@Resource.RevisionNumber</th>*@
            <th width="6%">@Resource.Status</th>
            <th width="6%">@Resource.Active</th>
            <th width="9%">@Resource.remarks</th>
            <th width="7%">@Resource.CreatedBy</th>
            <th width="7%">@Resource.Createdon</th>
            <th width="7%">@Resource.ApprovedBy</th>
            <th width="7%">@Resource.ApprovedOn</th>
            <th width="7%">@Resource.AmendedBy</th>
            <th width="7%">@Resource.AmendedOn</th>
        </tr>
    </thead>
    <tbody id="">
        @if (ViewBag.SchemeList != null)
        {
            int rno = 1;

            foreach (System.Data.DataRow dr in ViewBag.SchemeList.Rows)
            {
                <tr>
                    <td>@rno</td>
                    <td hidden id="hdn_td_schm_id">@dr["schm_id"]</td>
                    <td>@dr["schm_name"]</td>
                    <td>@dr["valid_from"]</td>
                    <td>@dr["valid_upto"]</td>
                    <td>@dr["schm_type"]</td>
                    @*<td hidden>@dr["rev_no"]</td>*@
                    <td>@dr["status_name"]</td>
                    <td class="center">
                        <i class="fa @(dr["active_status"].ToString() == "Y" ? "fa-check text-success" : "fa-times-circle text-danger")" aria-hidden="true"></i>
                        <span hidden="hidden">@dr["active_status"]</span>
                    </td>
                    <td>@dr["remarks"]</td>
                    <td>@dr["create_by"]</td>
                    <td>@dr["create_dt"]</td>
                    <td>@dr["app_by"]</td>
                    <td>@dr["app_dt"]</td>
                    <td>@dr["mod_by"]</td>
                    <td>@dr["mod_dt"]</td>

                </tr>
                rno++;
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {

        EnableDblClickOnSchemeList();
    });
</script>
@if (ViewBag.SchemeListSearch != null)
{
    if (ViewBag.SchemeListSearch == "_Search")
    {
        @Scripts.Render("~/Content/Scripts/DataTableRefreshJs")
        @Scripts.Render("~/Content/Scripts/DatatablesJs")

    }
}
