                                                    <td style='font-size:12px;font-weight:normal;'> @ViewBag.Details.Tables[0].Rows[0]["src_doc_no"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td style='font-size:12px;font-weight:bold;'> Order Date </td>
                                                    <td style='font-size:12px;font-weight:normal;'> @ViewBag.Details.Tables[0].Rows[0]["src_doc_date"].ToString()</td>
                                                </tr>
                                                <tr>
                                                    <td style='font-size:12px;font-weight:bold;'> G/R Number </td>
                                                    <td style='font-size:12px;font-weight:normal;'>@ViewBag.Details.Tables[0].Rows[0]["gr_no"].ToString()</td>
